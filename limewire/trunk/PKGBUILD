# Contributor: Federico Quagliata (quaqo) <quaqo@despammed.com>

pkgname=limewire
pkgver=5.3.6
pkgrel=1
pkgdesc="A popular gnutella client"
arch=('any')
url="http://www.limewire.com"
license=('GPL')
depends=('gcc-libs' 'java-runtime' 'libxt')
makedepends=('unzip')
source=(http://www10.limewire.com/download/LimeWireOther.zip
	limewire)
md5sums=('831e812c194448a363b4fd1f2173d538'
         'f195f848649f399be29550b0c955e7b6')

build() {
    cd ${srcdir}
    install -d $pkgdir/usr/share/java/limewire
    cp -r LimeWire/* $pkgdir/usr/share/java/limewire
    install -D -m755 limewire $pkgdir/usr/bin/limewire

    # Fixing permissions and removing uneeded files
    find $pkgdir/usr/share -type d  -exec chmod 755 {} \;
    cd $pkgdir/usr/share/java/limewire
    rm -rf COPYING README.txt SOURCE Limewire.* limewire* runLime.sh
}
