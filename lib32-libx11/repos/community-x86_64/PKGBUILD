_pkgsourcename=libx11
pkgname=lib32-$_pkgsourcename
pkgver=1.2.1
pkgrel=1
pkgdesc="X11 client-side library"
arch=(x86_64)
url="http://xorg.freedesktop.org/"
license=('custom:XFREE86')
groups=('lib32')
depends=('lib32-libxau' 'lib32-libxdmcp' 'lib32-libxcb' 'lib32-libxcomposite')
source=(ftp://ftp.heanet.ie/mirrors/ftp.archlinux.org/extra/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz)
md5sums=('d7e1cfa2eadb35fe940aeaa25432cd9c')

build() {
	cd $startdir/src
	mkdir -p $startdir/pkg/opt/lib32/usr/lib
	cp -dp usr/lib/*.so* $startdir/pkg/opt/lib32/usr/lib
}
