# Maintainer: dorphell <dorphell@archlinux.org>

pkgname=dillo
pkgver=2.1.1
pkgrel=2
pkgdesc="A small, fast graphical web browser built on FLTK"
arch=(i686 x86_64)
url="http://www.dillo.org"
license=('GPL')
depends=('fltk2' 'libjpeg' 'perl' 'openssl' 'libpng' 'gcc-libs')
backup=(etc/dillo/{dillorc,dpidrc})
source=(http://www.dillo.org/download/$pkgname-$pkgver.tar.bz2)
md5sums=('93f674f2a42d90a1cdb88a6972325954')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc --enable-cookies --disable-dlgui
  make || return 1
  make DESTDIR=$startdir/pkg install
}
