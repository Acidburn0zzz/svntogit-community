post_install() {
  echo "To finish installation of the OSS userspace bridge:"
  echo "1. Add soundcore.preclaim_oss=0 to the kernel boot parameters"
  echo "   (e.g. in /boot/grub/menu.lst)"
  echo "2. Add !snd-pcm-oss and !snd-mixer-oss to the MODULES array in /etc/rc.conf"
  echo "3. Add osspd to DAEMONS array in /etc/rc.conf to run on startup"
  echo "4. Reboot the system"
}
