# Contributor: opqdonut <joel.kaasinen@gmail.com>

pkgname=emacs-lua-mode
pkgver=20110428
_fileid=4814
pkgrel=2
pkgdesc="Emacs lua-mode"
arch=('any')
url="http://lua-mode.luaforge.net"
license=('GPL')
depends=()
makedepends=('emacs')
install=$pkgname.install
source=(http://luaforge.net/frs/download.php/${_fileid}/lua-mode-$pkgver.zip)
md5sums=('cc3177b4a27ea0ddb3307c7b0ab581ff')

build() {
  cd $srcdir/lua-mode
  make compile
}

package() {
  cd $srcdir/lua-mode
  mkdir -p $pkgdir/usr/share/emacs/site-lisp
  cp *.el{c,} $pkgdir/usr/share/emacs/site-lisp/
}
