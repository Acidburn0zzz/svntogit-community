# $Id: PKGBUILD,v 1.13 2009/06/14 03:32:51 pjmattal Exp $
# Maintainer: Paul Mattal <paul@archlinux.org>
# Contributor: Paul Mattal <paul@mattal.com>
pkgname=aurtools
pkgver=1.5.6.2
pkgrel=1.1
pkgdesc="Tools for TUs and Developers for manipulating the community repo"
url="http://aur.archlinux.org"
license=('GPL2')
arch=('i686' 'x86_64')
depends=('python')
makedepends=()
conflicts=(tupkg)
replaces=(tupkg)
source=(ftp://ftp.archlinux.org/other/aur/aur-$pkgver.tar.gz
	'community-64.patch' 'extrapkg')
md5sums=('5ce84dbd6e877dfbaf1a56c50c2b760f'
	 '5af0b5eb3bbf36ffb1c832a9e523f488' 'f40e69ca31f53cf208470f492a25662c')

build() {
  cd $startdir/src/aur-$pkgver/tupkg/client || return 1

  if [ "$CARCH" = "x86_64" ]; then
    patch -i $startdir/src/community-64.patch
  fi

  install -D -m755 tupkg $startdir/pkg/usr/bin/tupkg || return 1
  install -D -m755 $startdir/src/extrapkg $startdir/pkg/usr/bin/communitypkg || return 1
}
