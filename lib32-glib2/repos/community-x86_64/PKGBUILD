_pkgsourcename=glib2
pkgname=lib32-$_pkgsourcename
pkgver=2.22.5
pkgrel=1
pkgdesc="Common C routines used by GTK+ 2.4 and other libs"
arch=('x86_64')
url="http://www.gtk.org/"
license=('LGPL')
groups=('lib32')
depends=('lib32-glibc')
source=(http://mir.archlinux.fr/core/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.xz)

build() {
	cd $srcdir
	mkdir -p $pkgdir/opt/lib32/usr/lib
	cp -dp usr/lib/*.so* $pkgdir/opt/lib32/usr/lib
}
md5sums=('8480721d24609f855f22c6ccbc0d403a')
sha256sums=('96f334a4e3d881b2aeaed6d3cfb1588e02778310022b95021b140314b45f5f6e')
