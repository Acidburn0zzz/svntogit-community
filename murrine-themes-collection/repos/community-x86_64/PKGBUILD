build() {
  cd ${srcdir}
  install -d ${pkgdir}/usr/share/themes

  for i in `ls`; do
    if [ -d "$i" ]; then
      cp -rf ${i} ${pkgdir}/usr/share/themes || return 1
    fi
  done
  
  rm -rf ${pkgdir}/usr/share/themes/MurrineRounded{Icon,LessFramed{,Icon}}
}
