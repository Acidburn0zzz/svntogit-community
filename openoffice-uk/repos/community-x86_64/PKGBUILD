# $Id: PKGBUILD,v 1.10 2009/05/06 01:13:44 BaSh Exp $
# Maintainer: Andrea Scarpino <andrea@archlinux.org>
# Contributor: Roman Kyrylych <roman@archlinux.org>

pkgname=openoffice-uk
pkgver=3.1.0
pkgrel=1
arch=('i686' 'x86_64')
license=('GPL')
pkgdesc="OpenOffice Ukrainian language files"
url="http://www.openoffice.org"
makedepends=('rpmextract')
depends=('openoffice-base')
source=(http://ftp-1.gwdg.de/pub/openoffice/extended/3.1.0rc2/OOo_3.1.0rc2_20090427_LinuxIntel_langpack_uk.tar.gz)
md5sums=('8473f26bd8871eb626569d5f72397e47')

build() {
  cd ${srcdir}/*native_packed*/RPMS
  for i in *.rpm
    do rpmextract.sh $i
  done

  # install openoffice language files
  install -d "${pkgdir}/opt/openoffice/basis-link"
  cp -R opt/openoffice.org/basis3.1/* "${pkgdir}/opt/openoffice/basis-link" || return 1
  cp -R opt/openoffice.org3/* "${pkgdir}/opt/openoffice/basis-link" || return 1
  chown root:root -R "${pkgdir}/opt/openoffice"
}
