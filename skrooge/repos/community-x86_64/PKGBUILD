pkgname=skrooge
pkgver=0.5.2
pkgrel=1
pkgdesc="Personal finances manager for KDE4, allowing you to keep track of your incomes and expenses"
arch=('i686' 'x86_64')
url="http://extragear.kde.org/apps/skrooge/"
license=('GPL')
depends=('kdebase-runtime' 'libofx' 'qca')
makedepends=('cmake' 'automoc4')
source=(http://websvn.kde.org/*checkout*/tags/${pkgname}/${pkgver}/$pkgname-$pkgver.tar.gz)
md5sums=('52887f432cea1fa9d611af971c1048b7')

build() {
  cd ${srcdir}
  mkdir build
  cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_SKIP_RPATH=ON \
    -DCMAKE_{SHARED,MODULE,EXE}_LINKER_FLAGS='-Wl,--no-undefined -Wl,--as-needed' \
    -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
  make DESTDIR=${pkgdir} install
}
