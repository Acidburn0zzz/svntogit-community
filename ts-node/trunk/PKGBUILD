pkgname=ts-node
pkgver=8.5.0
pkgrel=1
pkgdesc="TypeScript execution and REPL for node.js, with source map support"
arch=('any')
url="https://github.com/TypeStrong/ts-node"
license=('MIT')
depends=('nodejs' 'typescript')
makedepends=('npm')
source=(https://registry.npmjs.org/$pkgname/-/$pkgname-$pkgver.tgz)
noextract=($pkgname-$pkgver.tgz)
sha512sums=('7db1b7da2644ba9355d84d857769b6cadd53740c11dc64c2ac94011c37af222101372d40f24aa7ca5d5fbfb8e646699bb5c6a915a6f68256571c9bdf0f579dd1')

package() {
  npm install -g --user root --prefix "$pkgdir"/usr "$srcdir"/$pkgname-$pkgver.tgz
}

