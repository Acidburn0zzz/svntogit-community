post_install() 
{
    dkms add -m fglrx-lts -v $1
    dkms build -m fglrx-lts -v $1
    dkms install -m fglrx-lts -v $1
}

pre_upgrade() 
{
    dkms remove -m fglrx-lts -v $1 --all
}

post_upgrade() 
{
    dkms add -m fglrx-lts -v $1
    dkms build -m fglrx-lts -v $1
    dkms install -m fglrx-lts -v $1
}

pre_remove() 
{
    dkms remove -m fglrx-lts -v $1 --all
}

