pkgname=wkhtmltopdf
pkgver=0.8.3
pkgrel=1
pkgdesc="Simple shell utility to convert html to pdf using the webkit rendering engine, and qt"
arch=('i686' 'x86_64')
url="http://code.google.com/p/wkhtmltopdf/"
license=('GPL3')
depends=('qt')
makedepends=('cmake')
optdepends=('xorg-server: wkhtmltopdf needs X or Xvfb to operate')
source=(http://wkhtmltopdf.googlecode.com/files/$pkgname-$pkgver.tar.bz2)
md5sums=('052c6e62c24cb779c66f925929706b64')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  cmake -D CMAKE_INSTALL_PREFIX=/usr .
  make || return 1
  make DESTDIR="$pkgdir" install

  # Install man page
  m4 wkhtmltopdf.man.m4 > wkhtmltopdf.1 || return 1
  install -Dm644 wkhtmltopdf.1 "$pkgdir/usr/share/man/man1/wkhtmltopdf.1"
}

