pkgname=nautilus-audio-convert
pkgver=0.1
pkgrel=2
pkgdesc="An extension of Nautilus that provides a user-friendly way to convert several audio files"
arch=('i686' 'x86_64')
url="http://www.arakhne.org/article.php3?id_article=11"
license=('GPL')
depends=('nautilus')
makedepends=('intltool')
options=('!libtool')
source=(http://www.arakhne.org/IMG/gz/${pkgname}_$pkgver-1.tar.gz)
md5sums=('b431ca25a66f59ceaed82308f8542d79')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var
  make || return 1
  make DESTDIR=$startdir/pkg install
}
