# Maintainer: Antonio Rojas <arojas@archlinux.org>

_pyname=pysol_cards
pkgname=python-$_pyname
pkgver=0.8.14
pkgrel=1
pkgdesc='Deal PySol FC Cards'
arch=(any)
url='https://pypi.org/project/pysol-cards/'
license=(MIT)
depends=(python-pbr)
makedepends=(python-setuptools)
source=("https://pypi.io/packages/source/p/$_pyname/$_pyname-$pkgver.tar.gz")
sha256sums=('7da4d718890b3cd7629c7d9865b3c16a0439da2f9872471a2cd68d6f44e8c4ba')

package() {
  cd $_pyname-$pkgver
  python setup.py install --root "$pkgdir" --optimize=1
  install -D -m644 LICENSE -t "$pkgdir"/usr/share/licenses/$pkgname
}
