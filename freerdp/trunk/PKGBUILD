# Contributor: Stijn Segers <francesco dot borromini at gmail dot com>

pkgname=freerdp
pkgver=0.8.0
pkgrel=1
pkgdesc="Free RDP client"
arch=('i686' 'x86_64')
url="http://freerdp.sourceforge.net"
license=('GPL')
depends=('openssl' 'libxcursor' 'libcups' 'alsa-lib')
conflicts=('freerdp-git')
changelog=${pkgname}.changelog
options=('!libtool')
#http://downloads.sourceforge.net/project/freerdp/${pkgver%.*}/${pkgname}-${pkgver}.tar.gz)
source=("${pkgname}-${pkgver}.tar.gz::http://freerdp.git.sourceforge.net/git/gitweb.cgi?p=freerdp/freerdp.git;a=snapshot;h=8229ce0936916ea4df1aba7a43fba1ac2de4a0cc;sf=tgz")
md5sums=('514c9ca63d4cd56ad311109d93458e64')

build() {
  cd `find ${srcdir}/ -type d -name freerdp-\*`
  [ -x configure ] || sh ./autogen.sh
  ./configure --prefix=/usr
  make
  make DESTDIR="${pkgdir}" install
}
