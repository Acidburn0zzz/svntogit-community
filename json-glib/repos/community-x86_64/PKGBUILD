pkgname=json-glib
pkgver=0.6.2
pkgrel=3
pkgdesc="JSON library built on GLib"
arch=('i686' 'x86_64')
url="http://live.gnome.org/JsonGlib"
license=('GPL')
depends=('glib2')
makedepends=('pkgconfig')
source=(http://folks.o-hand.com/~ebassi/sources/${pkgname}-${pkgver}.tar.gz)
md5sums=('d98f5580035ad0b37fa11896053a57af')
options=('!libtool')

build(){
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
}
