pkgname=json-glib
pkgver=0.10.0
pkgrel=1
pkgdesc="JSON library built on GLib"
arch=('i686' 'x86_64')
url="http://live.gnome.org/JsonGlib"
license=('GPL')
depends=('glib2')
makedepends=('pkgconfig')
source=(http://ftp.gnome.org/pub/GNOME/sources/${pkgname}/0.10/${pkgname}-${pkgver}.tar.gz)
sha256sums=('6e62d15295096e0c99c3cc868e46495e8562492f437ff4a2d460785852b1773d')
options=('!libtool')

build(){
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
}
