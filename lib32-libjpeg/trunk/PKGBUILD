# $Id: PKGBUILD,v 1.4 2009/02/13 19:51:56 Neverth Exp $
# Maintainer: Pierre Schmitz <pierre@archlinux.de>
# Maintainer: Mikko Seppälä <t-r-a-y@mbnet.fi>
_pkgsourcename=libjpeg
pkgname=lib32-$_pkgsourcename
pkgver=6b
pkgrel=6
pkgdesc="Library of JPEG support functions"
url="ftp://ftp.uu.net/graphics/jpeg/"
license=('custom')
arch=(x86_64)
groups=('lib32')
depends=('lib32-glibc')
source=(ftp://ftp.archlinux.org/extra/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz \
	LICENSE)
md5sums=('3cfb78bd9ac89bbf28130ec825187933'
         '5ec5b8b1cb747c855d84f83200cedc1f')

build() {
	cd $startdir/src
	mkdir -p $startdir/pkg/opt/lib32/usr/lib
	cp -dp usr/lib/*.so* $startdir/pkg/opt/lib32/usr/lib

	install -Dm644 $srcdir/LICENSE \
 	$pkgdir/opt/lib32/usr/share/licenses/$_pkgsourcename/LICENSE
}
