_pkgsourcename=libjpeg
pkgname=lib32-$_pkgsourcename
pkgver=8
pkgrel=2
pkgdesc="Library of JPEG support functions"
url="ftp://ftp.uu.net/graphics/jpeg/"
license=('custom')
arch=(x86_64)
groups=('lib32')
depends=('lib32-glibc')
source=(http://mir.archlinux.fr/extra/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz \
	LICENSE)
build() {
	cd $srcdir
	mkdir -p $pkgdir/opt/lib32/usr/lib
	cp -dp usr/lib/*.so* $pkgdir/opt/lib32/usr/lib

	install -Dm644 $srcdir/LICENSE \
 	$pkgdir/opt/lib32/usr/share/licenses/$_pkgsourcename/LICENSE
}
md5sums=('27e8e1af599ecc0a6a6e0039fbf92746'
         '5ec5b8b1cb747c855d84f83200cedc1f')
