# $Id$
# Maintainer: Sergej Pupykin <pupykin.s+arch@gmail.com>

pkgname=squirrelmail
pkgver=1.4.16
pkgrel=2
pkgdesc="A PHP web-based mail client"
arch=('i686' 'x86_64')
url="http://www.squirrelmail.org/"
license=('GPL')
depends=('php')
backup=(srv/http/squirrelmail/.htaccess \
	srv/http/squirrelmail/config/config_local.php)
source=(http://downloads.sourceforge.net/sourceforge/squirrelmail/squirrelmail-$pkgver.tar.bz2)
md5sums=('22dcf999941e644edc3ea467ed3b9e24')

build() {
  _instdir=${startdir}/pkg/srv/http/squirrelmail
  mkdir -p ${_instdir}
  cd ${_instdir}
  cp -ra ${startdir}/src/squirrelmail-${pkgver}/* .
  echo "deny from all" > .htaccess
}
