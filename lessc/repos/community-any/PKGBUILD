pkgname=lessc
pkgver=1.5.0
pkgrel=1
pkgdesc="A standalone compiler for the LESS CSS language."
arch=('any')
url="http://lesscss.org/"
license=('Apache')
depends=('nodejs')

package() {
    npm install -g --user root --prefix "$pkgdir/usr" less@$pkgver
}
