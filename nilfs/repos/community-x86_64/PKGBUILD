# Maintainer: Geoffroy Carrier <geoffroy.carrier@koon.fr> 
pkgname=nilfs
pkgver=2.0.14
pkgrel=1
pkgdesc="A log-structured file system supporting continuous snapshotting"
arch=(i686 x86_64)
url=http://www.nilfs.org/
license=(GPL2)
depends=(nilfs-utils kernel26)
install=nilfs.install
source=(http://www.nilfs.org/download/$pkgname-$pkgver.tar.bz2)
build() {
  cd "$srcdir/$pkgname-$pkgver"
  sed -i "s_^MDIR.*_MDIR := $pkgdir/lib/modules/\$(KVER)/kernel/fs/nilfs2/_" fs/Makefile
  make || return 1
  make install || return 1
}
md5sums=('ef515560081d3b0f82806f5e63d47779')
