_pkgsourcename=readline
pkgname=lib32-$_pkgsourcename
pkgver=5.2.013
pkgrel=2
pkgdesc="GNU readline library"
arch=(x86_64)
url="ftp://ftp.cwru.edu/pub/bash/"
license=('GPL')
groups=('lib32')
depends=('lib32-glibc' 'lib32-ncurses')
source=(ftp://ftp.archlinux.org/core/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz)
md5sums=('9a7b156fdc297d2e58b14b88ef5dd54b')

build() {
	cd $startdir/src
	mkdir -p $startdir/pkg/opt/lib32/lib
	cp -dp lib/*.so* $startdir/pkg/opt/lib32/lib
}
