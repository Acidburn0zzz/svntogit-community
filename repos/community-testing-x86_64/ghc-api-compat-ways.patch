+    Way(..),
+    wayRTSOnly,
+    wayGeneralFlags,
+    wayUnsetGeneralFlags,
+    buildTag,
+    dynamicGhc,
+  )
+where
+
+import GHC.Driver.Session
+#if MIN_VERSION_GLASGOW_HASKELL(9,2,0,0)
+import GHC.Platform.Ways
+#else
+import GHC.Driver.Ways
+#endif
+
