pkgname=dtkcore
pkgver=2.0.5.3
pkgrel=1
epoch=1
pkgdesc='DTK core modules'
arch=('x86_64')
url="https://github.com/linuxdeepin/dtkcore"
license=('GPL3')
depends=('qt5-base' 'gsettings-qt')
makedepends=('qt5-tools')
source=("$pkgname-$pkgver.tar.gz::https://github.com/linuxdeepin/dtkcore/archive/$pkgver.tar.gz")
sha512sums=('fd54662d23e4c26836b7fb21b9463d1c1d4dcaaf04b2000ff0c93c2b932765da65f9b889e407de2ecccc0f53d019543f67a0b9b7b03409e372363cd7601035e8')

build() {
  cd dtkcore-$pkgver
  qmake-qt5 PREFIX=/usr
  make
}

package() {
  cd dtkcore-$pkgver
  make INSTALL_ROOT="$pkgdir" install
}
