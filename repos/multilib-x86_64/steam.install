post_install() {
  update-desktop-database -q
  gtk-update-icon-cache -q -t -f usr/share/icons/hicolor
  if [[ -z $2 ]]; then
      echo "YOU DO NEED TO INSTALL ONE OF THE OPT DEPENDS FOR YOUR VIDEO CARD"
      echo "You may need to replace lib32-libgl if you are using nvidia or catalyst"
  fi
}

post_upgrade() {
  post_install $1 $2
}

post_remove() {
  post_install $1 removing
}

