# Maintainer: Antonio Rojas <arojas@archlinux.org>

pkgname=stellarsolver
pkgver=2.0
pkgrel=1
pkgdesc='The cross platform Sextractor and Astrometry.net-Based internal astrometric solver'
arch=(x86_64)
url='https://github.com/rlancaste/stellarsolver'
license=(GPL3)
depends=(qt5-base gsl wcslib)
makedepends=(cmake)
source=(https://github.com/rlancaste/stellarsolver/archive/$pkgver/$pkgname-$pkgver.tar.gz)
sha256sums=('6d384fffa0d4eced3bad8eec6691d2e05855760334d8a01fac18306427bbc5f0')

build() {
  cmake -B build -S $pkgname-$pkgver \
    -DCMAKE_INSTALL_PREFIX=/usr
#    -DBUILD_TESTER=ON - install is broken https://github.com/rlancaste/stellarsolver/issues/98
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}
