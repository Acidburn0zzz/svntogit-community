# Maintainer: Mikko Seppälä <t-r-a-y@mbnet.fi>
_pkgsourcename=pango
pkgname=lib32-$_pkgsourcename
pkgver=1.24.2
pkgrel=1
pkgdesc="A library for layout and rendering of text"
arch=(x86_64)
url="http://www.gtk.org//"
license=('LGPL')
groups=('lib32')
depends=('lib32-glib2' 'lib32-cairo' 'lib32-libxft')
source=("ftp://ftp.archlinux.org/extra/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz" "pangorc" "pango.modules" "pangox.aliases")
md5sums=('f73b8e667a92c7f65abb218729ee9613' '73c18abbc434af4cb101dbdd625b271c' '1c552949f5a0d21f9e08e9ff2fd66c8e' 'd7aedce36ebcb0a24e8fa97996296e72')

build() {
	cd $startdir/src
	mkdir -p $startdir/pkg/opt/lib32/usr/lib
	cp -dp usr/lib/*.so* $startdir/pkg/opt/lib32/usr/lib
	cp -RP usr/lib/pango $startdir/pkg/opt/lib32/usr/lib/
	install -d $startdir/pkg/opt/lib32/config/pango/
	install -D -m644 $startdir/pango.modules $startdir/pkg/opt/lib32/config/pango/
	install -D -m644 $startdir/pangorc $startdir/pkg/opt/lib32/config/pango/
	install -D -m644 $startdir/pangox.aliases $startdir/pkg/opt/lib32/config/pango/
}
