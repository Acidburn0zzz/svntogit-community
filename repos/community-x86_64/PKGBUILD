pkgname=fcitx5-qt
pkgver=0.0.0.20200311
_commit=358ee0cac782c816ef2ea75ea1e0ac61b2fe4aaa
pkgrel=1
pkgdesc="Fcitx5 Qt Library"
arch=('x86_64')
url="https://github.com/fcitx/fcitx5-qt"
license=('GPL')
depends=('fcitx5' 'qt5-x11extras')
makedepends=('extra-cmake-modules')
source=("https://github.com/fcitx/fcitx5-qt/archive/$_commit/fcitx5-qt-$_commit.tar.gz")
sha512sums=('b93b0bdfd703c31276d0df002901726fc49fb810fb576daf72a401f52a3acec88213628ca566cd22e3218ca88430ff88084e80a5838ddc3afe17424c7bcf0464')

build(){
  cd $pkgname-$_commit

  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR=/usr/lib -DENABLE_QT4=0 .
  make
}

package() {
  cd $pkgname-$_commit
  make DESTDIR="$pkgdir" install
}
