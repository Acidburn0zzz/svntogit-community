pkgname=deepin-screen-recorder
pkgver=2.1
pkgrel=1
pkgdesc='Deepin Screen Recorder'
arch=('i686' 'x86_64')
url="https://github.com/linuxdeepin/deepin-screen-recorder"
license=('GPL3')
depends=('deepin-tool-kit' 'byzanz' 'ffmpeg')
makedepends=('qt5-tools')
groups=('deepin-extra')
source=("$pkgname-$pkgver.tar.gz::https://github.com/manateelazycat/deepin-screen-recorder/archive/$pkgver.tar.gz")
sha512sums=('b1b4cdd7fe679d27f746a1545b03f86d393765a7e63909bdbb1ed573d435e16f55d98203841edba4cda7f18b57d64c76a24da0fea9d6249a82c0adbf5005e749')

build(){
  cd deepin-screen-recorder-$pkgver
  qmake-qt5 PREFIX=/usr
  make
}

package() {
  cd deepin-screen-recorder-$pkgver
  make INSTALL_ROOT="$pkgdir" install
}
