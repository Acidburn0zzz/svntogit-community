# Contributor: tranquility <trankas@gmail.com>

pkgname=atool
pkgver=0.36.0
pkgrel=1
pkgdesc="A script for managing file archives of various types."
arch=('i686' 'x86_64')
url="http://www.nongnu.org/atool/"
license=('GPL3')
depends=('file' 'perl')
optdepends=('bzip2: required if you want to use atool with bzip2 compressed archives'
            'cpio: required if you want to use atool with cpio archives'
            'gzip: required if you want to use atool with gzip compressed archives'
            'lha: required if you want to use atool with lha, lharc and similar archives'
            'lzma-utils: required if you want to use atool with lzma compressed archives'
            'lzop: required if you want to use atool with lzop compressed archives'
            'p7zip: required if you want to use atool with 7z archives'
            'tar: required if you want to use atool with tar archives'
            'unace: required if you want to use atool with ace archives'
            'zip/unzip: required if you want to use atool with zip archives')
source=(http://savannah.nongnu.org/download/$pkgname/$pkgname-$pkgver.tar.gz)

md5sums=('4eec3e05272e1a0bee6493f2a005adbd')

build() {
  cd "${srcdir}/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make prefix="${pkgdir}/usr" install || return 1
}
