# $Id: PKGBUILD,v 1.12 2009/05/04 20:08:13 Neverth Exp $
# Maintainer: Mikko Seppälä <t-r-a-y@mbnet.fi>
_pkgsourcename=freetype2
pkgname=lib32-$_pkgsourcename
pkgver=2.3.9
pkgrel=2
pkgdesc="TrueType font rendering library"
url="http://freetype.sourceforge.net"
license=('GPL')
arch=(x86_64)
groups=('lib32')
depends=('lib32-zlib')
source=(ftp://ftp.heanet.ie/mirrors/ftp.archlinux.org/extra/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz)
md5sums=('9551b7eb68e7afcf7b1197740ed5432a')

build() {
	cd $startdir/src
	mkdir -p $startdir/pkg/opt/lib32/usr/lib
	cp -dp usr/lib/*.so* $startdir/pkg/opt/lib32/usr/lib
}
