# Maintainer: Alexander F. RÃ¸dseth <xyproto@archlinux.org>

pkgname=shellharden
pkgver=4.1.1
pkgrel=1
pkgdesc='Bash linter and syntax highlighter'
arch=(x86_64)
url='https://github.com/anordal/shellharden'
license=(MPL)
makedepends=(rust)
source=("$url/archive/v$pkgver.tar.gz")
sha256sums=('7d7ac3443f35eb74abfc78fa67db2947d60b7d0782f225f55d6eefafcf294c7c')

build() {
  cd $pkgname-$pkgver

  cargo build --release
}

package() {
  cd $pkgname-$pkgver

  install -Dm755 target/release/$pkgname "$pkgdir/usr/bin/$pkgname"
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

# getver: github.com/anordal/shellharden/blob/master/Cargo.toml
# vim: ts=2 sw=2 et:
