pkgname=fcitx5-qt
pkgver=0.0.0.20200428
_commit=974504b0ff33fc0eb38cdcbea3095e11b123e667
pkgrel=1
pkgdesc="Fcitx5 Qt Library"
arch=('x86_64')
url="https://github.com/fcitx/fcitx5-qt"
license=('GPL')
depends=('fcitx5' 'qt5-x11extras')
makedepends=('extra-cmake-modules')
source=("https://github.com/fcitx/fcitx5-qt/archive/$_commit/fcitx5-qt-$_commit.tar.gz")
sha512sums=('698e26561a5b438fa547ea79952429a44e00b676482d07b2b63ce196ecedd2320c19199e55b7fa525a8c1c5a650bd5da26b4123fa56c2d0a50d346b607c0220a')

build(){
  cd $pkgname-$_commit

  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR=/usr/lib -DENABLE_QT4=0 .
  make
}

package() {
  cd $pkgname-$_commit
  make DESTDIR="$pkgdir" install
}
