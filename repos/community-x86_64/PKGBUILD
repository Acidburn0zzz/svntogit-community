_pkgsourcename=openssl
pkgname=lib32-$_pkgsourcename
pkgver=0.9.8n
pkgrel=1
license='BSD'
pkgdesc="The Open Source toolkit for Secure Sockets Layer and Transport Layer Security"
arch=('x86_64')
groups=('lib32')
url="http://www.openssl.org"
depends=('lib32-glibc')
source=(http://mir.archlinux.fr/core/os/i686/${_pkgsourcename}-${pkgver}-${pkgrel}-i686.pkg.tar.xz)

build() {
  mkdir -p $pkgdir/opt/lib32/usr/lib/
  cp -rPf $srcdir/usr/lib $pkgdir/opt/lib32/usr/
}
md5sums=('b1860e7fd78210542fbb4913aa7e8eb1')
sha256sums=('3e906a6e073e664049430540abd45e5156cd53ef69f8cc05f35dced9867f4487')
