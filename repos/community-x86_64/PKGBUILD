pkgname=fcitx5-skk
pkgver=0.0.0.20200726
_commit=02fb41d84d27969116ca878428978df2275c597a
pkgrel=1
pkgdesc="libskk wrapper for Fcitx5"
arch=('x86_64')
url="https://github.com/fcitx/fcitx5-skk"
license=('GPL')
depends=('fcitx5-qt' 'libskk' 'skk-jisyo')
makedepends=('extra-cmake-modules' 'ninja')
source=("https://github.com/fcitx/fcitx5-skk/archive/$_commit/fcitx5-skk-$_commit.tar.gz")
sha512sums=('9c8198cedcbefba9ebce0a7219f8a1a29915e7e049359ec17bdf615c52d8909e17ddada2c6f0f5511bf2e85cdd780c6662137775c15394a0f4543d8e97171730')

build(){
  cd $pkgname-$_commit

  cmake -GNinja -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR=/usr/lib .
  ninja
}

package() {
  cd $pkgname-$_commit
  DESTDIR="$pkgdir" ninja install
}
