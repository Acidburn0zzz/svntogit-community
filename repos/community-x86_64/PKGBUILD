_pkgsourcename=pango
pkgname=lib32-$_pkgsourcename
pkgver=1.26.1
pkgrel=1
pkgdesc="A library for layout and rendering of text"
arch=('x86_64')
url="http://www.gtk.org//"
license=('LGPL')
groups=('lib32')
depends=('lib32-glib2' 'lib32-cairo' 'lib32-libxft')
source=("http://mir.archlinux.fr/extra/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz" "pangorc" "pango.modules" "pangox.aliases")

build() {
	cd $srcdir
	mkdir -p $pkgdir/opt/lib32/usr/lib
	cp -dp usr/lib/*.so* $pkgdir/opt/lib32/usr/lib
	cp -RP usr/lib/pango $pkgdir/opt/lib32/usr/lib/
	install -d $pkgdir/opt/lib32/config/pango/
	install -D -m644 $srcdir/pango.modules $pkgdir/opt/lib32/config/pango/
	install -D -m644 $srcdir/pangorc $pkgdir/opt/lib32/config/pango/
	install -D -m644 $srcdir/pangox.aliases $pkgdir/opt/lib32/config/pango/
}
sha256sums=('4b1d5c484a7aedc1d93b71da0a6d8887af3283504649aa3998bf25548287bedd'
            'd851b039cf7d03a6c2e3bce9e60cf4e02e6540eea9ffcf835f24d15fe99dc628'
            'ffdf27547030f197d40a1138f500fe0243e285a1046e3f493b5a421082131ad4'
            'e517f1b3f7ccaa83d136d499238379947711529e46613a9728673f405f59f039')
