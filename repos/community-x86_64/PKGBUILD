pkgname=mathomatic
pkgver=14.5.3
pkgrel=4
pkgdesc="General purpose Computer Algebra System written in C"
arch=('i686' 'x86_64')
license=('LGPL')
url="http://mathomatic.orgserve.de/math/"
depends=('readline')
optdepends=('python: for the factorial script /usr/share/doc/mathomatic/factorial/factorial')
source=(http://www.panix.com/~gesslein/$pkgname-$pkgver.tar.bz2)
md5sums=('71651fed9f4fb1e4f591c0ea514e99ef')

build() {
  cd "$srcdir"/$pkgname-$pkgver
  make READLINE=1 || return 1
  make prefix="$pkgdir"/usr install || return 1

  cd primes
  make || return 1
  make prefix="$pkgdir"/usr install || return 1
}
