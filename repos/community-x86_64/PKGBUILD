pkgname=fcitx5-gtk
pkgver=0.0.0.20200904
_commit=0e59f66318faafc3856465a80bf42376aa5b56dc
pkgrel=1
pkgdesc="Fcitx5 gtk im module and glib based dbus client library"
arch=('x86_64')
url="https://github.com/fcitx/fcitx5-gtk"
license=('GPL')
groups=('fcitx5-im')
depends=('fcitx5')
makedepends=('extra-cmake-modules' 'gobject-introspection' 'gtk2' 'gtk3' 'ninja')
source=("https://github.com/fcitx/fcitx5-gtk/archive/$_commit/fcitx5-gtk-$_commit.tar.gz")
sha512sums=('b768f073b0bad87d5f3e67233651c0cbee45f379702f2416cd6230c27f8e6240fdb20f2b1dfa24dd03141434ef70b406debb258efd44b4c45173030dc259e755')

build(){
  cd $pkgname-$_commit

  cmake -GNinja -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR=/usr/lib .
  ninja
}

package() {
  cd $pkgname-$_commit
  DESTDIR="$pkgdir" ninja install
}
