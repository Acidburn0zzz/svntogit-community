# Contributor: Franco Iacomella <yaco@gnu.org>

pkgname=synfig
pkgver=0.62.00
pkgrel=2
pkgdesc="Professional vector animation program (CLI renderer only)"
arch=(i686 x86_64)
url="http://synfig.org"
license=('GPL2')
depends=('libxml++' 'libsigc++2.0' 'etl' 'imagemagick' 'ffmpeg' 'fontconfig' 'libpng' 'libtiff' 'libdv' 'libmng')
conflicts=('synfig-core')
replaces=('synfig-core')
source=(http://downloads.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('773f3507c9fa5dfc084ad7e38a08a33f')

build() {
  cd $srcdir/$pkgname-$pkgver
  [ $NOEXTRACT -eq 1 ] || sed -i '1,2i#include <stdio.h>' src/synfig/time.cpp
  [ $NOEXTRACT -eq 1 ] || ./configure --prefix=/usr --sysconfdir=/etc --with-libavcodec --with-libdv
  make || return 1
  make DESTDIR=$pkgdir install
}
