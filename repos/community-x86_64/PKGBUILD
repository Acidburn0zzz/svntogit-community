pkgname=netperf
pkgver=2.5.0
pkgrel=3
pkgdesc='Benchmarking tool for many different types of networking'
url='http://www.netperf.org/'
license=('custom')
arch=('i686' 'x86_64')
depends=('glibc' 'libsmbios')
install=$pkgname.install
source=("ftp://ftp.netperf.org/netperf/$pkgname-$pkgver.tar.bz2")
md5sums=('fe23629f061a161b9d52d39b16620318')

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr --enable-unixdomain --enable-demo
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
  install -D -m 644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}

