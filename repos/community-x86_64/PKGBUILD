_pkgsourcename=libxcb
pkgname=lib32-libxcb
pkgver=1.2
pkgrel=1
pkgdesc="X11 client-side library"
arch=('x86_64')
url=(http://xcb.freedesktop.org/)
groups=lib32
license=('GPL')
source=(ftp://ibiblio.org/pub/linux/distributions/archlinux/extra/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz)
md5sums=('ee638819749337c539a1387c2a375b95')

build() {
  mkdir -p $startdir/pkg/opt/lib32/usr/lib/
  cp -R $startdir/src/usr/lib/*.so* $startdir/pkg/opt/lib32/usr/lib/
}
