pkgname=ruby-gettext
pkgver=1.93.0
pkgrel=1
pkgdesc="A Native Language Support Library and Tools which is modeled after GNU gettext package"
arch=('i686' 'x86_64')
url="http://www.yotabanana.com/hiki/ruby-gettext.html?ruby-gettext"
license=('RUBY')
depends=('gettext' 'ruby')
source=(http://rubyforge.org/frs/download.php/43496/$pkgname-package-$pkgver.tar.gz)
md5sums=('a23cf402e0bc7fed2857e3d6b6fd1f37')

build() {
    cd "$srcdir/$pkgname-package-$pkgver"
    ruby setup.rb config
    ruby setup.rb setup || return 1
    ruby setup.rb install --prefix="$pkgdir" || return 1
}
