pkgname=fcitx5-qt
pkgver=0.0.0.20200524
_commit=616a1735025468dd4ed5cd62baf928a28011183e
pkgrel=1
pkgdesc="Fcitx5 Qt Library"
arch=('x86_64')
url="https://github.com/fcitx/fcitx5-qt"
license=('GPL')
depends=('fcitx5' 'qt5-x11extras')
makedepends=('extra-cmake-modules')
source=("https://github.com/fcitx/fcitx5-qt/archive/$_commit/fcitx5-qt-$_commit.tar.gz")
sha512sums=('49d00e5cc581394ab0de555cad6e4c647c272d881cebf8260d62c4548ab738f58869e252188f21246bfad3dc324aadda4cdba2da8b72d2ed7f38f335324c4b03')

build(){
  cd $pkgname-$_commit

  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR=/usr/lib -DENABLE_QT4=0 .
  make
}

package() {
  cd $pkgname-$_commit
  make DESTDIR="$pkgdir" install
}
