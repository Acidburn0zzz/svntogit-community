pkgname=fcitx5-qt
pkgver=0.0.0.20200402
_commit=439a478f09c1ece958a67d864bdfdb296ae3ef3c
pkgrel=1
pkgdesc="Fcitx5 Qt Library"
arch=('x86_64')
url="https://github.com/fcitx/fcitx5-qt"
license=('GPL')
depends=('fcitx5' 'qt5-x11extras')
makedepends=('extra-cmake-modules')
source=("https://github.com/fcitx/fcitx5-qt/archive/$_commit/fcitx5-qt-$_commit.tar.gz")
sha512sums=('1cf079d4aee1995479eb93cf8aecf520423d78a6422f33878a3e75fe82de1658d8be7c0088d309b72e8571b81a2215ba5fafc804689ee8a38e14633783014f5d')

build(){
  cd $pkgname-$_commit

  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR=/usr/lib -DENABLE_QT4=0 .
  make
}

package() {
  cd $pkgname-$_commit
  make DESTDIR="$pkgdir" install
}
