_pkgsourcename=glib2
pkgname=lib32-$_pkgsourcename
pkgver=2.20.3
pkgrel=1
pkgdesc="Common C routines used by GTK+ 2.4 and other libs"
arch=(x86_64)
url="http://www.gtk.org/"
license=('LGPL')
groups=('lib32')
depends=('lib32-glibc')
source=(ftp://ftp.heanet.ie/mirrors/ftp.archlinux.org/core/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz)

build() {
	cd $startdir/src
	mkdir -p $startdir/pkg/opt/lib32/usr/lib
	cp -dp usr/lib/*.so* $startdir/pkg/opt/lib32/usr/lib
}
md5sums=('e2085373e0aa0217a74c14085ee864d6')
