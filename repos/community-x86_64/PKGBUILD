pkgname=deepin-calculator
pkgver=1.0.0
pkgrel=1
pkgdesc='An easy to use calculator for ordinary users'
arch=('x86_64')
url="https://github.com/linuxdeepin/deepin-calculator"
license=('GPL3')
depends=('dtkwidget')
makedepends=('qt5-tools' 'python')
groups=('deepin-extra')
source=("$pkgname-$pkgver.tar.gz::https://github.com/linuxdeepin/deepin-calculator/archive/$pkgver.tar.gz")
sha512sums=('d0dd74ab5abd491b1d44c744beb998c9044ee5a8a7d8db377490de5487d5473df64c244436229d8ce4e76b482e91faf228f809a768383542d370ff5b551288b0')

build(){
  cd deepin-calculator-$pkgver
  qmake-qt5 PREFIX=/usr
  make
}

package() {
  cd deepin-calculator-$pkgver
  make INSTALL_ROOT="$pkgdir" install
}
