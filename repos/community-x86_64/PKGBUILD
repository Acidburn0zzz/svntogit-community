# Maintainer: Antonio Rojas <arojas@archlinux.org>

pkgname=bzrtp
pkgver=4.5.7
pkgrel=1
pkgdesc="Opensource implementation of ZRTP keys exchange protocol"
arch=(x86_64)
url="https://github.com/BelledonneCommunications/bzrtp"
license=(GPL2)
depends=(libxml2 bctoolbox sqlite)
makedepends=(bcunit cmake)
source=("$pkgname-$pkgver.tar.gz::https://github.com/BelledonneCommunications/bzrtp/archive/$pkgver.tar.gz")
sha256sums=('e436575b67fc3ee6f9be6493759b173875e1ca1789dd7baf2d29cff3437d40ae')

build() {
  cmake -B build -S $pkgname-$pkgver \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DENABLE_STATIC=OFF
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}
