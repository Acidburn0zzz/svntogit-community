# $Id$
# Maintainer: Corrado Primier <bardo@aur.archlinux.org>
# Contributor: Aurelien Foret <orelien@chez.com>

pkgname=gammu
pkgver=1.25.0
pkgrel=1
pkgdesc="GNU All Mobile Management Utilities"
arch=('i686' 'x86_64')
url="http://www.gammu.org/"
license=('GPL')
depends=('bluez' 'curl' 'libmysqlclient' 'postgresql-libs')
makedepends=('cmake' 'doxygen' 'mysql' 'python')
optdepends=('dialog: support for the gammu-config script')
conflicts=('python-gammu')
provides=('python-gammu')
options=('!makeflags')
source=(http://dl.cihar.com/gammu/releases/${pkgname}-${pkgver}.tar.bz2)
md5sums=('49cb33609cc8cfb4b1f998319cd12b7c')

build() {
  mkdir ${srcdir}/${pkgname}-${pkgver}/build
  cd ${srcdir}/${pkgname}-${pkgver}/build
  cmake -DBUILD_SHARED_LIBS=ON -DCMAKE_INSTALL_PREFIX="/usr" ..
  make || return 1
  make DESTDIR=${pkgdir} install
}

