# Contributor: Jason Taylor <jftaylor21@gmail.com

pkgname=ngspice
pkgver=r18
pkgrel=1
pkgdesc="Mixed-level/Mixed-signal circuit simulator based on Spice3f5, Ciber1b1, and Xspice."
url="http://ngspice.sourceforge.net"
license=("BSD")
arch=(i686 x86_64)
depends=('libxaw' 'readline')
source=(http://downloads.sourceforge.net/$pkgname/ng-spice-rework-18.tar.gz)

build() {
  cd $startdir/src/ng-spice-rework-18
  ./configure --prefix=/usr --mandir=/usr/share/man --infodir=/usr/share/info --enable-xspice --with-readline=yes
  make || return 1
  make DESTDIR=$startdir/pkg install
  install -D -m644 COPYING $startdir/pkg/usr/share/licenses/$pkgname/COPYING
  rm $startdir/pkg/usr/share/info/dir
}
md5sums=('3ab09b939939f7d0fb8cc9d8c77ead71')
