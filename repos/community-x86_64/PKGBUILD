pkgname=iio-sensor-proxy
pkgver=2.6
pkgrel=1
pkgdesc='IIO accelerometer sensor to input device proxy'
arch=('x86_64')
url='https://github.com/hadess/iio-sensor-proxy'
license=('GPL2')
depends=('systemd' 'libgudev' 'gtk3')
source=("https://github.com/hadess/iio-sensor-proxy/releases/download/$pkgver/iio-sensor-proxy-$pkgver.tar.xz")
sha512sums=('f2a667f7146fe02b31ebfb510ef285d5abcbde3a78c90a7ae68030839b6ede3489b643c1b562ab87fde835858ba1c3ce184388db6927d7de39850aac94ce7767')

build() {
  cd $pkgname-$pkgver

  ./configure \
  	--prefix=/usr \
  	--sysconfdir=/etc \
  	--bindir=/usr/bin \
  	--sbindir=/usr/bin \
  	--libdir=/usr/lib \
  	--libexecdir=/usr/lib \
  	--with-dbuspolicydir

  make
}

package() {
  cd $pkgname-$pkgver

  make DESTDIR="$pkgdir" install
}

