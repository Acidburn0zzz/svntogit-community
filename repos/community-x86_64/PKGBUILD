# Contributor: Mikko Seppälä <t-r-a-y@mbnet.fi>
_pkgsourcename=cairo
pkgname=lib32-$_pkgsourcename
pkgver=1.8.8
pkgrel=1
pkgdesc="Cairo vector graphics library"
arch=('x86_64')
url="http://cairographics.org/"
license=('GPL' 'MPL')
groups=('lib32')
depends=('lib32-libpng' 'lib32-libxrender' 'lib32-fontconfig' 'lib32-pixman' 'lib32-xcb-util')
source=(http://mir.archlinux.fr/extra/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz)
md5sums=('5b4bb294bcbcf92315e4f67e75f9c9a9')

build() {
	cd "$srcdir"
	mkdir -p "$pkgdir/opt/lib32/usr/lib"
	cp -dp usr/lib/*.so* "$pkgdir/opt/lib32/usr/lib"
}

