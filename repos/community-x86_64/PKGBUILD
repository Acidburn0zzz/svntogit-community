# Maintainer: Mikko SEppala >t-r-a-y@mbnet.fi>
_pkgsourcename=libxext
pkgname=lib32-$_pkgsourcename
pkgver=1.0.5
pkgrel=2
pkgdesc="X11 miscellaneous extensions library"
url="http://xorg.freedesktop.org/"
license=('custom')
arch=(x86_64)
groups=('lib32')
depends=('lib32-libx11')
source=(ftp://ftp.archlinux.org/extra/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz \
	COPYING)
md5sums=('a1805c9b052058509a2ef2dd0f39f03a'
         'ce97dd25f113a659fef031e6cfe15b53')

build() {
	cd $startdir/src
	mkdir -p $startdir/pkg/opt/lib32/usr/lib
	cp -dp usr/lib/*.so* $startdir/pkg/opt/lib32/usr/lib

        install -Dm644 $srcdir/COPYING \
		$pkgdir/opt/lib32/usr/share/licenses/$_pkgsourcename/COPYING
}
