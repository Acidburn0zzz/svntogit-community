_pkgsourcename=alsa-lib
pkgname=lib32-$_pkgsourcename
pkgver=1.0.23
pkgrel=1
pkgdesc="An alternative implementation of Linux sound support"
url="http://www.alsa-project.org"
license=('GPL')
arch=('x86_64')
groups=('lib32')
depends=('lib32-glibc')
source=(http://mir.archlinux.fr/extra/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.xz)

build() {
	cd $srcdir
	mkdir -p $pkgdir/opt/lib32/usr/lib
	cp -dp usr/lib/*.so* $pkgdir/opt/lib32/usr/lib
}
md5sums=('ee0fc9617d193719795c33931bd7e3f2')
sha256sums=('fa484d84485e453bc6d9ee7cf8b52d076b609dbe1c4c05c9681f27d5b12936bf')
