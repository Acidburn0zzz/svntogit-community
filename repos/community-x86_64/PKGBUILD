pkgname=hatari
pkgver=1.2.0
pkgrel=2
pkgdesc="An Atari ST and STE emulator"
arch=('i686' 'x86_64')
url="http://hatari.sourceforge.net/"
license=('GPL')
depends=('sdl' 'libpng')
source=(http://download.berlios.de/hatari/hatari-$pkgver.tar.bz2)
md5sums=('4aecd42784fae8c5e8c9a9a341146fbb')

build() {
  cd $srcdir/${pkgname}-${pkgver}

  ./configure --prefix=/usr --datadir=/usr/share/${pkgname} --sysconfdir=/etc
  make || continue
  make DESTDIR=$pkgdir install
}
