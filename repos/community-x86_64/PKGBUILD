_pkgsourcename=gnutls
pkgname=lib32-$_pkgsourcename
pkgver=2.8.0
pkgrel=1
pkgdesc="A library which provides a secure layer over a reliable transport layer"
url="http://www.gnu.org/software/gnutls/"
license=('GPL' 'LGPL')
arch=(x86_64)
groups=('lib32')
depends=('lib32-gcc' 'lib32-opencdk' 'lib32-libtasn1' 'lib32-lzo2' 'lib32-readline')
source=(ftp://ftp.archlinux.org/extra/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz)

build() {
	cd $startdir/src
	mkdir -p $startdir/pkg/opt/lib32/usr/lib
	cp -dp usr/lib/*.so* $startdir/pkg/opt/lib32/usr/lib
}
md5sums=('4899d7d1d561b06cec388bd7239f0bbd')
