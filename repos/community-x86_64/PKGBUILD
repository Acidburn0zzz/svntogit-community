# Maintainer: Felix Yan <felixonmars@archlinux.org>

pkgname=ukui-menu
pkgver=2.0.5
pkgrel=1
pkgdesc="Start menu development library and advanced graphical user interface for UKUI"
arch=('x86_64')
license=('GPL')
url="https://github.com/ukui/ukui-menu"
groups=('ukui')
depends=('gsettings-qt' 'qt5-svg')
makedepends=('qt5-tools')
source=("$pkgname-$pkgver.tar.gz::https://github.com/ukui/ukui-menu/archive/v$pkgver.tar.gz")
sha512sums=('82a82264bb479cfdebeda4dfd23db56c8f90878f6f21b2aa13f48dcb1f867badbab066ae26f0f26e00471c288a012972a1f360febcc74d4590c1147aae5fdcc5')

build() {
  cd ukui-menu-$pkgver
  qmake-qt5 PREFIX=/usr
  make
}

package() {
  cd ukui-menu-$pkgver
  make INSTALL_ROOT="$pkgdir" install
}
