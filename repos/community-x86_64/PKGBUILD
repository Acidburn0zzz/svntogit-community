# Maintainer: William Rea <sillywilly@gmail.com>

pkgname=gwenhywfar
pkgver=4.0.0
pkgrel=2
pkgdesc="OS abstraction functions for various projects"
arch=(i686 x86_64)
url="http://www.aquamaniac.de"
options=('!libtool')
license=("LGPL")
depends=('openssl')
optdepends=('gtk2' 'qt')
source=("gwenhywfar-$pkgver.tar.gz::http://www2.aquamaniac.de/sites/download/download.php?package=01&release=53&file=01&dummy=gwenhywfar-$pkgver.tar.gz")
md5sums=('20d54897075d0a86fec522b7e659f388')

build() {
  pacman -Q gwenhywfar && return 1
  cd $srcdir/gwenhywfar-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc --enable-ssl
  make || return 1
  make DESTDIR=$pkgdir install
}

