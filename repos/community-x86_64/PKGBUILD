# Maintainer: Antonio Rojas <arojas@archlinux.org>

pkgname=ktimetracker
pkgver=5.0.0
pkgrel=1
pkgdesc='Todo management and time tracker'
url='https://userbase.kde.org/KTimeTracker'
license=(GPL2)
arch=(x86_64)
depends=(kio kcalendarcore kidletime)
makedepends=(extra-cmake-modules kdoctools)
source=("https://download.kde.org/stable/$pkgname/$pkgver/src/$pkgname-$pkgver.tar.xz"{,.sig})
sha256sums=('ada989b674886acc89bc43bd47369a36dd80be0752f6c229823158e101ec791e'
            'SKIP')
validpgpkeys=(D7A4AE3E9A5A18C98F36477DC7AF5D57818E49C3) # Alexander Potashev <aspotashev@gmail.com>

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake ../$pkgname-$pkgver \
    -DBUILD_TESTING=OFF
  make
}

package() {
  cd build
  make DESTDIR="$pkgdir" install
}
