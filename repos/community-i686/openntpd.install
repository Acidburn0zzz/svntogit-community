createuser() {
  if ! getent group ntp >/dev/null; then
    groupadd -g 87 ntp
  fi

  if ! getent passwd ntp >/dev/null; then
    useradd -g ntp -u 87 -d /var/empty -s /bin/false -c 'Network Time Protocol' ntp
  fi
}

post_install() {
  createuser
  systemd-tmpfiles --create openntpd.conf
}

post_upgrade() {
  createuser
}

post_remove() {
  userdel ntp >/dev/null
}

