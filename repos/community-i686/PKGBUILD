pkgname=perl-test-warn
pkgver=0.11
pkgrel=1
pkgdesc="Perl extension to test methods for warnings "
arch=('i686' 'x86_64')
url="http://search.cpan.org/~CHORNY/Test-Warn"
license=('GPL' 'PerlArtistic')
depends=('perl-tree-dag-node' 'perl-array-compare' 'perl-sub-uplevel>=0.12' 'perl-test-exception')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/C/CH/CHORNY/Test-Warn-$pkgver.tar.gz) 
md5sums=('1000ef6d94b54ca9eb75fb994a7e8bec')

build() {
  cd  $startdir/src/Test-Warn-$pkgver
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1 
  make || return 1
  make install DESTDIR=$startdir/pkg || return 1
  find $startdir/pkg -name '.packlist' -delete
  find $startdir/pkg -name '*.pod' -delete
}
