# $Id$
# Maintainer: Timm Preetz <timm@preetz.us>
pkgname=netbeans
pkgver=6.7
pkgrel=1
pkgdesc="Netbeans IDE development platform"
url="http://www.netbeans.org"
arch=('i686' 'x86_64')
license=('CDDL')
depends=('java-environment')
optdepends=('php: for delevoping programs in php'
			'ruby: for developing programs in the ruby language')
install=$pkgname.install
source=(http://download.netbeans.org/netbeans/6.7/final/zip/netbeans-6.7-200906241340-ml.zip netbeans.desktop)
md5sums=('50c9fbd22048a43413aa01a9c08a2ac1'
         'd15ef85b28007a471de6a8afa4d6e45e')

build() {
  cd $srcdir
  mkdir -p $pkgdir/usr/share/$pkgname

  rm $srcdir/$pkgname/bin/netbeans.exe

  cp -r $srcdir/$pkgname/* $pkgdir/usr/share/$pkgname/

  install -D -m644 $srcdir/netbeans.desktop $pkgdir/usr/share/applications/netbeans.desktop
  mkdir -p $pkgdir/usr/bin
  ln -s /usr/share/netbeans/bin/netbeans $pkgdir/usr/bin/netbeans
}
