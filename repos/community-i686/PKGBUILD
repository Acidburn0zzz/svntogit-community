#$Id$
# Maintainer: Angel 'angvp' Velasquez <angvp[at]archlinux.com.ve> 
# Maintainer: Geoffroy Carrier <geoffroy.carrier@koon.fr>
pkgname=lxlauncher
pkgver=0.2.1
pkgrel=1
pkgdesc="Launcher for Asus EeePC (part of LXDE)"
arch=('i686' 'x86_64')
license=('GPL2')
url="http://lxde.org/"
groups=('lxde')
depends=('gtk2' 'startup-notification' 'gnome-menus' 'menu-cache' 'intltool')
makedepends=('pkgconfig')
source=(http://downloads.sourceforge.net/sourceforge/lxde/${pkgname}-${pkgver}.tar.gz)
md5sums=('5dbe6076eb1a411278e1fc2bccf2d75d')

build() {
	cd "$srcdir/$pkgname-$pkgver"
    msg "patching intltool"
    patch -Np1 -i ../../intltool.patch || return 1
    autoreconf || return 1
	./configure --sysconfdir=/etc --prefix=/usr || return 1
	make || return 1
	make DESTDIR="$pkgdir" install || return 1
}
