# Maintainer: Thomas Dziedzic < gostrc at gmail >

pkgname=sunpinyin
pkgver=2.0.2
pkgrel=1
pkgdesc='SunPinYin is a Statistical Language Model based pinyin IME by Sun.'
arch=('i686' 'x86_64')
url='http://sunpinyin.googlecode.com'
license=('LGPL')
makedepends=('scons')
source=("http://sunpinyin.googlecode.com/files/sunpinyin-${pkgver}.tar.gz")
md5sums=('797e8f5e4c0fdeb5b37d6cd1812cfa2d')

build() {
  cd sunpinyin

  scons \
    --prefix=/usr
}

package() {
  cd sunpinyin

  scons \
    --prefix=/usr \
    --install-sandbox=${pkgdir} \
    install
}
