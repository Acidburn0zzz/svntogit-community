pkgname=proj
pkgver=4.6.1
pkgrel=1
pkgdesc="Cartographic Projections library"
arch=('i686' 'x86_64')
url="http://trac.osgeo.org/proj/"
license=('MIT')
options=('!libtool')
source=(http://download.osgeo.org/proj/$pkgname-$pkgver.tar.gz)
md5sums=('7dbaab8431ad50c25669fd3fb28dc493')

build() {
  cd $startdir/src/proj-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install

  install -D COPYING $startdir/pkg/usr/share/licenses/$pkgname/LICENSE
}
