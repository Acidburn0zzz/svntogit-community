pkgname=ibus-chewing
pkgver=1.6.0
pkgrel=1
pkgdesc='Chinese Chewing Engine for IBus Framework'
arch=('i686' 'x86_64')
license=('GPL')
url='https://github.com/definite/ibus-chewing'
depends=('ibus' 'libchewing' 'libxtst')
makedepends=('swig' 'gob2' 'cmake-fedora')
source=("$pkgname-$pkgver.tar.gz::https://github.com/definite/ibus-chewing/archive/$pkgver.tar.gz")
sha512sums=('9ed4e36a143afb25096bc239558f19c4ab62ba86e2876482e834afabe57080e06c574ceb7692d5e2bfad1d6512e359863e9faa73d16ccdae87ca18a7cc01baf4')

build() {
  cd $pkgname-$pkgver
  cmake . -DCMAKE_INSTALL_PREFIX=/usr \
    -DSYSCONF_INSTALL_DIR=/usr/share \
    -DLIBEXEC_DIR=/usr/lib/ibus
  make
  make translations
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}
