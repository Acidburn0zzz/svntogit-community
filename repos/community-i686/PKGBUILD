pkgname=viking
pkgver=1.0.2
pkgrel=2
pkgdesc="GTK+2 application to manage GPS data"
arch=('i686' 'x86_64')
url="http://viking.sourceforge.net/"
license=('GPL2')
depends=('curl' 'gtk2' 'gnome-doc-utils' 'hicolor-icon-theme')
makedepends=('intltool' 'gpsd')
optdepends=('gpsbabel: for GPS management'
            'gpsd: for GPS management')
options=('!emptydirs')
install=$pkgname.install
changelog=$pkgname.changelog
source=(http://downloads.sourceforge.net/viking/$pkgname-$pkgver.tar.gz)
sha256sums=('25cf580ebee423cd4c44839fbcecf670d90a121e63d13606fb92f4d8d6c038dc')

build() {
  cd ${srcdir}/$pkgname-$pkgver

  ./configure --prefix=/usr
  make
}

package(){
  cd ${srcdir}/$pkgname-$pkgver

  make DESTDIR=${pkgdir} install
}
