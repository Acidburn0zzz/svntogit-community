# Contributor: Jaroslav Lichtblau <dragonlord@aur.archlinux.org>

pkgname=subtitleeditor
pkgver=0.34.0
pkgrel=1
pkgdesc="A GTK+2 tool to edit subtitles for GNU/Linux/*BSD"
arch=('i686' 'x86_64')
url="http://home.gna.org/subtitleeditor/"
license=('GPL3')
depends=('enchant' 'gstreamer0.10-base-plugins' 'gstreamer0.10-good-plugins' 'gstreamermm' 'gtk2' 'gtkmm' 'libxml++' 'xdg-utils')
makedepends=('intltool')
optdepends=('gstreamer0.10-ffmpeg: to be able to view movies inside the subtitleeditor'
            'gstreamer0.10-ugly-plugins: to be able to view movies inside the subtitleeditor'
            'gstreamer0.10-fluendo: to be able to view movies inside the subtitleeditor')
options=('!libtool')
install=subtitleeditor.install
source=(http://download.gna.org/$pkgname/0.34/$pkgname-$pkgver.tar.gz)

md5sums=('6ec20c5935721803e87437273b57a1b6')

build() {
  cd ${srcdir}/$pkgname-$pkgver

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=${pkgdir} install
}
