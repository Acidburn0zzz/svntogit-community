# Contributor: Hugo Doria <hugodoria@gmail.com>

pkgname=liboobs
pkgver=2.22.2
pkgrel=1
pkgdesc="a wrapping library to the System Tools Backends"
url="ftp://ftp.gnome.org/pub/GNOME/sources/liboobs/"
license=('GPL')
depends=('system-tools-backends>=2.8' 'dbus-glib>=0.74' 'dbus>=1.1.2') 
makedepends=('pkgconfig' 'hal')
conflicts=()
arch=('i686' 'x86_64')
source=(http://ftp.gnome.org/pub/GNOME/sources/liboobs/2.22/${pkgname}-${pkgver}.tar.bz2)

build() {
	cd $srcdir/$pkgname-$pkgver
    	./configure --prefix=/usr
      	make || return 1
	make DESTDIR=$pkgdir install
}
md5sums=('84d20702942635e3bebc0c1c35bdad43')
