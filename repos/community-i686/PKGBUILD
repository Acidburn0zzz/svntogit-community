# Maintainer: schuay <jakob.gruber@gmail.com>
# Contributor: stonecrest <stonecrest[at]gmail[dot]com>

pkgname=mac
pkgver=3.99u4b5
_pkgver=3.99-u4-b5
pkgrel=4
pkgdesc="APE codec and decompressor"
arch=('i686' 'x86_64')
url="http://supermmx.org/linux/mac"
license=('custom')
depends=('gcc-libs')
makedepends=('yasm')
source=("http://freshgen.googlecode.com/files/${pkgname}-${_pkgver}.tar.gz"
        "gcc4_errors.patch")
md5sums=('75716b342e07deae58f56a2522362006'
         '771c071831871fe8803d139a56515e86')

build() {
  cd ${srcdir}/$pkgname-${_pkgver}
  patch -Np1 -i ${srcdir}/gcc4_errors.patch
  ./configure --prefix=/usr --enable-assembly=yes 
  make
}
package() {
  cd ${srcdir}/$pkgname-${_pkgver}
  make DESTDIR=${pkgdir} install
  install -Dm644 src/License.htm \
      ${pkgdir}/usr/share/licenses/$pkgname/license.htm
}
