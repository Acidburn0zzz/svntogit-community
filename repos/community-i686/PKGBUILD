pkgname=pandoc
pkgver=1.1
pkgrel=1
pkgdesc="Haskell library and program to convert one markup format to another"
arch=(i686 x86_64)
license=("GPL")
depends=(gmp)
makedepends=('ghc>=6.8' 'haskell-utf8-string' 'haskell-zip-archive')
url="http://johnmacfarlane.net/pandoc/"
source=(http://pandoc.googlecode.com/files/${pkgname}-${pkgver}.tar.gz)

build() {
  cd ${startdir}/src/${pkgname}-${pkgver}/
  make || return 1
  PREFIX=${startdir}/pkg/usr make install || return 1
}


md5sums=('2550a383dda6053907405dedacee860d')
