#!/bin/bash

. /etc/conf.d/ipvsadm

case $1 in
  start)
    ipvsadm-restore < "$CONFIG_FILE"
  ;;
  stop)
    [[ $SAVE_ON_STOP =~ [yY][eE][sS] ]] && $0 save
    ipvsadm -C
  ;;
  save)
    ipvsadm-save -n > "$CONFIG_FILE"
  ;;
  *)
    echo "usage: ${0##*/} {start|stop|save}" >&2
    exit 1
  ;;
esac

