pkgname=firefox-noscript
pkgver=2.1.2.6
_ffver=6.0
pkgrel=1
pkgdesc="plugin for firefox which disables script"
arch=('any')
url="http://noscript.net/"
license=('GPL2')
depends=("firefox")
makedepends=('unzip')
source=(https://secure.informaction.com/download/releases/noscript-$pkgver.xpi)
md5sums=('3de4311facaf66f486a103197658cd9c')

build() {
  depends=("firefox>=${_ffver}" "firefox<=${_ffver/0/99}")

  cd $srcdir
  local emid=$(sed -n -e '/<\?em:id>\?/!d; s/.*\([\"{].*[}\"]\).*/\1/; s/\"//g; p; q' install.rdf)
  local dstdir=$pkgdir/usr/lib/firefox-$_ffver/extensions/${emid}
  install -d $dstdir
#  sed -i 's#<em:maxVersion>.*</em:maxVersion>#<em:maxVersion>7.*</em:maxVersion>#' install.rdf
  cp -R * $dstdir
  rm $dstdir/noscript-$pkgver.xpi
}
