pkgname='jlatexmath'
pkgver='0.9.4'
pkgrel='1'
pkgdesc='Java API to display mathematical formulas written in LaTeX.'
arch=('any')
url='http://forge.scilab.org/index.php/p/jlatexmath/'
license=('APACHE')
depends=('java-runtime')
makedepends=('apache-ant' 'java-environment')
source=("$pkgname-$pkgver.zip::http://forge.scilab.org/index.php/p/jlatexmath/downloads/192/get/")
md5sums=('82ef741396a0486bd5da51d580344a1d')

build() {
return 0
}

package() {
  install -Dm644 $srcdir/$pkgname-$pkgver.zip "$pkgdir/usr/share/java/$pkgname.jar"
}
