pkgname=osinfo-db
pkgver=20160728
pkgrel=1
pkgdesc="Osinfo database of information about operating systems for virtualization provisioning tools"
arch=('any')
url="https://libosinfo.org/"
license=('GPL')
makedepends=('osinfo-db-tools')
options=('!emptydirs')
source=("https://fedorahosted.org/releases/l/i/libosinfo/$pkgname-$pkgver.tar.xz")
noextract=($pkgname-$pkgver.tar.xz)
md5sums=('4dc9d8da62a13d8950e80b86fb319131')

package() {
	osinfo-db-import --root "$pkgdir" --system $pkgname-$pkgver.tar.xz
}
