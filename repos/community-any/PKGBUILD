# Packager: Justin Davis <jrcd83@gmail.com>
# $Id$

pkgname=perlbrew
pkgver=0.41
pkgrel=1
pkgdesc="Manage perl installations in your \$HOME"
arch=(any)
license=(custom:MIT)
options=(!emptydirs)
depends=('perl>=5.8.0' 'perl-capture-tiny>=0.13'
         'perl-cpan-perl-releases>=0.40' 'perl-devel-patchperl>=0.62'
         'perl-file-path-tiny>=0.1' 'perl-local-lib>=1.008')
checkdepends=('perl-test-exception' 'perl-test-output' 'perl-test-spec'
              'perl-io-all' 'perl-path-class')
provides=("perl-app-perlbrew=${pkgver}")
url=https://metacpan.org/release/App-perlbrew
source=("http://search.cpan.org/CPAN/authors/id/G/GU/GUGOD/App-perlbrew-${pkgver}.tar.gz")
md5sums=(67ea22c077e28a7018b43fdc30865182)
sha512sums=(2ca5af3eee62011b655b98693cc338f9572d7777fa3cd9eb99ed9d3ff52713244339fe046f0e52bbc9f1099d00db8206c46bc64f5894354abc3c89248cc0ed46)
_distdir="${srcdir}/App-perlbrew-${pkgver}"

build()
(
    export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$_distdir"
    /usr/bin/perl Makefile.PL
    make
)

check()
(
    export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    cd "$_distdir"
    make test
)

package() {
    cd "$_distdir"
    make DESTDIR="$pkgdir" install
    find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
    mkdir -p "$pkgdir/usr/share/licenses/perlbrew"
    cp LICENSE "$pkgdir/usr/share/licenses/perlbrew/LICENSE"
}

# Local Variables:
# mode: shell-script
# sh-basic-offset: 2
# End:
# vim:set ts=2 sw=2 et:
