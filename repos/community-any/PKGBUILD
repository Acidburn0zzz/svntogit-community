# Maintainer: Thomas Dziedzic < gostrc at gmail >
# Contributor: Anton Bazhenov <anton.bazhenov at gmail>
# Contributor: Michal Bozon <michal.bozon__at__gmail.com>

pkgname=nltk-data
pkgver=2.0
pkgrel=3
pkgdesc='Corpora, grammars and other linguistic data for NLTK'
arch=('any')
url='http://nltk.sourceforge.net/'
license=('custom')
depends=('python-nltk')
makedepends=('unzip')
source=('nltk-data.sh'
        'LICENSE')
md5sums=('56928780af00d962e44d70cba13c2422'
         '69998d5f493a60e7a1467b8003ab8e22')

package() {
  install -m755 -d $pkgdir/usr/share/nltk/data
  python2 -m nltk.downloader -d $pkgdir/usr/share/nltk/data all

  for _dir in $pkgdir/usr/share/nltk/data/*; do
    unzip -u $_dir/\*.zip -d $_dir
    rm -f $_dir/*.zip
  done

  find $pkgdir/usr/share/nltk/data/ -type f -exec chmod 0644 {} \;
  find $pkgdir/usr/share/nltk/data/ -type d -exec chmod 0755 {} \;
  install -m755 -D $srcdir/nltk-data.sh $pkgdir/etc/profile.d/nltk-data.sh
  install -m644 -D $srcdir/LICENSE $pkgdir/usr/share/licenses/ntlk-data/LICENSE
}
