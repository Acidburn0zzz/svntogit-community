# Maintainer: Sven-Hendrik Haase <sh@lutzhaase.com>
# Contributor: Erkin Batu Altunba≈ü <erkinbatu@gmail.com>
pkgname=ponysay
pkgver=0.10
pkgrel=1
pkgdesc="Pony wrapper for cowsay"
url="https://github.com/erkin/ponysay"
arch=('any')
license=('WTFPL')
depends=('cowsay' 'bash')
source=(ponysay-${pkgver}.tar.gz::https://github.com/erkin/ponysay/tarball/${pkgver})
md5sums=('e388f213efdfba0a7bb39a3c4c9af98c')

package() {
  cd ${srcdir}/erkin-ponysay-*
  make DESTDIR="${pkgdir}" install
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}
