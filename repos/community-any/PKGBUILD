url="http://xyne.archlinux.ca/projects/reflector"
depends=(python3)
source=(
  http://xyne.archlinux.ca/projects/reflector/src/reflector-2012.12.24.2.tar.xz
  http://xyne.archlinux.ca/projects/reflector/src/reflector-2012.12.24.2.tar.xz.sig
)
