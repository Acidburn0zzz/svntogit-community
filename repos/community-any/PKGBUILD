#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=reflector
pkgver=2012.02.18.5553
pkgrel=15
pkgdesc='A Python 3 module and script to retrieve and filter the latest Pacman mirror list.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/reflector"
depends=(python3)
source=(http://xyne.archlinux.ca/projects/reflector/archives/reflector-2012.02.18.5553.tar.xz)
sha512sums=(9a3c622d87c5304ae44956038557d80f98017eed3db3629ba38440eea0be1a681b8e0789f627c4e2e834387846aae43bd918b686ea80ba6ea53365e977ddf43c)
md5sums=(0e763468813e126c61c70b8af57b28a1)

build () 
{ 
  cd "$srcdir/$pkgname-$pkgver";
  python3 setup.py install --root="$pkgdir"/ --optimize=1;
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname"
}


