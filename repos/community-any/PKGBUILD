# Maintainer: David Runge <dvzrv@archlinux.org>

_name=kazoo
pkgname=python-kazoo
pkgver=2.6.1
pkgrel=3
pkgdesc="A high-level Python library that makes it easier to use Apache Zookeeper"
arch=('any')
url="https://github.com/python-zk/kazoo"
license=('Apache')
depends=('python-six')
makedepends=('python-setuptools')
checkdepends=('python-coverage' 'python-mock' 'python-nose' 'python-objgraph')
source=("https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${pkgver}.tar.gz")
sha512sums=('613e8271bfd6c8f5ee976b6ee460478c7faad46b32995125a64312208b38755888690cd46b913ff44ba52aeb36de3ec3dd8e222985af77e99f43963a3eb48d48')

prepare() {
  mv -v "${_name}-${pkgver}" "$pkgname-$pkgver"
}

build() {
  cd "$pkgname-$pkgver"
  python setup.py build
}

check() {
  cd "$pkgname-$pkgver"
  export PYTHONPATH="build:${PYTHONPATH}"
  # TODO: run zookeeper here
}

package() {
  cd "$pkgname-$pkgver"
  python setup.py install --skip-build \
    --optimize=1 \
    --prefix=/usr \
    --root="${pkgdir}"
  install -vDm 644 {CHANGES,CONTRIBUTING,README}.md \
    -t "${pkgdir}/usr/share/doc/${pkgname}"
}
