pkgname=phpmyadmin
pkgver=3.2.1
pkgrel=1
pkgdesc="A PHP and hence web-based tool to administrate MySQL over the WWW"
arch=('any')
url="http://www.phpmyadmin.net"
license=('GPL')
depends=('mysql-clients' 'php')
optdepends=('libmcrypt: to use phpMyAdmin internal authentication')
backup=(srv/http/phpMyAdmin/.htaccess \
        srv/http/phpMyAdmin/config.inc.php)
source=(http://downloads.sourceforge.net/sourceforge/${pkgname}/phpMyAdmin-$pkgver-all-languages.tar.bz2)
md5sums=('f6b0273cba534fefa0a1d69b78a003df')

build() {
  _instdir=${startdir}/pkg/srv/http/phpMyAdmin
  mkdir -p ${_instdir}
  cd ${_instdir}
  cp -ra ${startdir}/src/phpMyAdmin-${pkgver}-all-languages/* . 
  echo "deny from all" > .htaccess
}
