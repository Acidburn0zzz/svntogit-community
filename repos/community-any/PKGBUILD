# Contributor: Callan Barrett <wizzomafizzo@gmail.com>
# Contributor: mucknert <mucknert@gmx.net>

pkgname=offlineimap
pkgver=6.3.3
pkgrel=1
pkgdesc='A powerful IMAP/Maildir synchronization tool'
arch=('any')
url='http://offlineimap.org/'
license=('GPL')
depends=('python2')
makedepends=('docutils')
changelog=$pkgname.changelog
source=($pkgname-$pkgver.tar.gz::https://github.com/nicolas33/$pkgname/tarball/v$pkgver)
sha256sums=('762591144f13423da6020ba840e2eb216c4ed45839f1881ac90d9e3dd57f4eca')

package() {
  cd ${srcdir}/nicolas33-${pkgname}-cf325d5

  python2 setup.py build install --root=${pkgdir}

#man page
  rst2man docs/MANUAL.rst $pkgname.1
  install -D -m644 $pkgname.1 ${pkgdir}/usr/share/man/man1/$pkgname.1

#config file examples
  install -D -m644 $pkgname.conf.minimal ${pkgdir}/usr/share/$pkgname/$pkgname.conf.minimal
  install -D -m644 $pkgname.conf ${pkgdir}/usr/share/$pkgname/$pkgname.conf
}
