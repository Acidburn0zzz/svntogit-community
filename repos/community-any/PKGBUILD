pkgname=python-frozendict
pkgver=2.0.3
pkgrel=1
epoch=1
pkgdesc='An immutable dictionary'
url='https://pypi.python.org/pypi/frozendict/'
arch=('any')
license=('LGPL3')
depends=('python')
makedepends=('python-setuptools')
source=("https://pypi.org/packages/source/f/frozendict/frozendict-$pkgver.tar.gz")
sha512sums=('cfeba4b3a5aacc8fb8b3ff90eb697da772247a0087d688d8b946f22d95ecf4bff4259aa932279f64a417f597a60c7c387d4abfd153700595fd1ae8b78b5e03ac')
b2sums=('f2ac1213582f221c933f27dd89c66f722d56815461e8f2a2b05705b19b87eb363eff6a9b063f0f4cf99b108c1660ad23e57027cc712d2af7c65f18dc26cdf1dd')

build() {
	cd frozendict-$pkgver
	python setup.py build
}

package() {
	cd frozendict-$pkgver
	python setup.py install --root="$pkgdir" --optimize=1 --skip-build
}

