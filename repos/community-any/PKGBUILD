# Maintainer: Daniel M. Capella <polyzen@archlinux.org>

pkgname=rofimoji
pkgver=3.0.1
pkgrel=1
pkgdesc='Emoji picker for rofi'
depends=('emoji-font' 'python' 'rofi' 'xdotool' 'xsel')
arch=('any')
url=https://github.com/fdw/rofimoji
license=('MIT')
source=("$url/archive/$pkgver/$pkgname-$pkgver.tar.gz")
sha512sums=('54a455d3e34b18eaa8a7a99d782dfe3ec07b9c09c516da6cc706de87bfdd5cbe702e99f87a05e3668ceff04ee28e2039d48c76e9a8f6a86c9faa8317d26955b8')

package() {
  cd $pkgname-$pkgver
  install -D $pkgname.py "$pkgdir"/usr/bin/$pkgname
  install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname
}

