pkgname=python-jieba
pkgver=0.42
pkgrel=1
pkgdesc="Chinese Words Segementation Utilities"
arch=('any')
url='https://github.com/fxsjy/jieba'
license=('MIT')
depends=('python')
source=("$pkgname-$pkgver.tar.gz::https://github.com/fxsjy/jieba/archive/v$pkgver.tar.gz")
sha512sums=('0af4ea4cb65880bd15f9f5941c60738345599a784f3b8c933e794753824cf625c17983e9ce49148b9f14f8eb2d0a8f8ddb2ce9da48f8bb68251795239815d133')

package() {
  cd jieba-$pkgver
  python setup.py install -O1 --root="$pkgdir"
  install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}
