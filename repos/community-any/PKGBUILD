build() {
  cd "$srcdir"/boto3-$pkgver
  python setup.py build
}

check() {
  cd "$srcdir"/boto3-$pkgver
  # scripts/ci/run-tests
}

package() {
  cd boto3-$pkgver
  python setup.py install --root="$pkgdir" --optimize=1
}
