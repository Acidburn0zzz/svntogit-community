pkgname=reflector
pkgver=2012.12
pkgrel=1
pkgdesc='A Python 3 module and script to retrieve and filter the latest Pacman mirror list.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/reflector"
depends=(python3)
source=(
  http://xyne.archlinux.ca/projects/reflector/archives/reflector-2012.12.tar.xz
  http://xyne.archlinux.ca/projects/reflector/archives/reflector-2012.12.tar.xz.sig
)
sha512sums=(
  27db3f3e4ed0c877043628b84071aeed79055d9ef3822d8edf4d851a320c185b0cab4041b5429aed46d8f8d6760559fa9d84ac5bd6a5cf913f07b65a5d0ee55b
  bd8963988eefd15ee3391586b7bf1182ffe5f619a5939bf38835fdec92d4014ec5049526ab7c47ece6d123b3d46ddd7a75994020709a15d7a4aa02b355ef8e4d
)
md5sums=(
  8875dc4782b29765d87eb2c9dcf052a9
  d785946a9aedba7232a96c86fc4f9048
)

package()
{
  cd "$srcdir/$pkgname-$pkgver"
  python3 setup.py install --root="$pkgdir"/ --optimize=1
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname"
}


