pkgname=gramps
pkgver=3.2.6
pkgrel=1
pkgdesc="A genealogy program, which helps you track your family tree"
arch=('any')
url="http://gramps-project.org/"
license=('GPL')
depends=('python2-pyenchant' 'python2-gnomevfs' 'python2-gtkspell' 'pywebkitgtk' 'desktop-file-utils' 'shared-mime-info' 'gnome-icon-theme' 'xdg-utils')
makedepends=('intltool')
install=$pkgname.install
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('7b6fe3d81d1925f30b0cd63a362a1a18')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
              --disable-mime-install \
              PYTHON=python2
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
