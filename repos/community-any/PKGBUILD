pkgname=perl-cgi
pkgver=3.50
pkgrel=1
pkgdesc="Simple Common Gateway Interface Class"
arch=('any')
url="http://search.cpan.org/dist/CGI"
license=('GPL' 'PerlArtistic')
depends=('perl-fcgi>=0.67')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/L/LD/LDS/CGI.pm-$pkgver.tar.gz)
md5sums=('51d62c74b83e5b6a8b6f88b4e9334387')
md5sums=('51d62c74b83e5b6a8b6f88b4e9334387')

build() {
  cd  $srcdir/CGI.pm-$pkgver
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
  make install DESTDIR=$pkgdir
  find $pkgdir -name '.packlist' -delete
  find $pkgdir -name '*.pod' -delete
}
