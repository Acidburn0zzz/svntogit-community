pkgname=perl-html-tree
pkgver=4.2
pkgrel=1
pkgdesc="Make parse trees out of HTML source"
arch=('any')
url="http://search.cpan.org/dist/HTML-Tree"
license=('GPL' 'PerlArtistic')
depends=('perl>=5.10.0' 'perl-html-tagset>=3.02' 'perl-html-parser>=3.46')
options=('!emptydirs')
source=(http://search.cpan.org/CPAN/authors/id/J/JF/JFEARN/HTML-Tree-$pkgver.tar.gz)
md5sums=('a145ad037ac54b6192c0046383d267da')

build() {
  cd  $srcdir/HTML-Tree-$pkgver
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
  make install DESTDIR=$pkgdir
  find $pkgdir -name '.packlist' -delete
  find $pkgdir -name '*.pod' -delete
}
