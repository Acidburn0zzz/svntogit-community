pkgname=eclipse-cdt
pkgver=8.0.2
pkgrel=1
pkgdesc="C/C++ Plugin for Eclipse"
arch=('any')
url="http://www.eclipse.org/cdt"
license=("EPL")
depends=('eclipse' 'libxtst')
source=("http://download.eclipse.org/tools/cdt/releases/indigo/dist/cdt-master-${pkgver}.zip")
sha256sums=('b7cc8507ee806bb5b40d4ac9f080ad5a89cf47d643ba78fa41bf55c926bed4ac')

package() {
  _installdir="$pkgdir/usr/share/eclipse/dropins/cdt"

  cd "$srcdir"
  install -d "$_installdir/eclipse"
  cp -a features "$_installdir/eclipse"
  cp -a plugins "$_installdir/eclipse"
}

