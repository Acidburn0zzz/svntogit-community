pkgname=reflector
pkgver=2012.7.26
pkgrel=1
pkgdesc='A Python 3 module and script to retrieve and filter the latest Pacman mirror list.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/reflector"
depends=(python3)
source=(
  http://xyne.archlinux.ca/projects/reflector/archives/reflector-2012.7.26.tar.xz
  http://xyne.archlinux.ca/projects/reflector/archives/reflector-2012.7.26.tar.xz.sig
)
sha512sums=(
  78c6d0354d2cd3f9a5db99f09320e044bbdabee8b3dcf79db7bb53de5f88e889289120c58280b81fe375383b1207ecd952e003b86e3c22a5852605271b3697df
  6a55155582ba21632364e9d0893f21dbb4d2361ffd09020fbfee5515a5387781de61f2e78daed0ad6a9ccddca130b9757f9481942f966f9e7e62fb535db03011
)
md5sums=(
  e99d1d503329b7a53da22e26b595ce50
  899a9b1b36b8fcafdf45bb6e180858ed
)

package()
{
  cd "$srcdir/$pkgname-$pkgver"
  python3 setup.py install --root="$pkgdir"/ --optimize=1
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname"
}


