post_install() {
  echo "-- Go to the http://your-server/dokuwiki/install.php to setup dokuwiki"
  chown -R http:http /var/lib/dokuwiki
  chown -R http:http /etc/webapps/dokuwiki
}

post_upgrade() {
  echo "-- Since 20120125_a-1 dokuwiki is in /usr/share/webapps"
  chown -R http:http /var/lib/dokuwiki
  chown -R http:http /etc/webapps/dokuwiki
}
