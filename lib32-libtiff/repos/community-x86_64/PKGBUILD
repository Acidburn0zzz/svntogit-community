_pkgsourcename=libtiff
pkgname=lib32-$_pkgsourcename
pkgver=3.9.2
pkgrel=2
pkgdesc="Library for manipulation of TIFF images"
url="http://www.libtiff.org/"
arch=('x86_64')
license=('custom')
groups=('lib32')
depends=('lib32-zlib' 'lib32-libjpeg')
source=(http://mir.archlinux.fr/extra/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz)

build() {
	cd $srcdir
	mkdir -p $pkgdir/opt/lib32/usr/lib
	cp -dp usr/lib/*.so* $pkgdir/opt/lib32/usr/lib
}
md5sums=('2e716064cf678362f9cfed98bdafa73d')
sha256sums=('ee80e813b2f513d186b7a383df7995dfb5d5671ac01c2d326120bc667ef36b23')
