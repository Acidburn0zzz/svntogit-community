pkgname=syncekonnector
pkgver=0.3.2
pkgrel=3
pkgdesc="SynCE KDE integration"
arch=('i686' 'x86_64')
url="http://synce.sourceforge.net/"
depends=(kdepim synce-librapi)
makedepends=(synce-kde synce-rra)
license=("GPL")
source=(http://downloads.sourceforge.net/sourceforge/synce/$pkgname-$pkgver.tar.gz)
md5sums=('a0ec8a8d4d8a9302b9009bc78439a004')

build() {
  cd $startdir/src/$pkgname-$pkgver
  patch -p0 < $startdir/librakikpimsync_synceengine_h.diff
  ./configure --prefix=/opt/kde
  make || return 1
  make DESTDIR=$startdir/pkg install
}
