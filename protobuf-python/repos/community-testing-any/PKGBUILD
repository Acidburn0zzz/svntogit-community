pkgname=protobuf-python
_xpkgname=protobuf
pkgver=2.3.0
pkgrel=2
pkgdesc="Google's data interchange format utility (python API)."
url="http://code.google.com/p/protobuf/"
license=('Apache')
arch=('any')
depends=("python2" "${_xpkgname}>=${pkgver}")
makedepends=('setuptools')
source=(http://protobuf.googlecode.com/files/$_xpkgname-$pkgver.tar.bz2)
md5sums=('f2964f636b3c67d1e9d8b90819fa8ddb')

build() {
  cd $srcdir/$_xpkgname-$pkgver/python
  python2 setup.py install --prefix=/usr --root $pkgdir
}
