package_lua51-socket() {
  depends=('lua51')
  replaces=('luasocket')
  conflicts=('luasocket')

  cd luasocket-$pkgver
  make DESTDIR="$pkgdir/" \
    INSTALL_TOP_SHARE='$(DESTDIR)/usr/share/lua/5.1' \
    INSTALL_TOP_LIB='$(DESTDIR)/usr/lib/lua/5.1' install
  install -D -m0644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
