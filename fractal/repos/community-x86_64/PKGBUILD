# Maintainer: Bruno Pagani <archange@archlinux.org>

pkgname=fractal
pkgver=0.1.22
pkgrel=1
pkgdesc="A GTK+ client for Matrix written in Rust"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Fractal"
license=('GPL2')
depends=('gtk3')
makedepends=('meson' 'rust')
_md5=74c445e0ce585ab7630efafbf47e2a60
source=("https://gitlab.gnome.org/danigm/fractal/uploads/${_md5}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('06231c04133047d88827777381518cdde4e38aac6b1e90dd6d53fd4bd15442f5')

build() {
    cd ${pkgname}-${pkgver}
    ./configure --prefix=/usr
    make
}

package() {
    cd ${pkgname}-${pkgver}
    make DESTDIR="${pkgdir}" install
}
