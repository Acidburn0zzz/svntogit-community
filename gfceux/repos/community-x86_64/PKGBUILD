pkgname=gfceux
pkgver=2.1.0a
pkgrel=1
pkgdesc="A GUI for the popular Nintendo Emulator, FCEUX"
arch=('i686' 'x86_64')
url="http://dietschnitzel.com/gfceu/"
license=('GPL')
depends=('pygtk' 'fceux')
provides=('gfceu')
replaces=('gfceu')
source=(http://downloads.sourceforge.net/fceultra/fceux-${pkgver}.src.tar.bz2)
md5sums=('d48ed087e1cd5018ca8a4c9142130948')
sha1sums=('a76d32d8095886a283bdd97542577d8592e0a08b')

build() {
  cd ${srcdir}/$pkgname
  python setup.py install --root=$startdir/pkg
}
