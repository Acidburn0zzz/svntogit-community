pkgname=ftpmonitor
pkgver=0.80
pkgrel=1
pkgdesc="A simple panel applet for KDE, which monitors ftpd(vsftpd/ncftpd/pure-ftpd/proftpd) and generates passive popups"
arch=('i686' 'x86_64')
url="http://queens.db.toronto.edu/~nilesh/linux/ftpmonitor/"
license=('GPL')
depends=('kdebase')
source=(http://queens.db.toronto.edu/~nilesh/linux/ftpmonitor/$pkgname-$pkgver.tar.gz)
md5sums=('d56ca1b388fd858b7fce36f3f4880074')
options=('libtool')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure
  make || return 1
  make DESTDIR=$startdir/pkg install
}
