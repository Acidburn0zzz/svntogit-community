pkgname=fgetty
pkgver=0.6
pkgrel=5
pkgdesc="A mingetty stripped of the printfs"
arch=('i686' 'x86_64')
url='http://www.fefe.de/fgetty/'
license=('GPL')
depends=('dietlibc')
options=(zipman)
source=(http://www.fefe.de/fgetty/${pkgname}-${pkgver}.tar.bz2)
md5sums=('399dd207805b75ea99ed814943d71c60')

build() {
  export PATH=$PATH:/opt/diet/bin
  cd ${srcdir}/${pkgname}-${pkgver}
  make || return 1
  mkdir -p ${pkgdir}/usr/man/man8
  make DESTDIR=${pkgdir} install || return 1
  mv ${pkgdir}/usr/man ${pkgdir}/usr/share/
}
