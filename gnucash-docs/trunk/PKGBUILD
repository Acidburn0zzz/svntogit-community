pkgname=gnucash-docs
pkgver=3.10
pkgrel=1
pkgdesc='Documentation for GnuCash'
arch=(any)
url='https://gnucash.org/docs.phtml'
license=(FDL)
depends=(yelp)
source=(https://downloads.sourceforge.net/gnucash/$pkgname-$pkgver.tar.gz)
sha256sums=('25c74fd5a1a1ba58c7e6d732a3e4ad607f0b94283266f0195c7986b8352a790d')

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}
