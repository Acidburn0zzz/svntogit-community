pkgname=gnucash-docs
pkgver=3.9
pkgrel=1
pkgdesc='Documentation for GnuCash'
arch=(any)
url='https://gnucash.org/docs.phtml'
license=(FDL)
depends=(yelp)
source=(https://downloads.sourceforge.net/gnucash/$pkgname-$pkgver.tar.gz)
sha256sums=('34a77b28492e7efe8208a695b93cf60f04fd639288cdda1f67d30cf7f39a120d')

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}
