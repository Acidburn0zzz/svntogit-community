pkgname=gitg
pkgver=0.0.6
pkgrel=2
pkgdesc='A GIT repository viewer based on GTK+'
arch=('i686' 'x86_64')
url='http://trac.novowork.com/gitg/'
license=('GPL')
depends=('gconf' 'gtksourceview2' 'git' 'desktop-file-utils')
makedepends=('intltool' 'pkgconfig')
install="${pkgname}.install"
source=("http://ftp.de.debian.org/debian/pool/main/g/gitg/gitg_0.0.6.orig.tar.gz")
md5sums=('513deb94ea28f98cf58224d7c3980316')

build() {
  cd ${pkgname}-${pkgver}

  ./configure \
    --prefix=/usr \
    --disable-schemas-install \
    --with-gconf-schema-file-dir=/usr/share/gconf/schemas

  make
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
}
