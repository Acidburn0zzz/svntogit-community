# gitg install file

post_install() {
  usr/sbin/gconfpkg --install gitg
  update-desktop-database -q
}

pre_upgrade() {
  pre_remove $1
}

post_upgrade() {
  post_install $1
}

pre_remove() {
  usr/sbin/gconfpkg --uninstall gitg
}

post_remove() {
  update-desktop-database -q
}
