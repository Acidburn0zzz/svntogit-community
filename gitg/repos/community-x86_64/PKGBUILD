pkgname=gitg
pkgver=0.1.0
pkgrel=2
pkgdesc='A GIT repository viewer based on GTK+'
arch=('i686' 'x86_64')
url='http://trac.novowork.com/gitg/'
license=('GPL')
depends=('gconf' 'gtksourceview2' 'git' 'desktop-file-utils' 'gsettings-desktop-schemas')
makedepends=('intltool')
install="${pkgname}.install"
source=("ftp://ftp.gnome.org/pub/GNOME/sources/gitg/0.1/${pkgname}-${pkgver}.tar.bz2")
sha256sums=('298f9771b7288406ae9a32b9117c1a963b72d9c21652987378ccb68eec2fcbc5')

build() {
  	cd ${pkgname}-${pkgver}

  	./configure \
    		--prefix=/usr
  	make
}

package() {
  	cd ${pkgname}-${pkgver}

  	make DESTDIR=${pkgdir} install
}
