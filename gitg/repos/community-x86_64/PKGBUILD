pkgname=gitg
pkgver=0.0.8
pkgrel=1
pkgdesc='A GIT repository viewer based on GTK+'
arch=('i686' 'x86_64')
url='http://trac.novowork.com/gitg/'
license=('GPL')
depends=('gconf' 'gtksourceview2' 'git' 'desktop-file-utils')
makedepends=('intltool' 'pkgconfig')
install="${pkgname}.install"
source=("ftp://ftp.gnome.org/pub/GNOME/sources/gitg/0.0/${pkgname}-${pkgver}.tar.bz2")
sha256sums=('255018ffdc04298f87234d2fcce56acda983fe6efc6e31d53349fa241cf2f4c4')

build() {
  	cd ${pkgname}-${pkgver}

  	./configure \
    		--prefix=/usr \
    		--disable-schemas-install \
    		--with-gconf-schema-file-dir=/usr/share/gconf/schemas

  	make
}

package() {
  	cd ${pkgname}-${pkgver}

  	make DESTDIR=${pkgdir} install
}
