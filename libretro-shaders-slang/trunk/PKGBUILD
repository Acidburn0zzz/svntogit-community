# Maintainer: Maxime Gauduin <alucryd@archlinux.org>

pkgname=libretro-shaders-slang
pkgver=700
pkgrel=1
pkgdesc='Collection of shaders for libretro'
arch=(any)
url=https://www.libretro.com/
license=(GPL3)
groups=(libretro)
provides=(libretro-shaders)
makedepends=(git)
source=(libretro-shaders-slang::git+https://github.com/libretro/slang-shaders.git#commit=02c53d660534bdb547515b201cef4c049fbec95f)
sha256sums=(SKIP)

pkgver() {
  cd libretro-shaders-slang

  git rev-list --count HEAD
}

package() {
 make DESTDIR="${pkgdir}" -C libretro-shaders-slang install
}

