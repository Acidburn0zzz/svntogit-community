pkgname=bbdock
pkgver=0.2.8
pkgrel=2
pkgdesc="An application launcher dockapp supporting PNG files and transparency"
url="http://bbdock.nethence.com/"
depends=('libx11' 'libpng' )
source=("http://bbdock.nethence.com/download/$pkgname-$pkgver.tar.gz")
arch=('i686' 'x86_64')
md5sums=('e5f490027b888b8eb71ce5585794cda9')
license=('BSD')

build() {
	cd ${startdir}/src/${pkgname}-${pkgver}/
    patch -Np1 -i ${startdir}/c_headers.patch || return 1
	./configure --prefix=/usr
    make || return 1
    make DESTDIR=${startdir}/pkg install

}

