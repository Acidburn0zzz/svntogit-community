pkgname=awesome-revelation
pkgver=0.3
pkgrel=1
pkgdesc='Show all clients per screen in Awesome window manager'
arch=('any')
url='https://github.com/bioe007/awesome-revelation'
license=('GPL3')
depends=('awesome')
source=("$pkgname-$pkgver.tar.gz::https://github.com/bioe007/$pkgname/tarball/$pkgver")
md5sums=('e9be20497cbe4435144ffb5653344246')

package() {
  cd *-$pkgname-*
  # Install the library
  install -Dm644 init.lua "$pkgdir/usr/share/awesome/lib/revelation/init.lua"
  # Install documentation
  install -Dm644 README.md "$pkgdir/usr/share/doc/$pkgname/README"
}

# vim:set ts=2 sw=2 ft=sh et:
