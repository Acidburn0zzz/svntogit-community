# Contributor: Jaroslaw Swierczynski <swiergot@aur.archlinux.org>

pkgname=em8300-utils
pkgver=0.17.4
pkgrel=1
arch=('i686' 'x86_64')
pkgdesc="DXR3 and Hollywood+ driver"
url="http://dxr3.sourceforge.net/"
license=('GPL2')
conflicts=('em8300-cvs')
install=$pkgname.install
#source=(http://dl.sourceforge.net/sourceforge/dxr3/em8300-$pkgver.tar.gz)
source=(http://dxr3.sourceforge.net/download/em8300-$pkgver-rc4.tar.gz)

build() {
  cd $srcdir/em8300-$pkgver-rc4

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$pkgdir install || return 1

  install -m 644 -D modules/em8300-udev.rules $srcdir/lib/udev/rules.d/em8300.rules || return 1
}
sha256sums=('4b7c566c5a6c058e8c82844cf960f008a4088561d0e08f1934a09b000f373c8a')
