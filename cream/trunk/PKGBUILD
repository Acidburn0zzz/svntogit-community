# $Id$
# Maintainer: Jaroslav Lichtblau <dragonlord@aur.archlinux.org>

pkgname=cream
pkgver=0.43
pkgrel=1
pkgdesc="Modern easy-to-use configuration of the Vim text editor"
arch=('any')
url="http://cream.sourceforge.net/"
license=('GPL')
depends=('gvim' 'desktop-file-utils')
install=$pkgname.install
changelog=$pkgname.changelog
source=(http://downloads.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
sha256sums=('b7adee33d5464f985a71722fdbe133e726bffebf34eae14c33674c4c5327d777')

package() {
  cd ${srcdir}/$pkgname-$pkgver

  DESTDIR=${pkgdir} sh INSTALL.sh /usr

#cleanup
  rm ${pkgdir}/usr/share/icons/$pkgname.svg
  chmod a-x ${pkgdir}/usr/share/applications/$pkgname.desktop
}
