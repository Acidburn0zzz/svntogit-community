# Maintainer: Thomas Dziedzic < gostrc at gmail >
# Contributor: Chris Baker <baker.chris.3@gmail.com>

pkgname=python2-nltk
pkgver=2.0.1rc2
pkgrel=1
pkgdesc='Software for natural language processing'
arch=('any')
url='http://www.nltk.org/'
license=('APACHE')
depends=('python2-yaml')
optdepends=('nltk-data: test data'
            'python2-numpy: used for calculations'
            'python2-matplotlib: used for plotting')
replaces=('python-nltk')
provides=('python-nltk')
source=("nltk-${pkgver}.tar.gz::https://github.com/nltk/nltk/tarball/${pkgver}")
md5sums=('f2ad4b8c4f51e7658b658aa1c460f924')

build() {
  cd nltk-nltk-*

  python2 setup.py build
}

package() {
  cd nltk-nltk-*

  python2 setup.py install --root=${pkgdir} --optimize=1
}
