# Maintainer: Douglas Soares de Andrade <dsa@aur.archlinux.br>

pkgname=python-pyro
pkgver=3.8.1
_realver=3.8.1
pkgrel=2
pkgdesc="Python Remote Objects"
arch=('i686' 'x86_64')
license=('MIT')
depends=('python>=2.4')
source=(http://downloads.sourceforge.net/sourceforge/pyro/Pyro-${_realver}.tar.gz pyro-unattend.patch)
md5sums=('8ab110b43f891c9664628133753c903a' '7652e1163c0529b0b4f6c6d0088767c9')
sha1sums=('88270d400a0dd7286bef1a8c934c5dc7fe98b57a' 'b0fbd9686823b90afb3d0bae3e585757fcff42c4')
url="http://pyro.sourceforge.net"

build() {
    cd $startdir/src/Pyro-${_realver}
    patch -p1 < ../pyro-unattend.patch || return 1
  
    python setup.py install --root=$startdir/pkg || return 1

    install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE || return 1
}
