pkgname=shorewall-perl
pkgver=4.2.10.1
pkgrel=1
pkgdesc="Perl compiler for shorewall firewall"
arch=('i686' 'x86_64')
url="http://www.shorewall.net"
license=('GPL')
depends=('perl')
options=('!emptydirs')
source=(http://www.shorewall.net/pub/shorewall/4.2/shorewall-4.2.10/$pkgname-$pkgver.tar.bz2)
md5sums=('1cf65752b8b925d8f8a0ec5622df7cda')

build() {
  cd ${srcdir}/$pkgname-$pkgver
  DEST=/etc/rc.d INIT=shorewall PREFIX=${pkgdir} ./install.sh || return 1
}
