pkgname=deepin-dbus-factory
pkgver=3.1.15
pkgrel=1
pkgdesc='GO DBus factory for DDE'
arch=('any')
url="https://github.com/linuxdeepin/dbus-factory"
license=('GPL3')
makedepends=('go-pie' 'jq' 'libxml2' 'deepin-dbus-generator')
source=("$pkgname-$pkgver.tar.gz::https://github.com/felixonmars/dbus-factory/archive/$pkgver.tar.gz")
sha512sums=('71d12ad3551c04118597050327c900c50e107083012f2d7481b0dd99e072f8a11ceafa3d99aae94ea7e596d9a8310f0094520d131a0bc770b9b646942ebbe99e')

build(){
  cd dbus-factory-$pkgver
  make
}

package() {
  cd dbus-factory-$pkgver
  make GOPATH=/usr/share/gocode DESTDIR="$pkgdir" install
}
