# $Id$
# Maintainer: Sergej Pupykin <pupykin.s+arch@gmail.com>

pkgname=phpldapadmin
pkgver=1.1.0.6
pkgrel=1
pkgdesc="A PHP and hence web-based tool to administrate LDAP over the WWW"
arch=('i686' 'x86_64')
url="http://phpldapadmin.sourceforge.net/"
license=('GPL')
depends=('libldap' 'php')
backup=(srv/http/phpldapadmin/.htaccess)
source=(http://downloads.sourceforge.net/sourceforge/phpldapadmin/phpldapadmin-$pkgver.tar.gz)
md5sums=('f763977c46d09c5801d9af4ebde07a4f')

build() {
  _instdir=${startdir}/pkg/srv/http/phpldapadmin
  mkdir -p ${_instdir}
  cd ${_instdir}
  cp -ra ${startdir}/src/phpldapadmin-${pkgver}/* . 
  echo "deny from all" > .htaccess
}
