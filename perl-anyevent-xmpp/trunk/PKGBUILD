# Maintainer: Jakob Nixdorf <flocke@user-helfen-usern.de>

pkgname=perl-anyevent-xmpp
pkgver=0.51
pkgrel=2
pkgdesc="An implementation of the XMPP Protocol"
arch=('any')
depends=('perl>=5.10.0' 'glibc' 'perl-anyevent' 'perlxml' 'perl-digest-sha1'
	 'perl-object-event' 'perl-authen-sasl' 'perl-net-libidn'
	 'perl-xml-writer' 'perl-net-ssleay')
license=('GPL' 'PerlArtistic')
url="http://search.cpan.org/dist/AnyEvent-XMPP"
options=('force' '!emptydirs')
replaces=('perl-net-xmpp2')
source=(http://search.cpan.org/CPAN/authors/id/E/EL/ELMEX/AnyEvent-XMPP-$pkgver.tar.gz)
md5sums=('d867d4a756c034cd36933dbd61ec1ad0')

build()
{
  cd ${srcdir}/AnyEvent-XMPP-$pkgver

  perl Makefile.PL INSTALLDIRS=vendor
  make
  make DESTDIR=${pkgdir} install

  # Remove .packlist and perllocal.pod files.
  find ${pkgdir} -name '.packlist' -delete
  find ${pkgdir} -name 'perllocal.pod' -delete
}
