pkgname=lib32-curl
pkgver=7.19.5
pkgrel=2
pkgdesc="An URL retrival utility and library"
arch=(x86_64)
url="http://curl.haxx.se"
depends=('lib32-openssl' 'lib32-zlib')
license=('MIT')
groups=lib32
source=(ftp://ftp.archlinux.org/extra/os/i686/${pkgname/lib32-/}-${pkgver}-${pkgrel}-i686.pkg.tar.gz)
md5sums=('3f3f1ba4d502a456c24b452c3f480a9a')

build() {
  mkdir -p ${startdir}/pkg/opt/lib32/usr/lib
  cp -rPf ${startdir}/src/usr/lib/*.so* $startdir/pkg/opt/lib32/usr/lib
}
