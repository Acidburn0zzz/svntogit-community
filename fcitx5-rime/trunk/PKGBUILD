pkgname=fcitx5-rime
pkgver=0.0.0.20200911
_commit=6da82ec569e3a83a94f7c1fff71fce885a6b2252
pkgrel=1
pkgdesc="RIME support for Fcitx5"
arch=('x86_64')
url="https://github.com/fcitx/fcitx5-rime"
license=('GPL')
depends=('fcitx5' 'librime')
makedepends=('extra-cmake-modules' 'ninja')
source=("https://github.com/fcitx/fcitx5-rime/archive/$_commit/fcitx5-rime-$_commit.tar.gz")
sha512sums=('9c07d12ae6e968df865db7895860c711ceb29d9dc579f68480830cb946f30e78067bed32174a771c82a9897434fc3eb4e6bffbc4973dd9041671e3cc37818d1d')

build(){
  cd $pkgname-$_commit

  cmake -GNinja -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR=/usr/lib .
  ninja
}

package() {
  cd $pkgname-$_commit
  DESTDIR="$pkgdir" ninja install
}
