_pkgsourcename=libxi
pkgname=lib32-$_pkgsourcename
pkgver=1.2.1
pkgrel=1
pkgdesc="X11 Input extension library"
url="http://xorg.freedesktop.org/"
arch=('x86_64')
license=('custom')
groups=('lib32')
depends=('lib32-libxext')
source=(ftp://ftp.archlinux.org/extra/os/i686/$_pkgsourcename-$pkgver-1-i686.pkg.tar.gz)
md5sums=('70adc452bfd583a3e634724902e20866')

build() {
	cd $startdir/src
	mkdir -p $startdir/pkg/opt/lib32/usr/lib
	cp -dp usr/lib/*.so* $startdir/pkg/opt/lib32/usr/lib
}
