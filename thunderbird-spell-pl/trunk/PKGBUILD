# Contributor: Jaroslaw Swierczynski <swiergot@aur.archlinux.org>
# Contributor: Maciej Sitarz <macieks@freesco.pl>

pkgname=thunderbird-spell-pl
pkgver=2.0
pkgrel=2
arch=('i686' 'x86_64')
pkgdesc="Polish spellchecker files for Mozilla Thunderbird"
license=('LGPL')
depends=("thunderbird")
makedepends=('unzip')
replaces=("mozilla-thunderbird-spell-pl")
options=('force')
url="http://pl.openoffice.org/"
source=(http://pl.openoffice.org/pliki/pl_PL.zip)
md5sums=('55395f6ec92a8edd70924e2700e32fbf')

build() {
   cd $startdir/src
   install -D -m 644 pl_PL.aff $startdir/pkg/usr/lib/thunderbird-2.0/dictionaries/pl.aff || return 1
   install -D -m 644 pl_PL.dic $startdir/pkg/usr/lib/thunderbird-2.0/dictionaries/pl.dic || return 1
}
