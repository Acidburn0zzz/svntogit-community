# $Id$
# Maintainer: Balló György <ballogyor+arch at gmail dot com>

pkgname=gst-devtools
pkgver=1.12.4
pkgrel=1
pkgdesc="Development and debugging tools for GStreamer"
arch=(x86_64)
url="https://cgit.freedesktop.org/gstreamer/gst-devtools"
license=(LGPL2.1)
depends=(gst-plugins-base-libs gtk3 python)
makedepends=(gobject-introspection gtk-doc meson)
source=(https://cgit.freedesktop.org/gstreamer/$pkgname/snapshot/$pkgname-$pkgver.tar.xz)
sha256sums=('6ab7425c7741791384ffbf899ca1acf06cb9e4764ec54e697a84de4912713923')

prepare() {
  mkdir build
}

build() {
  cd build
  meson --prefix=/usr --buildtype=release ../$pkgname-$pkgver
  ninja
}

package() {
  cd build
  DESTDIR="$pkgdir" ninja install
}
