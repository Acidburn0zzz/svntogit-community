pkgname=mplayerthumbs
pkgver=1.2
pkgrel=1
pkgdesc="Thumbnail generator for video files on Dolphin and Konqueror" 
url="http://www.kde-apps.org/content/show.php?content=41180" 
arch=('i686' 'x86_64')
license=('GPL')
depends=('kdelibs' 'mplayer')
makedepends=('cmake' 'automoc4') 
source=(http://www.kde-apps.org/CONTENT/content-files/41180-${pkgname}-${pkgver}.tar.gz) 
md5sums=('9040cbbc343845b634e09317cd71d631')

build() { 
  cd ${srcdir}/${pkgname}-$pkgver

  mkdir build
  cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1 
  make DESTDIR=${pkgdir} install 
}
