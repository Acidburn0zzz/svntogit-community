_pkgsourcename=openssl
pkgname=lib32-$_pkgsourcename
pkgver=0.9.8k
pkgrel=2
license='BSD'
pkgdesc="The Open Source toolkit for Secure Sockets Layer and Transport Layer Security"
arch=(x86_64)
groups='lib32'
url="http://www.openssl.org"
depends=('lib32-glibc')
source=(http://mirrors.easynews.com/linux/archlinux//core/os/i686/${_pkgsourcename}-${pkgver}-${pkgrel}-i686.pkg.tar.gz)
md5sums=('599c506eead1f09a3020799a74f96ecc')

build() {
  mkdir -p $startdir/pkg/opt/lib32/usr/lib/
  cp -rPf $startdir/src/usr/lib $startdir/pkg/opt/lib32/usr/
}
