_pkgsourcename=openssl
pkgname=lib32-$_pkgsourcename
pkgver=1.0.0
pkgrel=2
license='BSD'
pkgdesc="The Open Source toolkit for Secure Sockets Layer and Transport Layer Security"
arch=('x86_64')
groups=('lib32')
url="http://www.openssl.org"
depends=('lib32-glibc')
source=(http://mir.archlinux.fr/core/os/i686/${_pkgsourcename}-${pkgver}-${pkgrel}-i686.pkg.tar.gz)

build() {
  mkdir -p $pkgdir/opt/lib32/usr/lib/
  cp -rPf $srcdir/usr/lib $pkgdir/opt/lib32/usr/
}
md5sums=('9fdbfb624a879fb34b0a7c4cc6d8258e')
sha256sums=('5f2c16afcb36a38650e138ea94eee8ee472682caaf7c2c6ebbc9bfbf19201c2c')
