# Maintainer:
# Contributor: Nate Simon <aurpkg (at natesimon.net)>

pkgname=xreader
pkgver=1.6.1
pkgrel=1
url='https://github.com/linuxmint/xreader'
pkgdesc="Document viewer for files like PDF and Postscript. X-Apps Project."
arch=(x86_64)
license=(GPL)
depends=(poppler-glib djvulibre libspectre webkit2gtk)
makedepends=(mate-common yelp-tools gobject-introspection caja nemo)
optdepends=('nemo: nemo extension'
    'caja: caja extension'
    'gtk3-print-backends: printer support in gtk3 apps'
    'texlive-bin: support for dvi files')
source=("${pkgname}-${pkgver}.tar.gz::https://github.com/linuxmint/${pkgname}/archive/${pkgver}.tar.gz")
sha256sums=('32e7f51800aacb47951e45f64e0e1120b3411abe73a3a65c1479c9d54fb564b6')

build() {
    cd $pkgname-$pkgver
    ./autogen.sh --prefix="/usr" \
        --localstatedir="/var" \
        --libexecdir="/usr/lib/${pkgname}" \
        --enable-introspection
    make
}

package(){
    cd $pkgname-$pkgver
    make DESTDIR="$pkgdir" install
}
