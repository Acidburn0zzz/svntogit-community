# Contributor: soeren <nonick@posteo.de>

pkgname=gummi
pkgver=0.5.5
pkgrel=2
pkgdesc='Simple LaTex editor for GTK users'
arch=('i686' 'x86_64')
url='http://gummi.midnightcoding.org/'
license=('MIT')
depends=('texlive-core' 'gtkspell' 'gtksourceview2')
makedepends=('glib2' 'gtk2' 'pango' 'poppler' 'intltool' 'poppler-glib')
source=("http://dev.midnightcoding.org/redmine/attachments/download/111/gummi-0.5.5.tar.gz")
md5sums=('51a2d7414eee5d63ede252af08a1d60c')
 
build() {
  cd ${pkgname}-${pkgver}

  find . -type f -exec touch {} \;

  ./configure \
    --prefix=/usr

  make
}

package() {
  cd ${pkgname}-${pkgver}

  make prefix=${pkgdir}/usr install
 
}
