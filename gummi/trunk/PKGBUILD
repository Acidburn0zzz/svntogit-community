# Contributor: soeren <nonick@posteo.de>

pkgname=gummi
pkgver=0.5.3
pkgrel=2
pkgdesc='Simple LaTex editor for GTK users'
arch=('i686' 'x86_64')
url='http://gummi.midnightcoding.org/'
license=('MIT')
depends=('texlive-core' 'gtkspell' 'gtksourceview2')
makedepends=('glib2' 'gtk2' 'pango' 'poppler' 'intltool' 'poppler-glib')
source=("http://dev.midnightcoding.org/redmine/attachments/download/90/${pkgname}-${pkgver}.tar.gz")
md5sums=('e9c9666fd7eae5e30bc40dd9478bc155')
 
build() {
  cd ${pkgname}-${pkgver}

  ./configure \
    --prefix=/usr

  make
}

package() {
  cd ${pkgname}-${pkgver}

  make prefix=${pkgdir}/usr install
 
}
