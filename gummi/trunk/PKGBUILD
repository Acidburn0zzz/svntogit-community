# Contributor: soeren <nonick@posteo.de>

pkgname=gummi
pkgver=0.5.2
pkgrel=2
pkgdesc='Simple LaTex editor for GTK users'
arch=('i686' 'x86_64')
url='http://gummi.midnightcoding.org/'
license=('MIT')
depends=('texlive-core' 'gtksourceview2')
makedepends=('glib2' 'gtk2'  'pango' 'poppler' 'gtkspell' 'intltool')
source=("http://dev.midnightcoding.org/redmine/attachments/download/88/${pkgname}-${pkgver}.tar.gz")
md5sums=('b8a604b1140f76c93b36930dcb2c8833')
 
build() {
  cd ${pkgname}-${pkgver}

  ./configure \
    --prefix=/usr

  make
}

package() {
  cd ${pkgname}-${pkgver}

  make prefix=${pkgdir}/usr install
 
}
