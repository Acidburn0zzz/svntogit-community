pkgname=libretro-core-info
pkgver=1.6.9
pkgrel=1
pkgdesc='Libretro core info files'
arch=('any')
url='https://github.com/libretro/libretro-core-info'
license=('GPL3')
groups=('libretro')
source=("libretro-core-info-${pkgver}.tar.gz::https://github.com/libretro/libretro-core-info/archive/${pkgver}.tar.gz")
sha256sums=('3cd9faf223680a276f5ffad5585693caf018d246b216b1c33de074350e6a0cd9')

package() {
  cd libretro-core-info-${pkgver}

  make DESTDIR="${pkgdir}" install
}

