# $Id$
# Maintainer: Simo Leone <neotuli@gmail.com>

pkgname=ec-fonts-mftraced
pkgver=1.0.12
pkgrel=1
pkgdesc="Music notation fonts"
arch=('i686' 'x86_64')
url="http://lilypond.org/download/fonts"
license=('GPL')
depends=('tetex')
makedepends=('mftrace')
install=ec-fonts-mftraced.install
source=("http://lilypond.org/download/old/ec-fonts-mftraced/$pkgname-$pkgver.tar.gz")
md5sums=('4b355f668ca9cc01677e94c6eecdac40')

build() {
  cd $startdir/src/$pkgname-$pkgver
  sed -i -e "s|potrace|potrace=`which potrace`|" GNUmakefile || return 1
  ./configure
  make builddir=$startdir/src/$pkgname-$pkgver all
  make builddir=$startdir/src/$pkgname-$pkgver DESTDIR=$startdir/pkg install
}
