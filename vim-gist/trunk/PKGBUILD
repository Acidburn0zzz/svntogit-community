# Maintainer: Jelle van der Waa <jelle vdwaa nl>
pkgname=vim-gist
pkgver=5.0
pkgrel=1
pkgdesc="vimscript for gist"
arch=('any')
url="http://www.vim.org/scripts/script.php?script_id=2423"
license=('custom')
depends=('vim>=7.0' 'curl')
optdepends=('git: git profile support')
install=vimdoc.install
    source=('https://github.com/mattn/gist-vim/raw/master/plugin/gist.vim'
            'license.txt')
package() {
    install -Dm644 ${srcdir}/gist.vim ${pkgdir}/usr/share/vim/vimfiles/plugin/gist.vim 
    install -Dm644 ${srcdir}/license.txt ${pkgdir}/usr/share/licenses/${pkgname}/license.txt
}
md5sums=('300c8768cb15447b946cc3c5048b99af'
         'efbd5986e691ce8c876fb86e8f5961ea')
