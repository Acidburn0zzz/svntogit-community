# Maintainer: Jelle van der Waa <jelle vdwaa nl>
pkgname=vim-gist
pkgver=5.9
pkgrel=1
pkgdesc="vimscript for gist"
arch=('any')
url="http://www.vim.org/scripts/script.php?script_id=2423"
license=('custom')
depends=('vim>=7.0' 'curl')
optdepends=('git: git profile support')
install=vimdoc.install
source=(gist-vim.zip::'http://www.vim.org/scripts/download_script.php?src_id=17345'
            'license.txt')
md5sums=('4092d1902b5251f1044d61f2070ed9d5'
         'efbd5986e691ce8c876fb86e8f5961ea')

package() {
    install -Dm644 ${srcdir}/plugin/gist.vim ${pkgdir}/usr/share/vim/vimfiles/plugin/gist.vim 
    install -Dm644 ${srcdir}/doc/gist-vim.txt ${pkgdir}/usr/share/vim/vimfiles/doc/gist-vim.txt 
    install -Dm644 ${srcdir}/license.txt ${pkgdir}/usr/share/licenses/${pkgname}/license.txt
}
