# checkdepends=('python-coverage' 'python-nose' 'python-mock')
source=("$pkgname-$pkgver.tar.gz::https://github.com/boto/boto3/archive/$pkgver.tar.gz")
sha512sums=('75bd3dc9dc446706801f52d9d256f1c5395e9fff6f4143ffa5663f457a0f7de9415050006c766b1d71753c2569629e921ee597769a728f0a9a7a8da74d44baa8')

build() {
