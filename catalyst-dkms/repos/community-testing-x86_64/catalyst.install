post_install() 
{
    dkms add -m fglrx -v $1
    dkms build -m fglrx -v $1
    dkms install -m fglrx -v $1
}

post_upgrade() 
{
    # removing old version
    dkms remove -m fglrx -v $2 --all
    # then installing the new one
    dkms add -m fglrx -v $1
    dkms build -m fglrx -v $1
    dkms install -m fglrx -v $1
}

pre_remove() 
{
    dkms remove -m fglrx -v $1 --all
}

