# Maintainer: Douglas Soares de Andrade <dsa@aur.archlinux.org>
# Contributor: Sven Salzwedel <sven_salzwedel@web.de>

pkgname=dbus-glib-docs
pkgver=0.76
pkgrel=1
pkgdesc="Documentation for dbus-glib to be used in devhelp"
arch=('i686' 'x86_64')
license=('GPL')
url="http://library.gnome.org/devel/dbus-glib/unstable/"
source=(http://dbus.freedesktop.org/releases/dbus-glib/dbus-glib-${pkgver}.tar.gz)
md5sums=('d3b716a7e798faa1c6a867675f00306a')


build () {
	# Create destination dir
	install -d ${startdir}/pkg/usr/share/devhelp/books/dbus-glib

	# Install documentation to destination
  install -D -m 644 ${startdir}/src/dbus-glib-${pkgver}/doc/reference/html/* \
    ${startdir}/pkg/usr/share/devhelp/books/dbus-glib
}

# vim:set ts=2 sw=2 et:
