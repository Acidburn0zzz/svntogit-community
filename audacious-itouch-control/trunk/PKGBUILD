pkgname=audacious-itouch-control
pkgver=0.1.1
pkgrel=1
pkgdesc="iTouch-Control is a plugin for Audacious media player wich helps you control the player using your keyboard multimedia keys."
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/itouch-control"
license=("GPL")
depends=('audacious-player')
makedepends=('pkgconfig')
source=(http://downloads.sourceforge.net/sourceforge/itouch-control/itouch-control-$pkgver.tar.gz)
md5sums=('dc55e842731e5b30b8168f541257e59a')
options=('!libtool')

build() {
  cd $startdir/src/itouch-control-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
  rm $startdir/pkg/usr/lib/audacious/General/libitouchctrl.a
}
