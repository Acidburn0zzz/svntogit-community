# Contributor: William DÃ­az <wdiaz@archlinux.us>
pkgname=farsight2
pkgver=0.0.15
pkgrel=1
pkgdesc="Audio/Video conference software for Instant Messengers"
arch=('i686' 'x86_64')
url="http://farsight.freedesktop.org"
license=('LGPL')
depends=('libnice>=0.0.6'
         'gstreamer0.10-base-plugins>=0.10.22'
         'gstreamer0.10-python>=0.10.10'
         'python>=2.4'
	 'pygobject>=2.16.0')
optdepends=('gstreamer0.10-good>=0.10.7: for RTP plugin'
            'gstreamer0.10-bad>=0.10.12: for RTP plugin')
options=(!libtool !emptydirs)
source=(http://farsight.freedesktop.org/releases/farsight2/${pkgname}-${pkgver}.tar.gz)

build() {
  export CFLAGS="$CFLAGS -fno-strict-aliasing"
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --prefix=/usr \
  	--disable-static \
        --disable-debug \
        --disable-valgrind
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
}
md5sums=('563ae54fb4df477eaf11e047e1550df7')
