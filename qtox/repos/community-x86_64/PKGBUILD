prepare() {
	# apply PR https://github.com/qTox/qTox/issues/4053
	patch -p1 <unix.patch
}

build() {
  install -d build
  cd build
  qmake-qt5 ENABLE_SYSTRAY_UNITY_BACKEND=NO GIT_VERSION=$_gitver GIT_DESCRIBE=v$pkgver ..
  make
}

package() {
  cd build
  make INSTALL_ROOT="$pkgdir" install
}
