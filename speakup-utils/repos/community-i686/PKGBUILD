# Maintainer: Chris Brannon <cmbrannon79@gmail.com>
pkgname=speakup-utils
pkgver=3.1.1
pkgrel=1
pkgdesc='Tiny utilities for controlling the Speakup screenreader'
arch=('i686' 'x86_64')
url="http://linux-speakup.org/"
license=('GPL2')
source=("http://members.cox.net/cmbrannon/speakup-$pkgver.tar.bz2")
md5sums=('f048b61ae9b5a49155e8722b8201effc')
depends=(bash)

build() {
  cd "$srcdir/speakup-$pkgver/tools"
  install -d -m755 "$pkgdir/usr/bin" || return 1
  install -m755 talkwith speakupconf "$pkgdir/usr/bin" || return 1
}

