# Maintainer: Thomas Dziedzic < gostrc at gmail >
# Maintainer: Stefan Husmann <stefan-husmannqt-online.de>

pkgname='jgraphx'
pkgver='1_4_1_0'
pkgrel='1'
pkgdesc='Open source graph drawing component.'
arch=('any')
url='http://www.jgraph.com/jgraphx.html'
license=('BSD')
depends=('java-runtime')
makedepends=('apache-ant' 'java-environment')
source=("http://www.jgraph.com/downloads/$pkgname/archive/$pkgname-$pkgver.zip")
md5sums=('59513560e53b1e21dd583ee7a0abd23f')
 
build() {
  cd $pkgname 

  ant 
}

package() {
  cd $pkgname 

  install -d "$pkgdir/usr/share/java"
  install -m644 lib/$pkgname.jar "$pkgdir/usr/share/java"
  install -Dm644 license.txt "$pkgdir/usr/share/licenses/$pkgname/license.txt"
}
md5sums=('59513560e53b1e21dd583ee7a0abd23f')
