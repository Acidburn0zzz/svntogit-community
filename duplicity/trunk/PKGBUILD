pkgname=duplicity
pkgver=0.6.11
pkgrel=2
pkgdesc='A utility for encrypted, bandwidth-efficient backups using the rsync algorithm'
arch=('i686' 'x86_64')
url='http://www.nongnu.org/duplicity/'
license=('GPL')
depends=('gnupg' 'librsync' 'ncftp' 'python2' 'python-boto' 'python-gnupginterface')
source=("http://savannah.nongnu.org/download/$pkgname/$pkgname-$pkgver.tar.gz" '685to686.diff')
md5sums=('1116be7aababa467336eac2092f66ab7'
         'dee3ab9296f28bffe39fa19ad64969b7')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  patch -Np0 -i $srcdir/685to686.diff

  # python2 fix
  for file in $(find . -name '*.py' -print); do
    sed -i 's_^#!.*/usr/bin/python_#!/usr/bin/python2_' $file
    sed -i 's_^#!.*/usr/bin/env.*python_#!/usr/bin/env python2_' $file
  done

  python2 setup.py install --root="$pkgdir" --optimize=1
}
