# $Id: PKGBUILD,v 1.4 2009/04/09 09:51:57 sergej Exp $
# Maintainer: Sergej Pupykin <pupykin.s+arch@gmail.com>

pkgname=oldstand-font
pkgver=1.0
pkgrel=2
pkgdesc="OldStand fonts"
arch=('i686' 'x86_64')
license=('GPL')
depends=('xorg-fonts-encodings' 'xorg-fonts-alias' 'xorg-font-utils' 'fontconfig')
makedepends=('unzip')
url="http://www.thessalonica.org.ru/ru/fonts.html"
install=oldstand.install
source=(http://www.thessalonica.org.ru/downloads/oldstand-1.0.otf.zip \
	http://www.thessalonica.org.ru/downloads/oldstand-1.0.ttf.zip
	http://www.thessalonica.org.ru/downloads/tempora-lgc.otf.zip
	http://www.thessalonica.org.ru/downloads/tempora-lgc.ttf.zip)
md5sums=('080cf3d3b5fa7da4cd8497543e8f37ce' '37378d89dc2e4dd55d92821c1659c4e1'\
         '602808695c1306ff572e7d39cd512ba8' '46c5ef4c074583a451ec56336011a12d')

build() { 
  cd $startdir/src
  mkdir -p $startdir/pkg/usr/share/fonts/TTF
  mkdir -p $startdir/pkg/usr/share/fonts/OTF

  cp *.ttf $startdir/pkg/usr/share/fonts/TTF || return 1
  cp *.otf $startdir/pkg/usr/share/fonts/OTF || return 1
}
