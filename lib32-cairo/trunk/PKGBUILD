# Maintainer: Mikko Seppälä <t-r-a-y@mbnet.fi>    
_pkgsourcename=cairo
pkgname=lib32-$_pkgsourcename
pkgver=1.8.6
pkgrel=1
pkgdesc="Cairo vector graphics library"
arch=(x86_64)
url="http://cairographics.org/"
license=('GPL' 'MPL')
groups=('lib32')
depends=('lib32-libpng' 'lib32-libxrender' 'lib32-fontconfig' 'lib32-pixman' 'lib32-xcb-util')
source=(ftp://ftp.heanet.ie/mirrors/ftp.archlinux.org/extra/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz)
md5sums=('dbe648d063de64258e5e85c0b075afa1')

build() {
	cd $startdir/src
	mkdir -p $startdir/pkg/opt/lib32/usr/lib
	cp -dp usr/lib/*.so* $startdir/pkg/opt/lib32/usr/lib
}

