_pkgsourcename=libxrender
pkgname=lib32-$_pkgsourcename
pkgver=0.9.5
pkgrel=1
pkgdesc="X Rendering Extension client library"
url="http://xorg.freedesktop.org/"
license=('custom')
arch=('x86_64')
groups=('lib32')
depends=('lib32-libx11')
source=(ftp://ftp.archlinux.org/extra/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz 
\
	COPYING)

build() {
    cd $srcdir
    mkdir -p $pkgdir/opt/lib32/usr/lib
    cp -dp usr/lib/*.so* $pkgdir/opt/lib32/usr/lib

    install -Dm644 $srcdir/COPYING \
	  $pkgdir/opt/lib32/usr/share/licenses/$_pkgsourcename/COPYING
}
md5sums=('0ec00e904f03e8422d23717efc0fcdbf'
         '90b90b60eb30f65fc9c2673d7cf59e24')
