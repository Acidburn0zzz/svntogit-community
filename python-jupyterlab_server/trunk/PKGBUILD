# Maintainer: Antonio Rojas <arojas@archlinux.org>
# Contributor: Guillaume Duboc <guilduboc@gmail.com>

_pipname=jupyterlab_server
pkgname=python-$_pipname
pkgver=2.1.4
pkgrel=1
pkgdesc="Launch an application built using JupyterLab"
arch=(any)
url="https://jupyter.org/"
license=(custom)
depends=(jupyter-server python-requests python-json5 python-babel)
makedepends=(python-setuptools)
conflicts=(jupyterlab_server)
replaces=(jupyterlab_server)
source=(https://pypi.io/packages/source/j/$_pipname/$_pipname-$pkgver.tar.gz)
sha256sums=('688dee616ab89a9d5313f89da99c48abd10433a2c18a327c6e4d2b4c51707753')

build() {
  cd $_pipname-$pkgver
  python setup.py build 
}

package() {
  cd $_pipname-$pkgver
  python setup.py install --skip-build --root="$pkgdir" --optimize=1

  install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}
