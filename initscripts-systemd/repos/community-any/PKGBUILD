pkgname=initscripts-systemd
pkgver=v21
pkgrel=1
pkgdesc="Arch specific systemd initialization/bootup scripts for systemd"
arch=('any')
url="http://www.github.com/falconindy/initscripts-systemd"
license=('GPL')
groups=('systemd')
depends=('systemd' 'initscripts')
install=initscripts-systemd.install
source=("$pkgname-$pkgver.tar.gz::https://github.com/falconindy/$pkgname/tarball/$pkgver")
md5sums=('051005e8cebbfaa2d6cdd5381b59f2f2')

package() {
  dirname=$(tar tf "$srcdir/$pkgname-$pkgver.tar.gz" | sed 1q);
  cd "$srcdir/$dirname"

  make DESTDIR="$pkgdir" install
}
