# Maintainer: Brad Fanella <bradfanella@archlinux.us>
# Contributor: gem2arch 0.1
# Contributor: theapodan

pkgname=ruby-pkgconfig
_pkgname=pkg-config
pkgver=1.0.7
pkgrel=2
pkgdesc="A pkg-config implementation by Ruby"
arch=(any)
url="http://github.com/rcairo/pkg-config"
license=("LGPL")
depends=('ruby')
source=(http://gems.rubyforge.org/gems/$_pkgname-$pkgver.gem)
md5sums=('8d6019688228034ae8dbdfdbc3326440')
noextract=($_pkgname-$pkgver.gem)

build() {
	cd $srcdir
	local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
}
package() {
	gem install --ignore-dependencies -i "$pkgdir$_gemdir" $_pkgname-$pkgver.gem
}
