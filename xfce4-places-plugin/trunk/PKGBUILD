pkgname=xfce4-places-plugin
pkgver=1.1.0
pkgrel=3
pkgdesc="Menu with quick access to folders, documents and removable media"
arch=('i686' 'x86_64')
url="http://goodies.xfce.org/projects/panel-plugins/xfce4-places-plugin"
license=('GPL')
depends=('xfce4-panel' 'thunar')
makedepends=('perl-xml-simple')
source=(http://goodies.xfce.org/releases/xfce4-places-plugin/$pkgname-$pkgver.tar.bz2)
md5sums=('b26019e355c52b4a4254ebdcf1c904ee')

build() 
{
    cd ${srcdir}/${pkgname}-${pkgver}
    ./configure --prefix=/usr --libexecdir=/usr/lib/xfce4
    make || return 1
    make DESTDIR=${pkgdir} install
}
