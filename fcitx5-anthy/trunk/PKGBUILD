pkgname=fcitx5-anthy
pkgver=0.0.0.20200404
_commit=c0bca30fe95f697ddba6c44d69cb1b061183d6af
pkgrel=1
pkgdesc="Anthy Wrapper for Fcitx5"
arch=('x86_64')
url="https://github.com/fcitx/fcitx5-anthy"
license=('GPL')
depends=('fcitx5' 'anthy')
makedepends=('extra-cmake-modules')
source=("https://github.com/fcitx/fcitx5-anthy/archive/$_commit/fcitx5-anthy-$_commit.tar.gz")
sha512sums=('45f21d6ccb6bb0fa4d717e406a1d88fb775b347f29f72a3aa1a46c817920f32679e1b6ef16ae1d659f055c9435a169d41212bee62e44856ed641e369176e3082')

build(){
  cd $pkgname-$_commit

  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR=/usr/lib .
  make
}

package() {
  cd $pkgname-$_commit
  make DESTDIR="$pkgdir" install
}
