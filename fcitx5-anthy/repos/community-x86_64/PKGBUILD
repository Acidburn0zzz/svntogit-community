pkgname=fcitx5-anthy
pkgver=0.0.0.20200511
_commit=98597c97c547dd997283bdef83e0aa1e9c1ff3b3
pkgrel=1
pkgdesc="Anthy Wrapper for Fcitx5"
arch=('x86_64')
url="https://github.com/fcitx/fcitx5-anthy"
license=('GPL')
depends=('fcitx5' 'anthy')
makedepends=('extra-cmake-modules')
source=("https://github.com/fcitx/fcitx5-anthy/archive/$_commit/fcitx5-anthy-$_commit.tar.gz")
sha512sums=('6e0d84e50ef0341675bdb1ecd43dcffa5af406ca9d12edc65d2a2cd705268c726f07b8b730701e8e969e7054484bfdef2ebdbff84fe1e89a017698ce478da80d')

build(){
  cd $pkgname-$_commit

  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR=/usr/lib .
  make
}

package() {
  cd $pkgname-$_commit
  make DESTDIR="$pkgdir" install
}
