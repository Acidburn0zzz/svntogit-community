pkgname=fcitx5-anthy
pkgver=0.0.0.20200424
_commit=1703f69c3f1705d79d077049c9b0b3029e7c7773
pkgrel=1
pkgdesc="Anthy Wrapper for Fcitx5"
arch=('x86_64')
url="https://github.com/fcitx/fcitx5-anthy"
license=('GPL')
depends=('fcitx5' 'anthy')
makedepends=('extra-cmake-modules')
source=("https://github.com/fcitx/fcitx5-anthy/archive/$_commit/fcitx5-anthy-$_commit.tar.gz")
sha512sums=('97fd95da39c337d28354297b1a0f25f83829656e5fd011ad2f292c0d26cb17f82593fef1415c12ea75a33f28ecbe3da8979cb2794dc0c509c6b77098d07f4dfc')

build(){
  cd $pkgname-$_commit

  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR=/usr/lib .
  make
}

package() {
  cd $pkgname-$_commit
  make DESTDIR="$pkgdir" install
}
