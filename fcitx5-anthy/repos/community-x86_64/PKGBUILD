pkgname=fcitx5-anthy
pkgver=0.0.0.20200403
_commit=3701afef7f41ba4e75c1d5b749f538fbfabaf37c
pkgrel=1
pkgdesc="Anthy Wrapper for Fcitx5"
arch=('x86_64')
url="https://github.com/fcitx/fcitx5-anthy"
license=('GPL')
depends=('fcitx5' 'anthy')
makedepends=('extra-cmake-modules')
source=("https://github.com/fcitx/fcitx5-anthy/archive/$_commit/fcitx5-anthy-$_commit.tar.gz")
sha512sums=('77fab0bb1b950f6f9ff5bf258dc59a163e86dc8a4743c70d21abf58f33fa6f8557f73e4c8506d41369d8d6b988d60e5c4c96534e12d1a185a815d3bce6262f9a')

build(){
  cd $pkgname-$_commit

  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR=/usr/lib .
  make
}

package() {
  cd $pkgname-$_commit
  make DESTDIR="$pkgdir" install
}
