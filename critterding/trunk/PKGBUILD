# Contributor: Thomas Dziedzic <gostrc at gmail>

pkgname=critterding
pkgver=beta12.1
pkgrel=1
pkgdesc='A Petri dish universe in 3D that demonstrates evolving artificial life.'
arch=('i686' 'x86_64')
url='http://critterding.sourceforge.net/'
license=('GPL')
depends=('freetype2' 'sdl' 'libgl' 'ttf-ms-fonts' 'ftgl')
makedepends=('autoconf' 'automake')
source=("http://downloads.sourceforge.net/project/critterding/critterding/sources/$pkgname-$pkgver.tar.bz2")
md5sums=('29e9848d76ede1e743e05ab7b23082ba')

build() {
  cd $pkgname-$pkgver

  autoreconf -fi || return 1
  ./configure --prefix=/usr || return 1

  make || return 1

  make DESTDIR="$pkgdir" install || return 1
}
