pkgname=jbidwatcher
pkgver=2.1.4.1
pkgrel=1
pkgdesc='Allows you to monitor auctions, submit bids, and snipe.'
arch=('any')
url="http://www.jbidwatcher.com/"
license=('LGPL')
depends=('java-runtime')
noextract=("JBidwatcher-${pkgver}.jar")
source=("http://www.jbidwatcher.com/download/JBidwatcher-${pkgver}.jar"
        "${pkgname}"
        "${pkgname}.desktop"
        "${pkgname}.png")
md5sums=('02534100dabd25d5001ea8d784425ed7' 'd7c0bc12c1f9e9adbd72641c41db328a'\
         '1854cf95d229fd5ae1c574ad4fab87fd' '8dd5be58e078b985bc6aad4f578c06e3')
sha1sums=('30f9b7644df889af0378c190f96d4adec5d4a64a' '50e60c78344f8638977c0524fd72a93b30a1d1ab'\
         '65c3cd3354a6aaa7a19acff4bfb1d4dfa8226c81' 'cdb6d91151245ab5b0834ff01b7cb28e5c8adeab')

package() {
  cd "${srcdir}"
  install -D -m755 ${pkgname} "${pkgdir}/usr/bin/${pkgname}"
  install -D -m644 JBidwatcher-${pkgver}.jar "${pkgdir}/usr/share/java/${pkgname}/JBidwatcher.jar"
  install -D -m644 ${pkgname}.desktop "${pkgdir}/usr/share/applications/${pkgname}.desktop"
  install -D -m644 ${pkgname}.png "${pkgdir}/usr/share/pixmaps/${pkgname}.png"
}
