# Contributor: Simon Lipp <sloonz+aur@gmail.com>

pkgname=jrosetta
pkgver=1.0.2
pkgrel=4
pkgdesc="Graphical console engine for Swing"
arch=('any')
url="http://dev.artenum.com/projects/JRosetta/"
license=('GPL2')
depends=('java-runtime')
makedepends=('apache-ant')
source=("${pkgname}-${pkgver}-gpl.zip::http://dev.artenum.com/projects/JRosetta/download/JRosetta-1-0-2/data/src-gpl?action=download&nodecorator")
md5sums=('3a618078c118216eb2351e5db6e14a7d')

build() {
  cd $srcdir/$pkgname-$pkgver-gpl
  ant make
}

package() {
  cd $srcdir/$pkgname-$pkgver-gpl
  install -d $pkgdir/usr/share/java/$pkgname/
  install --mode=644 "$srcdir/$pkgname-$pkgver-gpl/dist/$pkgname-engine.jar" \
    $pkgdir/usr/share/java/$pkgname/$pkgname-engine.jar
  install --mode=644 "$srcdir/$pkgname-$pkgver-gpl/dist/$pkgname-API.jar" \
    $pkgdir/usr/share/java/$pkgname/$pkgname-API.jar
}
