# Contributor: Simon Lipp <sloonz+aur@gmail.com>

pkgname=jrosetta
pkgver=1.0.2
pkgrel=2
pkgdesc="Graphical console engine for Swing"
arch=('i686' 'x86_64')
url="http://dev.artenum.com/projects/JRosetta/"
license=(GPL2)
depends=('java-runtime')
source=('http://dev.artenum.com/projects/JRosetta/download/JRosetta-1-0-2/data/api-gpl?action=download&nodecorator')

build() {
	install -d $startdir/pkg/usr/share/java/jrosetta/ || return 1
	install --mode=644 \
	  "$srcdir/jrosetta-gpl?action=download&nodecorator" \
	  $pkgdir/usr/share/java/jrosetta/jrosetta-engine.jar || return 1
	install --mode=644 "$srcdir/api-gpl?action=download&nodecorator" \
	  $pkgdir/usr/share/java/jrosetta/jrosetta-API.jar || return 1
}
md5sums=('5c8d88cb3d9aac83418efe47dc043263')
