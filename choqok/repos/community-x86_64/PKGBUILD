# Contributor: Bram Schoenmakers <me@bramschoenmakers.nl>

pkgname=choqok
pkgver=0.9.98
pkgrel=1
pkgdesc="A Twitter/identi.ca/laconica client for KDE"
url="http://choqok.gnufolks.org/"
license=('GPL')
arch=('i686' 'x86_64')
depends=('kdebase-runtime' 'qjson' 'qoauth' 'qca-ossl')
makedepends=('cmake' 'automoc4' 'docbook-xsl' 'kwebkitpart')
optdepends=('kwebkitpart: webkit support'
        'kdebase-konqueror: proxy support')
install="${pkgname}.install"
source=("http://choqok.gnufolks.org/pkgs/${pkgname}_${pkgver}.tar.bz2")
md5sums=('68d57abc5b902e791a1083be6a99c3f3')

build() {
  cd ${srcdir}
  mkdir build
  cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd ${srcdir}/build
  make DESTDIR=${pkgdir} install
}
