_pkgsourcename=libgcrypt
pkgname=lib32-$_pkgsourcename
pkgver=1.4.4
pkgrel=1
pkgdesc="Libgcrypt is a general purpose crypto library based on the code used"
arch=(x86_64)
url="http://www.gnupg.org"
license=('LGPL')
groups=('lib32')
depends=('lib32-libgpg-error')
source=(ftp://ftp.heanet.ie/mirrors/ftp.archlinux.org/core/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz)
md5sums=('b41dd49f3d3c26e35b2b4ccb31499058')

build() {
	cd $startdir/src
	mkdir -p $startdir/pkg/opt/lib32/usr/lib
	cp -dp usr/lib/*.so* $startdir/pkg/opt/lib32/usr/lib
}
