pkgname=deepin-movie
epoch=1
pkgver=2.9.90
pkgrel=1
pkgdesc='Movie player based on QtAV'
arch=('i686' 'x86_64')
url="https://github.com/linuxdeepin/deepin-movie-reborn"
license=('GPL3')
depends=('dtkwidget' 'mpv' 'ffmpegthumbnailer')
makedepends=('cmake' 'qt5-tools')
groups=('deepin-extra')
source=("$pkgname-$pkgver.tar.gz::https://github.com/linuxdeepin/deepin-movie-reborn/archive/$pkgver.tar.gz")
sha512sums=('3da139d47f66e403cb97aacd8790d42c625184f33d122a2401c96968e5a14bfb5b6ead424b3e34f02b4aa66dda758bfb5e01fc9daa2247ac8493382fcf6846a4')

build(){
  cd deepin-movie-reborn-$pkgver
  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release .
  make
}

package() {
  cd deepin-movie-reborn-$pkgver
  make DESTDIR="$pkgdir" install
}
