# Maintainer: Douglas Soares de Andrade <dsa@aur.archlinux.org>
# Contributor: William Rea <sillywilly@gmail.com>

pkgname=python-pypdf
pkgver=1.12
pkgrel=1
pkgdesc="A Pure-Python library built as a PDF toolkit"
arch=('i686' 'x86_64')
url="http://pybrary.net/pyPdf"
license=('BSD')
depends=('python')
conflicts=('pypdf')
provides=('pypdf')
source=(http://pybrary.net/pyPdf/pyPdf-$pkgver.tar.gz license.txt)

build() {
    cd $startdir/src/pyPdf-$pkgver
    python setup.py install --root=$startdir/pkg
    install -D -m644 ../license.txt $startdir/pkg/usr/share/licenses/$pkgname/license.txt
}

md5sums=('7be5f7f4659f64fd194e9eb9a38ad425'
         '19b1b4bc0a9a8c4b7b2f5689a16cec2c')
