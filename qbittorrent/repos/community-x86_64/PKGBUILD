# $Id$
# Maintainer: Geoffroy Carrier <geoffroy.carrier@koon.fr>

pkgname=qbittorrent
pkgver=1.5.2
pkgrel=1
pkgdesc="A bittorrent client written in C++ / Qt4 using the good libtorrent library"
arch=('i686' 'x86_64')
url="http://www.qbittorrent.org/"
license=('GPL')
depends=('qt' 'libtorrent-rasterbar>=0.14.4' 'curl' 'xdg-utils')
optdepends=('zziplib: zip file extraction')
install=qbittorrent.install
source=(http://downloads.sourceforge.net/sourceforge/qbittorrent/$pkgname-$pkgver.tar.gz)
build() {
	cd "$srcdir/$pkgname-$pkgver"
	./configure --prefix=/usr || return 1
	make || return 1
	make INSTALL_ROOT="$pkgdir" install || return 1
}
md5sums=('4b0440513eda51523fdd504274b057da')
