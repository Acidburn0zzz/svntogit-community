pkgbase=nix
pkgname=('nix' 'nix-docs')
pkgver=2.6.1
pkgrel=1
pkgdesc="A purely functional package manager"
arch=('x86_64')
url="https://nixos.org/nix"
license=('LGPL')
makedepends=(
  'autoconf-archive'
  'jq'
  'libcpuid'
  'gtest'
  'lowdown'
  'mdbook'
  'boost'
  'brotli'
  'bzip2'
  'curl'
  'editline'
  'gc'
  'libseccomp'
  'libsodium'
  'nlohmann-json'
  'openssl'
  'sqlite'
)
