# Maintainer: Felix Yan <felixonmars@archlinux.org>

pkgname=ukui-menu
pkgver=2.0.1
pkgrel=1
pkgdesc="Start menu development library and advanced graphical user interface for UKUI"
arch=('x86_64')
license=('GPL')
url="https://github.com/ukui/ukui-menu"
groups=('ukui')
depends=('qt5-svg')
makedepends=('qt5-tools')
source=("$pkgname-$pkgver.tar.gz::https://github.com/ukui/ukui-menu/archive/v$pkgver.tar.gz")
sha512sums=('3396d213afe6a8dd5fdc643f6f3dbeb72d95759a5c8bb911ea0edc6341cc1a9a2ce832277bd402b6cec6432f84b12bd77ac9b7e6acb4ec674d4941b184e59d74')

build() {
  cd ukui-menu-$pkgver
  qmake-qt5 PREFIX=/usr
  make
}

package() {
  cd ukui-menu-$pkgver
  install -Dm755 ukui-menu -t "$pkgdir"/usr/bin/
}
