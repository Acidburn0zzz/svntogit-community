# Maintainer: Brad Fanella <bradfanella@archlinux.us> 

pkgname=eric5-plugins
pkgver=5.1.0
pkgrel=1
pkgdesc="Plugins for the eric Python IDE"
arch=('any')
url="http://eric-ide.python-projects.org/index.html"
license=('GPL3')
depends=('eric5')
makedepends=('unzip')
source=(http://downloads.sourceforge.net/project/eric-ide/eric5-plugins/stable/Plugin_Assistant_Eric-2.0.1.tar.gz
	http://downloads.sourceforge.net/project/eric-ide/eric5-plugins/stable/Plugin_Issue_Tracker-1.0.0.tar.gz)
md5sums=('4d07663fd2866f76b3e1c89de3c5cfe7'
	'6f098969ee43d7efb4de6694351290d1')

package() {
	cd ${srcdir}

	mkdir -p ${pkgdir}/usr/lib/python3.2/site-packages/eric5plugins
	unzip -o Plugin_Assistant_Eric-2.0.1/*.zip \
	   -d ${pkgdir}/usr/lib/python3.2/site-packages/eric5plugins
	unzip -o Plugin_Issue_Tracker-1.0.0/*.zip \
	   -d ${pkgdir}/usr/lib/python3.2/site-packages/eric5plugins

	rm -r ${pkgdir}/usr/lib/python3.2/site-packages/eric5plugins/{VERSION,*/Documentation}
	find ${pkgdir} -type d -exec chmod 755 {} \;
	find ${pkgdir} -type f -exec chmod 644 {} \;

}
