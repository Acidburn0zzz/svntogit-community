# Maintainer: Douglas Soares de Andrade <dsa@aur.archlinux.org>
# Contributor: Sven Salzwedel <sven_salzwedel@web.de>

pkgname=cairo-docs
pkgver=1.8.0
pkgrel=1
pkgdesc="Documentation for cairo to be used in devhelp"
arch=('i686' 'x86_64')
license=('GPL')
url="http://library.gnome.org/devel/cairo/stable/"
source=(http://www.cairographics.org/releases/cairo-${pkgver}.tar.gz)
md5sums=('4ea70ea87b47e92d318d4e7f5b940f47')


build () {
	# Create destination dir
	install -d ${startdir}/pkg/usr/share/devhelp/books/cairo

	# Install documentation to destination
  install -D -m 644 ${startdir}/src/cairo-${pkgver}/doc/public/html/* \
    ${startdir}/pkg/usr/share/devhelp/books/cairo
}

# vim:set ts=2 sw=2 et:
