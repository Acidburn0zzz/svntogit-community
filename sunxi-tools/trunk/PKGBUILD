# Maintainer: Jelle van der Waa <jelle@archlinux.org>
# Contributor: Marco Kundt <mrckndt@gmail.com>

pkgname=sunxi-tools
pkgver=1.4.1
pkgrel=1
pkgdesc="A collection of command line tools for ARM devices with Allwinner SoCs"
arch=('i686' 'x86_64')
url="https://github.com/linux-sunxi/sunxi-tools"
license=('GPL')
depends=(libusb)
source=(https://github.com/linux-sunxi/${pkgname}/archive/v${pkgver}.tar.gz)
sha256sums=('da5d762608517b4b2e9bd392bd9a63afae3973d9c8264cbcfb757ddac8120d1b')

build() {
  cd ${pkgname}-${pkgver}
  make
}

package() {
  cd ${pkgname}-${pkgver}
  PREFIX="$pkgdir/usr" make install
}
