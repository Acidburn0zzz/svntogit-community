# Contributor: Alexandru Mizeranschi <lexu_85@yahoo.com>
# Contributor: Conor Callahan <majikstreet@gmail.com>

pkgname=gyachi
pkgver=1.2.2b
_pkgver=1.2.2
pkgrel=1
pkgdesc="An improved fork of the GyachE Yahoo! client"
arch=('i686' 'x86_64')
url="http://gyachi.sourceforge.net/"
license=('GPL')
depends=('jasper' 'libgtkhtml' 'libmcrypt' 'libnotify' 'libv4l' 'gpgme'
         'gtkspell')
makedepends=('pkgconfig' 'alsa-lib' 'pulseaudio' 'imagemagick')
optdepends=('pulseaudio: for pulseaudio support')
options=('!libtool')
source=(http://downloads.sourceforge.net/gyachi/gyachi-${_pkgver}.tar.gz
        http://downloads.sourceforge.net/gyachi/gyachi/version-$pkgver.patch.gz)
md5sums=('4152449c9cd68807effcfef509a3563e'
         'a430e120ef24a9d28c5590575b5e2023')
build() {
  cd "$srcdir/gyachi-${_pkgver}"
  patch -Np1 -i "$srcdir/version-$pkgver.patch" || return 1
  export CFLAGS="$CFLAGS -D_FILE_OFFSET_BITS=64"
  ./autogen.sh || return 1
  ./configure --prefix=/usr --libexecdir=/usr/lib \
      --disable-rpath \
      --disable-wine \
      --disable-gtktest \
      --disable-glibtest \
      --with-x || return 1
  make || return 1
  make DESTDIR="$pkgdir" install || return 1
  #icon
  install -Dm644 $pkgdir/usr/share/gyachi/themes/gyachi-classic/gyach-icon_48.png \
  	$pkgdir/usr/share/pixmaps/$pkgname.png
}
