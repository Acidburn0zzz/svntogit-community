# Contributor: Tim Rakowski <tim.rakowski@gmail.com>

pkgname=python-pep8
pkgver=1.7.1
pkgrel=2
pkgdesc="The final release of the pep8 package"
arch=('any')
url="https://github.com/PyCQA/pycodestyle"
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
options=(!emptydirs)
source=("$pkgname-$pkgver.tar.gz::https://github.com/PyCQA/pycodestyle/archive/1.7.1.tar.gz")
sha512sums=('87206295d8b95c7129ca21a2644dc6ac78d840627d6ffd4d3ed088708833c259b7d6df70463385e8336af7e193f36888a6a69caf8bc43b6aae6b642fe61e99ee')

package() {
  cd "$srcdir/pycodestyle-1.7.1"
  python setup.py install --root="$pkgdir/" --optimize=1
  install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}

