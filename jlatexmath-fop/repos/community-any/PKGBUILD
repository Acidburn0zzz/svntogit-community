pkgname='jlatexmath-fop'
pkgver='0.9.4'
pkgrel='1'
pkgdesc='Java API to display mathematical formulas written in LaTeX.'
arch=('any')
url='http://forge.scilab.org/index.php/p/jlatexmath/'
license=('APACHE')
depends=('java-runtime')
makedepends=('apache-ant' 'java-environment')
source=("$pkgname-$pkgver.zip::http://forge.scilab.org/index.php/p/jlatexmath/downloads/191/get/")
md5sums=('d809c80ceca7edfd8aba07d2a43f0ff3')

build() {
return 0
}

package() {
  install -D $srcdir/$pkgname-$pkgver.zip "$pkgdir/usr/share/java/$pkgname.jar"
}
