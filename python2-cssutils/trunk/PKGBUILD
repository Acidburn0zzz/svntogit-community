pkgname=python2-cssutils
pkgver=0.9.8
pkgrel=1
pkgdesc="A CSS Cascading Style Sheets library for Python"
arch=('any')
url="http://cthedot.de/cssutils/"
license=('LGPL3')
depends=('python2')
makedepends=('unzip' 'setuptools')
source=("http://pypi.python.org/packages/source/c/cssutils/cssutils-0.9.8.zip")
md5sums=('416af035c002150da7248a1944bd9cf9')

build() {
  cd "${srcdir}/cssutils-${pkgver}"

  python2 setup.py install --root="$pkgdir"
}
