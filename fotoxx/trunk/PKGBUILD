# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>
pkgname=fotoxx  
pkgver=8.0
pkgrel=1
pkgdesc="A program for improving image files made with a digital camera"
url="http://kornelix.squarespace.com/fotoxx"
arch=('i686' 'x86_64')
license=('GPL2')
depends=('gtk2' 'freeimage-legacy' 'gimp-ufraw')
makedepends=('perl-exiftool')
optdepends=('printoxx: for printing from within fotoxx (only in AUR)' \
  'perl-exiftool: for gathering exif information, needed at build time (recommended)' \
  'brasero: for burning')
source=("http://kornelix.squarespace.com/storage/downloads/$pkgname-$pkgver.tar.gz")
md5sums=('66ad6298923a1593c8035ccdd122dfec')
replaces=('fotox')
install=fotoxx.install

build() {
  cd $srcdir/$pkgname-$pkgver
  rm $pkgname.1.gz
  sed -i 's+@ xdg-desktop-menu+\#@xdg-desktop-menu+' Makefile || return 1
  sed -i 's+@ ./dependencies.sh+\#@ ./dependencies.sh+' Makefile || return 1
  sed -i 's+/usr/share/man+\$\(DESTDIR\)/usr/share/man+' Makefile || return 1
  sed -i 's+@ chown+\#@ chown+' Makefile || return 1
  export PREFIX=/usr make  || return 1
  install -d $pkgdir/usr/share/{applications,man/man1} || return 1
  make DESTDIR=$pkgdir install || return 1
}
