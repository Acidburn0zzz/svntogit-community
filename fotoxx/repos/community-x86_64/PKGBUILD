# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>
pkgname=fotoxx  
pkgver=10.0
pkgrel=1
pkgdesc="A program for improving image files made with a digital camera"
url="http://kornelix.squarespace.com/fotoxx"
arch=('i686' 'x86_64')
license=('GPL3')
depends=('gtk2' 'gimp-ufraw' 'perl-exiftool' 'xdg-utils')
optdepends=('printoxx: for printing from within fotoxx' 'brasero: for burning')
source=("http://kornelix.squarespace.com/storage/downloads/$pkgname-$pkgver.tar.gz")
md5sums=('86113526dcadf6d31d2feff513769975')
replaces=('fotox')

build() {
  cd $srcdir/$pkgname-$pkgver
  export PREFIX=/usr 
  make || return 1 
  sed -i 's#/local##' desktop || return 1
}

package() {
  cd $srcdir/$pkgname-$pkgver
  install -Dm644 desktop \
    $pkgdir/usr/share/applications/$pkgname.desktop || return 1
  make DESTDIR=$pkgdir PREFIX=/usr install || return 1
}
