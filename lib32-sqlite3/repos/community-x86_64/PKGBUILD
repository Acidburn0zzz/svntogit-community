# Contributor: Kaos < gianlucaatlas dot gmail dot com >

pkgname=lib32-sqlite3
pkgver=3.6.15
pkgrel=1
pkgdesc="A C library that implements an SQL database engine"
arch=('x86_64')
url="http://www.sqlite.org/"
license=('LGPL')
groups=('lib32')
depends=('lib32-glibc')
source=(ftp://ftp.archlinux.org/core/os/i686/${pkgname/lib32-/}-${pkgver}-${pkgrel}-i686.pkg.tar.gz)

build() {
  mkdir -p ${startdir}/pkg/opt/lib32/usr/lib/
  cp -rPf ${startdir}/src/usr/lib/*.so* ${startdir}/pkg/opt/lib32/usr/lib
  cp -rPf ${startdir}/src/usr/lib/tcl8.5/sqlite3/*.so* ${startdir}/pkg/opt/lib32/usr/lib
}
md5sums=('3e0250eff9c89d2d5dd415fbf4143aa5')
