# Contributor: Viliam Pucik <viliam dot pucik at gmail dot com>

pkgname=gtk-kde4
pkgver=0.9.1
pkgrel=1
pkgdesc="Allows you to change style, icons, font of GTK applications in KDE4."
arch=('i686' 'x86_64')
url="http://kde-look.org/content/show.php?content=74689"
license=('GPL')
depends=('kdebase-workspace' 'gtk-engines')
makedepends=('cmake' 'automoc4')
source=(http://kde-look.org/CONTENT/content-files/74689-${pkgname}\(src\)${pkgver}.tar.gz
	'no_sudo.patch' 'fix-permission.patch')
md5sums=('bf9cbb66c570c3a9bf87b38b6a672224'
         '23f3b6e69040de048065b2ae7a7296a8'
         '9604d6cc7b1f96ec5aa8297baf6def09')

build() {
  cd ${srcdir}/${pkgname}

  patch -p1 -i ${srcdir}/no_sudo.patch || return 1
  patch -p1 -i ${srcdir}/fix-permission.patch || return 1
  
  cmake -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
  make DESTDIR=${pkgdir} install
}
