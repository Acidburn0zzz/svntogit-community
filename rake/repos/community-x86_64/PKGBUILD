pkgname=rake
pkgver=0.8.6
pkgrel=1
pkgdesc="A simple ruby build program with capabilities similar to make"
arch=('i686' 'x86_64')
url="http://rake.rubyforge.org"
license=("MIT")
depends=('ruby')
source=(http://rubyforge.org/frs/download.php/56636/rake-0.8.6.tgz)
build() {
  cd "$srcdir/$pkgname-$pkgver"
  DESTDIR="$pkgdir" ruby install.rb --no-ri --tests
}
md5sums=('35fecc5bec9de407fe346e9fd63b776b')
