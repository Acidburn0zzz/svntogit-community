post_upgrade() {
  /usr/bin/nspluginwrapper -i /usr/lib/nspluginwrapper/i386/plugins/libflashplayer.so
}

post_install() {
  post_upgrade
  echo "To use the flash player in firefox, you must set"
  echo "  dom.ipc.plugins.enabled.libflashplayer.so"
  echo "to true in about:config."
}

