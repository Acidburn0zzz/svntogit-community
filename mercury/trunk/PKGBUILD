#$Id: PKGBUILD,v 1.14 2009/02/15 17:46:49 BaSh Exp $
# Maintainer: Andrea Scarpino <andrea@archlinux.org>
# Contributor: DaNiMoTh <jjdanimoth@gmail.com>

pkgname=mercury
pkgver=1.9
pkgrel=4
pkgdesc="Java Based MSN client."
license=('custom')
arch=('i686' 'x86_64')
url="http://www.mercury.to"
depends=('java-runtime' 'unzip' 'libxss' 'libxt')
source=(http://thebachman.info/public/Versions_Ubuntu/$pkgname-messenger-$pkgver.tgz
	license.txt )
md5sums=('cbaa31027f49808f559d00b4e279529b'
         '6ce0e815d63db6ac55a28e8d52c3f8da')
                  
build() {
  cd "$srcdir"

  install -d "$pkgdir/usr/share/java/mercury"
  cp -r usr "$pkgdir"
  mv "$pkgdir/usr/share/mercury" "$pkgdir/usr/share/java/"
  
  install -D -m644 "$srcdir/license.txt" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  rm -rf "$pkgdir/usr/bin/mercury"
  ln -s /usr/share/java/mercury/startup/startup_linux.sh "$pkgdir/usr/bin/mercury"
}
