# Maintainer: Mikko Seppälä <t-r-a-y@mbnet.fi>
_pkgsourcename=libxdamage
pkgname=lib32-$_pkgsourcename
pkgver=1.1.2
pkgrel=1
pkgdesc="X11 damaged region extension library"
url="http://xorg.freedesktop.org/"
license=('GPL')
arch=('x86_64')
groups=('lib32')
depends=('lib32-glibc' 'lib32-libxfixes')
source=(ftp://ftp.archlinux.org/extra/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz)

build() {
        cd $srcdir
        mkdir -p $pkgdir/opt/lib32/usr/lib
        cp -dp usr/lib/*.so* $pkgdir/opt/lib32/usr/lib
}

md5sums=('a31b690530c0c648c89cca9c7463aafc')
