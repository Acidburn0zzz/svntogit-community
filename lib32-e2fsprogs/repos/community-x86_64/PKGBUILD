pkgname=lib32-e2fsprogs
pkgver=1.41.8
pkgrel=1
pkgdesc="Ext2 filesystem utilities"
arch=(x86_64)
url="http://e2fsprogs.sourceforge.net"
license=('GPL' 'LGPL')
depends=('lib32-glibc')
source=(http://mir.archlinux.fr/core/os/i686/${pkgname/lib32-/}-${pkgver}-${pkgrel}-i686.pkg.tar.gz)
md5sums=('128b28dc6a137c58ce2262680025f687')

build() {
  install -d $pkgdir/opt/lib32/lib/
  cp -dp $srcdir/lib/* $pkgdir/opt/lib32/lib/
}
