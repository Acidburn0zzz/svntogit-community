pkgname=myththemes
pkgver=0.24
pkgrel=2
pkgdesc="Themes for MythTV"
arch=('any')
url="http://www.mythtv.org/"
license=('GPL')
depends=("mythtv>=$pkgver")
source=("http://fossies.org/linux/misc/$pkgname-$pkgver.tar.bz2")
md5sums=('ac257cbe0c340c0bf271e66e58f0b64d')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make INSTALL_ROOT="$pkgdir" install
}
