# Contributor: Sergej Pupykin <pupykin.s+arch@gmail.com>

pkgname=id3lib-rcc
pkgver=3.8.3
pkgrel=5
pkgdesc="id3lib with librcc patch"
arch=('i686' 'x86_64')
url="http://id3lib.sourceforge.net/"
license=('GPL')
depends=(libxml2 db librcc zlib)
makedepends=(patch gcc34)
provides=(id3lib)
conflicts=(id3lib)
options=('!libtool')
source=(http://downloads.sourceforge.net/id3lib/id3lib-$pkgver.tar.gz \
    http://downloads.sourceforge.net/rusxmms/id3lib-csa2.tar.bz2 \
	arch.patch)
md5sums=('19f27ddd2dda4b2d26a559a4f0f402a7' '608a475f119974c8f72406fd84e1030f'\
         '8b503330d653578f75fc9f2bf3c3833d')

build() {
  cd $startdir/src/id3lib-$pkgver

  patch -Np1 <../id3lib/id3lib-ds-rcc.patch
  (cd src && patch -Np0 <../../arch.patch)

if [ "$CARCH" = "i686" ]; then
  export CFLAGS="-march=$CARCH -O2 -pipe"
  export CXXFLAGS="-march=$CARCH -O2 -pipe"
fi

if [ "$CARCH" = "x86_64" ]; then
  export CFLAGS="-march=x86-64 -O2 -pipe"
  export CXXFLAGS="-march=x86-64 -O2 -pipe"
fi

  export CC=gcc-3.4
  export CXX=g++-3.4

  ./configure --prefix=/usr
  make LDFLAGS=-lrcc || return 1
  make DESTDIR=$startdir/pkg install
}
