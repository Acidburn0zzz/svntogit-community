build() {
  cd "${srcdir}"
  for lang in $(echo "${_languages}" | sed 's|,| |g'); do
    bsdtar xf spell-${lang}.xpi
    install -D -m644 ${lang}.aff "$pkgdir/usr/lib/thunderbird-2.0/dictionaries/${lang}.aff" || return 1
    install -D -m644 ${lang}.dic "$pkgdir/usr/lib/thunderbird-2.0/dictionaries/${lang}.dic" || return 1
  done
}
