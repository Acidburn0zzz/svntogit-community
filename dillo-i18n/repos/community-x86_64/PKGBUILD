# $Id: PKGBUILD,v 1.5 2009/04/09 09:51:55 sergej Exp $
# Maintainer: Sergej Pupykin <pupykin.s+arch@gmail.com>
# Contributor: Pavel Borzenkov <pavel.borzenkov@gmail.com>

pkgname=dillo-i18n
pkgver=0.8.6
pkgrel=2
pkgdesc="Dillo with i18n patchset"
arch=('i686' 'x86_64')
url="http://teki.jpn.ph/pc/software/index-e.shtml"
depends=('gtk' 'libjpeg' 'perl' 'openssl' 'libpng' 'gcc')
license=('GPL')
conflicts=(dillo)
provides=(dillo)
backup=(etc/dillo/{dillorc,dpidrc})
source=(http://teki.jpn.ph/pc/software/dillo-$pkgver-i18n-misc-20060709.tar.bz2)
md5sums=('5e632d551065abadac320edaa9ead76a')

build() {
  cd $startdir/src/dillo-$pkgver-i18n-misc-20060709
  ./configure --prefix=/usr --sysconfdir=/etc/dillo --enable-cookies --disable-dlgui
  make || return 1
  make DESTDIR=$startdir/pkg install
}
