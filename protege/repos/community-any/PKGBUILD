pkgname=protege
pkgver=4.1.rc4
pkgrel=1
pkgdesc='Free, open source ontology editor and knowledge-base framework'
arch=('any')
url='http://protege.stanford.edu/'
license=('MPL')
depends=('java-runtime')
optdepends=('graphviz: for owlviz')
source=("http://protege.stanford.edu/download/protege/4.1/zip/protege-4.1-rc4.231.zip"
        "${pkgname}.sh")
md5sums=('cf2039645542d602b3746016c7213b20'
         '777467111f9b6744a1735d307e225e70')

package() {
  cd Protege_4.1_rc4

  # remove windows crud
  rm run.bat

  install -d ${pkgdir}/usr/share/java/${pkgname}
  cp -r * ${pkgdir}/usr/share/java/${pkgname}

  install -d ${pkgdir}/usr/bin
  install -D ${srcdir}/protege.sh ${pkgdir}/usr/bin/protege
}
