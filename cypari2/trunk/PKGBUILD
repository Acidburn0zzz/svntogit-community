# Maintainer: Antonio Rojas <arojas@archlinux.org>

pkgbase=cypari2
pkgname=python-cypari2
pkgver=2.1.2b1
pkgrel=1
pkgdesc="Cython bindings for PARI"
arch=(x86_64)
url="https://www.sagemath.org"
license=(LGPL)
depends=(python-cysignals)
makedepends=(cython)
source=($pkgname-$pkgver.tar.gz::"https://github.com/defeo/cypari2/archive/$pkgver.tar.gz")
sha256sums=('8c58cb3c6a8e51e8f1319619761df747ae56823b159c3d326d2b11b0ca5598cd')

build() {
  cd $pkgbase-$pkgver
  python setup.py build
}

package_python-cypari2() {
  cd $pkgbase-$pkgver
  python setup.py install --root="$pkgdir"
}
