# Contributor: enderst <enderst@gmail.com>

pkgname=gpodder
pkgver=0.16.1
pkgrel=1
pkgdesc="A podcast reciever/catcher"
license=('GPL3')
arch=('i686' 'x86_64')
url="http://gpodder.berlios.de/"
depends=('pygtk' 'python-feedparser' 'dbus-python')
makedepends=('intltool' 'imagemagick' 'help2man')
optdepends=('libgpod: for ipod support'
            'mplayer: for ipod video support'
            'pil: rockbox cover art support'
            'pymad or python-eyed3: for ipod support'
            'python-eyed3: for mp3 tag updating'
            'vorbis-tools: for ogg tag updating and converting')
source=(http://download.berlios.de/${pkgname}/${pkgname}-${pkgver}.tar.gz)
md5sums=('b97bccb2d0f33dcbf40a42684f344f84')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}/" install
}
