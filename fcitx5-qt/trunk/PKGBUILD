pkgname=fcitx5-qt
pkgver=0.0.0.20200403
_commit=1cbb4a82e6a205a5a2df034756d8f398552f6306
pkgrel=1
pkgdesc="Fcitx5 Qt Library"
arch=('x86_64')
url="https://github.com/fcitx/fcitx5-qt"
license=('GPL')
depends=('fcitx5' 'qt5-x11extras')
makedepends=('extra-cmake-modules')
source=("https://github.com/fcitx/fcitx5-qt/archive/$_commit/fcitx5-qt-$_commit.tar.gz")
sha512sums=('cc1a8a957e593645faea2acd27276da7ce7222eb97d01693d89e8b0cd839c67c746522b1a8e1ce847b63cfd594e1103f6f5271ded9d560e6dcc6c6f1af0b2fb5')

build(){
  cd $pkgname-$_commit

  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR=/usr/lib -DENABLE_QT4=0 .
  make
}

package() {
  cd $pkgname-$_commit
  make DESTDIR="$pkgdir" install
}
