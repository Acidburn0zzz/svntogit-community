pkgname=fcitx5-qt
pkgver=0.0.0.20200516
_commit=128066eeee806c1f235fe810670f1aec6d6c43c8
pkgrel=1
pkgdesc="Fcitx5 Qt Library"
arch=('x86_64')
url="https://github.com/fcitx/fcitx5-qt"
license=('GPL')
depends=('fcitx5' 'qt5-x11extras')
makedepends=('extra-cmake-modules')
source=("https://github.com/fcitx/fcitx5-qt/archive/$_commit/fcitx5-qt-$_commit.tar.gz")
sha512sums=('1a87655f2105434451c250dd2de910eab77dd8b704b9ec812125bfdc4f34ed5ca6e96df3c19a6715ff9fb8269ab4c7aaa989b5691ba06e6b3679bf7d72ae5d8e')

build(){
  cd $pkgname-$_commit

  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR=/usr/lib -DENABLE_QT4=0 .
  make
}

package() {
  cd $pkgname-$_commit
  make DESTDIR="$pkgdir" install
}
