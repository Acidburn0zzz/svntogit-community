# Contributor: pukyxd

pkgname=xerces-c-2
pkgver=2.8.0
pkgrel=1 
pkgdesc="A validating XML parser written in a portable subset of C++." 
arch=('i686' 'x86_64')
url="http://xerces.apache.org/xerces-c"
license=("APACHE")
depends=('gcc-libs')
options=('!makeflags')
source=("http://apache.rinet.ru/dist/xerces/c/2/sources/xerces-c-src_2_8_0.tar.gz")
md5sums=('5daf514b73f3e0de9e3fce704387c0d2')

build() { 
  export XERCESCROOT=$startdir/src/xerces-c-src_2_8_0
  cd $startdir/src/xerces-c-src_2_8_0/src/xercesc
  ./runConfigure -plinux -cgcc -xg++ -minmem -nsocket -tnative -rpthread -P/opt/$pkgname
  make || return 1 
  make DESTDIR=$startdir/pkg/ install
}
