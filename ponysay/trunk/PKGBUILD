pkgname=ponysay
pkgver=2.5.1
pkgrel=1
pkgdesc="Pony wrapper for cowsay"
url="https://github.com/erkin/ponysay"
arch=('any')
license=('custom:WTFPL')
depends=('python' 'bash')
makedepends=('git')
source=("ponysay-$pkgver.tar.gz::https://github.com/erkin/ponysay/tarball/$pkgver")
md5sums=('77d8cb39868f6245128c514660ee77e1')

package() {
  cd "$srcdir/erkin-ponysay-"*

  python3 setup.py --prefix=/usr --dest-dir=$pkgdir --everything install
}
