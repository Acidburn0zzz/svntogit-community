# $Id: PKGBUILD,v 1.15 2009/05/04 09:42:16 pressh Exp $
# Maintainer: Ronald van Haren <ronald.archlinux.org>
# Contributor: Ronald van Haren <ronald.archlinux.org>

pkgname=elitaire-svn
pkgver=40502
pkgrel=1
pkgdesc="efl-based solitaire card game."
arch=('i686' 'x86_64')
groups=('e17-extra-svn')
url="http://www.enlightenment.org"
license=(custom)
depends=('ewl-svn' 'esmart-svn')
makedepends=('svn')
conflicts=('elitaire')
provides=('elitaire')
replaces=('elitaire-cvs')
options=('!libtool')
source=('elitaire.desktop')
md5sums=('c447180fc1c9bf36d72a1b94168bfa00')

_svntrunk="http://svn.enlightenment.org/svn/e/trunk/elitaire"
_svnmod="elitaire"

build() {
   cd $srcdir

msg "Connecting to $_svntrunk SVN server...."
  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  cp -r $_svnmod $_svnmod-build
  cd $_svnmod-build

  ./autogen.sh --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1

# install desktop file
  install -Dm644 $srcdir/elitaire.desktop \
	$pkgdir/usr/share/applications/elitaire.desktop

# install license files
  install -Dm644 $srcdir/$_svnmod-build/COPYING \
	$pkgdir/usr/share/licenses/$pkgname/COPYING
      
  rm -r $startdir/src/$_svnmod-build
}
