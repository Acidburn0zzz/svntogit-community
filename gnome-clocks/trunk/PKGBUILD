# Contributor: Yangtse Su <yangtsesu@gmail.com>

pkgname=gnome-clocks
pkgver=0.1.5
pkgrel=1
pkgdesc="Clock application designed for GNOME"
arch=('any')
url="https://live.gnome.org/GnomeClocks"
license=('GPL')
depends=('python2-gobject' 'clutter-gtk' 'gnome-desktop' 'libgweather' 'libnotify' 'libcanberra' 'python2-xdg' 'xdg-utils')
makedepends=('python2-distutils-extra')
install=$pkgname.install
source=(http://ftp.gnome.org/pub/GNOME/sources/$pkgname/${pkgver%.*}/$pkgname-$pkgver.tar.xz)
sha256sums=('42ee9924515fac1c57229057e57e37ea1a7915f9f43e64064f8e740433058b12')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  python2 setup.py install --root=$pkgdir/ --optimize=1
}
