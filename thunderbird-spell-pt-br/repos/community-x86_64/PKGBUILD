# Contributor: Hugo Doria <hugo@archlinux.org>

pkgname=thunderbird-spell-pt-br
_realname=Vero
pkgver=2.0
pkgrel=1
pkgdesc="Portuguese (Brazil) dictionary for Mozilla Thunderbird"
_lang=pt_BR
arch=('i686' 'x86_64')
license=('LGPL')
depends=("thunderbird>=${pkgver}")
makedepends=('unzip')
url="http://www.broffice.org.br/verortografico"
source=("http://www.deso-se.com.br/downloads/broffice.org/${_realname}_${_lang}_V200AOC.xpi")
md5sums=('066a52879e497e67f7f37d5b11cf625a')

build() {
	cd "${srcdir}/dictionaries"

	mkdir -p ${pkgdir}/usr/lib/thunderbird-${pkgver}/dictionaries || return 1

   	install -D -m644 {${_lang}.aff,${_lang}.dic} ${pkgdir}/usr/lib/thunderbird-${pkgver}/dictionaries/ || return 1
#   	install -D -m644 ${_lang}.dic ${pkgdir}/usr/lib/thunderbird-${pkgver}/dictionaries/${_lang}.dic || return 1
}
