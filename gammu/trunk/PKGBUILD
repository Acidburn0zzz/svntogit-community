pkgname=gammu
pkgver=1.27.93
pkgrel=1
pkgdesc="GNU All Mobile Management Utilities"
arch=('i686' 'x86_64')
url="http://wammu.eu/"
license=('GPL')
depends=('bluez' 'curl' 'libmysqlclient'
         'postgresql-libs' 'python' 'libusb1')
makedepends=('cmake' 'doxygen' 'mysql')
optdepends=('dialog: support for the gammu-config script')
#options=('!makeflags')
source=(http://dl.cihar.com/gammu/releases/${pkgname}-${pkgver}.tar.bz2)

build() {
  #mkdir ${srcdir}/${pkgname}-${pkgver}/build
  #cd ${srcdir}/${pkgname}-${pkgver}/build
  #cmake -DBUILD_SHARED_LIBS=ON -DCMAKE_INSTALL_PREFIX="/usr" ..

  cd "$srcdir/$pkgname-$pkgver"

  cmake . -DCMAKE_INSTALL_PREFIX="/usr"
  make || return 1
  make DESTDIR="$pkgdir" install
}
md5sums=('08cce72dd9bc1f94559139037407f8fd')
