# $Id$
# Maintainer: Angel Velasquez <angvp@archlinux.org>
# Maintainer: Juergen Hoetzel <juergen@archlinux.org>

pkgname=lxpanel
pkgver=0.5.7
pkgrel=2
pkgdesc="Panel of the LXDE Desktop"
arch=('i686' 'x86_64')
license=('GPL2')
url="http://lxde.org/"
groups=('lxde')
depends=('gtk2' 'alsa-lib' 'menu-cache' 'lxmenu-data')
source=(http://downloads.sourceforge.net/lxde/${pkgname}-${pkgver}.tar.gz
        0001_fix_usage_of_gtkrequisition.patch
        0002_fixed_errors_in_tooltips.patch)
optdepends=(pcmanfm)
md5sums=('408483b7101ba71de00b6ae2e2c2f4fd'
         '6f6540c9a7264906ee5440d8ee884faa'
         '15231d1cf5d73f8d390f9377f14dc807')

build() {
	cd "$srcdir/$pkgname-$pkgver"
	./configure --sysconfdir=/etc --prefix=/usr 
    patch -Np1 -i $srcdir/0001_fix_usage_of_gtkrequisition.patch
    patch -Np1 -i $srcdir/0002_fixed_errors_in_tooltips.patch
	make
}

package() {
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir" install
}
