pkgname=tinyxml
pkgver=2.5.3
pkgrel=1
pkgdesc="TinyXml is a simple, small, C++ XML parser that can be easily integrating into other programs"
depends=()
arch=('i686' 'x86_64')
source=("http://downloads.sourceforge.net/tinyxml/tinyxml_${pkgver//./_}.tar.gz")
url='http://www.grinninglizard.com/tinyxml/'
license=('zlib')
md5sums=('84b605a31628e7f1a6694d47bf5999cc')

build()
{
	cd $startdir/src/$pkgname

	mkdir -p $startdir/pkg/usr/include/tinyxml
	cp {*.h,*.cpp} $startdir/pkg/usr/include/tinyxml

	rm $startdir/pkg/usr/include/tinyxml/xmltest.cpp

	# Compile and run test app
	make || return 1
	./xmltest || return 1
}
