# Maintainer: Hugo Doria <hugo@archlinux.org<
# Contributor: Gour <Gour <gour@mail.inet.hr>

pkgname=libisoburn
pkgver=0.3.0
pkgrel=2
pkgdesc="frontend for libraries libburn and libisofs"
url="http://libburnia.pykix.org/wiki/Libisoburn"
arch=('i686' 'x86_64')
license=('GPL2')
depends=('libburn>=0.5.8' 'libisofs>=0.6.12' 'readline')
source=(http://files.libburnia-project.org/releases/${pkgname}-${pkgver}.pl00.tar.gz)
md5sums=('3db196f932ae2ef50d82eb6c8f8a1548')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
}
