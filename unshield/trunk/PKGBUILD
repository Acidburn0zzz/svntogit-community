# $Id: PKGBUILD,v 1.6 2008/08/15 13:51:19 sergej Exp $
# Maintainer: Giovanni Scafora <linuxmania@gmail.com>

pkgname=unshield
pkgver=0.5.1
pkgrel=1
pkgdesc="Extracts CAB files from InstallShield installers"
arch=('i686' 'x86_64')
url="http://synce.sourceforge.net/synce/unshield.php"
license=('custom')
depends=('zlib')
options=('!libtool')
source=(http://downloads.sourceforge.net/sourceforge/synce/unshield-$pkgver.tar.gz)
md5sums=('cc06e5573a4d5095871bf1bb14f3da1f')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
  install -D -m644 LICENSE $startdir/pkg/usr/share/licenses/unshield/LICENSE
}
