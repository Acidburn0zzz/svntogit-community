# $Id$
# Maintainer: Felix Yan <felixonmars@archlinux.org>

pkgname=babel
pkgdesc='Turn ES6 code into readable vanilla ES5 with source maps'
pkgver=6.0.12
pkgrel=1
arch=('any')
url='https://babeljs.io/'
license=('MIT')
depends=('nodejs')
makedepends=('npm' 'git')
source=(http://registry.npmjs.org/$pkgname/-/$pkgname-$pkgver.tgz
        LICENSE)
noextract=($pkgname-$pkgver.tgz)
sha256sums=('9bb932108cec6f6cb42c98dc68cbec50fd4a025e958762ad36d432992e155f5b'
            '8a5a22eb7991f5a022b91273b2395c2342f56fb43deddd29c248efb40c8ad62c')

package() {
  npm install -g --user root --prefix "$pkgdir"/usr "$srcdir"/$pkgname-$pkgver.tgz
  rm -r "$pkgdir"/usr/etc
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
