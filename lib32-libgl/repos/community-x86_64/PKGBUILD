# Maintainer: Mikko Seppälä <t-ra-y-@mbnet.fi>
_pkgsourcename=libgl
pkgname=lib32-$_pkgsourcename
pkgver=7.4.2
pkgrel=2
pkgdesc="Mesa DRI OpenGL library and drivers"
arch=(x86_64)
url="http://mesa3d.sourceforge.net"
license=('LGPL')
groups=('lib32')
depends=('lib32-libxxf86vm' 'lib32-libdrm>=2.0' 'lib32-libxext')
replaces=('lib32-libgl-dri')
provides=('lib32-libgl-dri')
source=(ftp://ftp.archlinux.org/extra/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz)
md5sums=('b85f3b9d00268b38778df0b7ff32d255')

build() {
	cd $startdir/src
	mkdir -p $startdir/pkg/opt/lib32/usr/lib
	cp -dp usr/lib/*.so* $startdir/pkg/opt/lib32/usr/lib
	# Fix for intel-dri
	install -Dm755 $startdir/src/usr/lib/xorg/modules/dri/libdricore.so $startdir/pkg/opt/lib32/usr/lib/

}
