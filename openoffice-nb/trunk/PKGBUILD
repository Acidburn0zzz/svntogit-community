# Contributor: Sarah Hay <sarah@archlinux.org>

pkgname=openoffice-nb
pkgver=3.1.0
pkgrel=1
arch=('i686' 'x86_64')
license=('GPL')
pkgdesc="OpenOffice Norwegian Bokmal language files"
url="http://www.openoffice.org"
makedepends=('rpmextract')
depends=('openoffice-base')
source=(http://ftp-1.gwdg.de/pub/openoffice/extended/3.1.0rc2/OOo_3.1.0rc2_20090427_LinuxIntel_langpack_nb.tar.gz)
md5sums=('512c43963976a7b7a5b10313e252b6f3')

build() {
  cd ${srcdir}/*native_packed*/RPMS
  for i in *.rpm
    do rpmextract.sh $i
  done

  # install openoffice language files
  mkdir -p "${pkgdir}/opt/openoffice/basis-link"
  cp -R opt/openoffice.org/basis3.1/* "${pkgdir}/opt/openoffice/basis-link" || return 1
  cp -R opt/openoffice.org3/* "${pkgdir}/opt/openoffice/basis-link" || return 1
  chown root:root -R "${pkgdir}/opt/openoffice"
}
