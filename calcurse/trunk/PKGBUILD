pkgname=calcurse
pkgver=3.1.0
pkgrel=1
pkgdesc='A text-based personal organizer.'
arch=('i686' 'x86_64')
url='http://calcurse.org/'
license=('BSD')
depends=('ncurses')
install='calcurse.install'
source=("http://calcurse.org/files/${pkgname}-${pkgver}.tar.gz"{,.asc})
md5sums=('18184927a50ae288b8cbaca218633c15'
         '619791500703af333b8eb22d6c60bf1e')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --enable-docs --without-asciidoc --prefix=/usr --mandir=/usr/share/man
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}

