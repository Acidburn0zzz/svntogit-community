pkgname=calcurse
pkgver=3.1.2
pkgrel=1
pkgdesc='A text-based personal organizer.'
arch=('i686' 'x86_64')
url='http://calcurse.org/'
license=('BSD')
depends=('ncurses')
install='calcurse.install'
source=("http://calcurse.org/files/${pkgname}-${pkgver}.tar.gz"{,.asc})
md5sums=('9ad32bd0efa9c8ed1e1d7df49aef5663'
         '484c86e82252d39917d00fe4f80d807f')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --enable-docs --without-asciidoc --prefix=/usr --mandir=/usr/share/man
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
