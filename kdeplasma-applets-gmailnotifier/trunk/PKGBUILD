# $Id: $
# Maintainer: Andrea Scarpino <andrea@archlinux.org>

pkgname=kdeplasma-applets-gmailnotifier
pkgver=144
pkgrel=2
pkgdesc="A GMail Notifier plasmoid"
arch=('i686' 'x86_64')
url="http://gmailnotifier.googlecode.com/"
license=('GPL')
depends=('kdebase-workspace>=4.3.85')
makedepends=('cmake' 'automoc4')
conflicts=('kdeplasma-gmailnotifier')
replaces=('kdeplasma-gmailnotifier')
#svn co -q http://gmailnotifier.googlecode.com/svn/trunk/ kdeplasma-applets-gmailnotifier
source=("ftp://ftp.archlinux.org/other/kde/${pkgname}-r${pkgver}.tar.bz2")
md5sums=('824e796959ba2b7608a6284fbdcc47e8')

build() {
  cd ${srcdir}
  mkdir build
  cd build
  cmake ../${pkgname} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release
  make  || return 1
  make DESTDIR=${pkgdir} install
}
