# Maintainer: Thomas Dziedzic < gostrc at gmail >
# Contributor: James Hunt <canadianwarship at gmail dot com>

pkgname=clojure-contrib
pkgver=1.2.0
pkgrel=2
pkgdesc='Stable release of user contributed libraries for Clojure.'
arch=('any')
url='http://www.clojure.org'
license=('CPL' 'EPL')
depends=('clojure=1.2.0')
#makedepends=('zip' 'maven')
source=("http://github.com/downloads/clojure/${pkgname}/${pkgname}-${pkgver}.zip")
md5sums=('83cc86fd2929ca417a9ab9f2a0dedadb')

package() {
  cd ${pkgname}-${pkgver}

  #mvn -s ../../clojure-contrib-settings.xml package -Dclojure.jar=/usr/share/clojure/clojure.jar

  install -D -m644 ${srcdir}/${pkgname}-${pkgver}/target/${pkgname}-${pkgver}.jar \
    ${pkgdir}/usr/share/clojure/${pkgname}.jar
}
