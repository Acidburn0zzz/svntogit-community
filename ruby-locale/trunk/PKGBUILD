# $Id$
# Maintainer: Dave Reisner <d@falconindy.com>
# Contributor: Alexander Fehr <pizzapunk gmail com>

pkgname=ruby-locale
pkgver=2.0.5
pkgrel=3
pkgdesc="Pure ruby library which provides basic APIs for localization"
arch=('any')
url="http://www.yotabanana.com/hiki/ruby-locale.html"
license=('RUBY')
depends=('ruby')
source=(http://rubyforge.org/frs/download.php/67113/ruby-locale-$pkgver.tar.gz)
md5sums=('2945e317ca1540e7dc6a1b65f7a259f8')

build() {
  cd $srcdir/ruby-locale-$pkgver

  ruby setup.rb config
  ruby setup.rb setup
}

package() {
  cd $srcdir/ruby-locale-$pkgver

  ruby setup.rb install --prefix=$pkgdir
}
