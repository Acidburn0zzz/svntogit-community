# Maintainer:
# Contributor: Juergen Hoetzel <juergen@archlinux.org>

pkgname=librep
pkgver=0.91.0
pkgrel=1
pkgdesc="A Lisp system for UNIX"
license=('GPL2')
arch=('i686' 'x86_64')
url="http://sawfish.wikia.com/wiki/Librep"
depends=('gmp' 'gdbm' 'libffi' 'bash')
install=${pkgname}.install
options=('libtool')
source=(http://download.tuxfamily.org/sawfish/${pkgname}/${pkgname}-${pkgver}.tar.bz2)
sha1sums=('d680baf1bff0c8e8db13017ea9400624cff147ba')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --disable-static \
    --prefix=/usr \
    --libexecdir=/usr/lib/$pkgname  \
    --with-readline
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  # create some directories or make install fails
#  install -d $pkgdir/usr/{share/aclocal,lib/pkgconfig}
  make DESTDIR=${pkgdir} install
}
