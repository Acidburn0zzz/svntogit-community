# Maintainer: Jelle van der Waa <jelle vdwaa nl>
pkgname=vim-snipmate
pkgver=0.83
_scriptid=11006
pkgrel=7
pkgdesc='TextMate-style snippets for Vim '
arch=('any')
url='http://www.vim.org/scripts/script.php?script_id=2540'
license=('GPL2')
depends=('vim')
groups=('vim-plugins')
install=vimdoc.install
source=("${pkgname}.zip"::"http://www.vim.org/scripts/download_script.php?src_id=${_scriptid}")
md5sums=('9bf94595c3fca7974559877ccff1938e')

package() {
        cd ${srcdir}


        # Install files
        #install  ${pkgdir}/usr/share/vim/vimfiles/
        install -dm755 $pkgdir/usr/share/vim/vimfiles/{doc,plugin,ftplugin,snippets,syntax,autoload} 
        install -dm755 $pkgdir/usr/share/vim/vimfiles/after/plugin/

        install -m644 $srcdir/after/plugin/snipMate.vim $pkgdir/usr/share/vim/vimfiles/after/plugin/snipMate.vim
        #install -m644 $srcdir/{doc,plugin,ftplugin,snippets,syntax,autoload}/* $pkgdir/usr/share/vim/vimfiles/
        for i in doc plugin ftplugin snippets syntax autoload 
        do
            install -m644 $srcdir/$i/* $pkgdir/usr/share/vim/vimfiles/$i/
        done
        #cp -r $srcdir/{after,doc,plugin,ftplugin,snippets,syntax,autoload} $pkgdir/usr/share/vim/vimfiles/

}
