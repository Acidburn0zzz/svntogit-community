# Maintainer: Antonio Rojas <arojas@archlinux.org>

pkgname=pysol_cards
pkgver=0.4.1
pkgrel=1
pkgdesc='Deal PySol FC Cards'
arch=(any)
url='https://pypi.org/project/pysol-cards/'
license=(MIT)
depends=(python)
makedepends=(python-setuptools)
source=("https://pypi.io/packages/source/p/$pkgname/$pkgname-$pkgver.tar.gz")
sha256sums=('c293dde8d8e40a50340390bb1b679cc892e50bc36dacd3e154674c3526e11dcb')

package() {
  cd $pkgname-$pkgver
  python setup.py install --root "$pkgdir" --optimize=1
  install -D -m644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}
