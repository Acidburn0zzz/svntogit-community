# Contributor: karnath <karnathtorjian@gmail.com>

pkgname=zathura-plugin-djvu
pkgver=0.1.1
pkgrel=1
pkgdesc="Adds DjVu support to zathura by using the djvulibre library"
arch=('i686' 'x86_64')
url="https://pwmt.org/projects/zathura/plugins/zathura-djvu/"
license=('custom')
depends=('djvulibre' 'zathura')
source=(https://pwmt.org/projects/zathura/download/zathura-$pkgver.tar.gz)

build(){
  cd ${srcdir}/$_gitname-build/
  make
  make DESTDIR="$pkgdir" install
}

