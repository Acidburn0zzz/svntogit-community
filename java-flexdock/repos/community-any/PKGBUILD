pkgname=java-flexdock
pkgver=0.5.2
pkgrel=1
pkgdesc="Docking framework for Swing"
arch=('any')
url="https://flexdock.dev.java.net/"
license=('BSD')
depends=('java-runtime' 'java-commons-logging' 'java-skinlf' 'jgoodies-looks')
#source=(https://flexdock.dev.java.net/files/documents/2037/152435/flexdock-$pkgver.zip
source=(flexdock-$pkgver.jar::ftp://ftp.archlinux.org/other/community/java-flexdock/flexdock.jar
	license)
md5sums=('60022e4a456d8d5482c18e790480fb03'
	 '880ff68650e66d0e26b89aca3fb56361')

build() {
  install -Dm0644 $srcdir/flexdock-$pkgver.jar $pkgdir/usr/share/java/flexdock/flexdock.jar
  install -Dm0644 $srcdir/license $pkgdir/usr/share/licenses/$pkgname/license
}
