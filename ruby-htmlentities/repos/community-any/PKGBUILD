# Maintainer: Stefan Husmann  <stefan-husmann@t-online.de>

pkgname=ruby-htmlentities
_pkgname=htmlentities
pkgver=4.2.0
pkgrel=2
pkgdesc="A fast and liberal HTML parser for Ruby."
arch=('any')
url="http://htmlentities.rubyforge.org"
license=('MIT')
depends=('ruby')
makedepends=('rubygems')
source=(http://rubyforge.org/frs/download.php/62614/htmlentities-4.2.0.gem)
md5sums=('ad78c92451862e54fa608539d7c1bccd')

build() {
  cd "$srcdir"
  gem install $_pkgname --install-dir \
    "$pkgdir/usr/lib/ruby/gems/1.9.1" || return 1
  install -Dm644 \
    $pkgdir/usr/lib/ruby/gems/1.9.1/gems/htmlentities-4.2.0/COPYING.txt \
    $pkgdir/usr/share/licenses/$pkgname/COPYING.txt
  rm $pkgdir/usr/lib/ruby/gems/1.9.1/gems/htmlentities-4.2.0/COPYING.txt
}
