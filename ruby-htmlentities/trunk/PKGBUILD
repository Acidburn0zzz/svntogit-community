# Maintainer: Daniel J Griffiths <ghost1227@archlinux.us>
# Contributor: Stefan Husmann  <stefan-husmann@t-online.de>

pkgname=ruby-htmlentities
pkgver=4.2.0
pkgrel=3
pkgdesc="A fast and liberal HTML parser for Ruby."
arch=('any')
url="http://htmlentities.rubyforge.org"
license=('MIT')
depends=('ruby')
source=(http://rubyforge.org/frs/download.php/62614/htmlentities-${pkgver}.gem)
md5sums=('ad78c92451862e54fa608539d7c1bccd')

build() {
	installdir=usr/lib/ruby/gems/1.9.1
	cd ${srcdir}
	gem install htmlentities --install-dir ${pkgdir}/${installdir} || return 1
	mkdir -p ${pkgdir}/usr/share/licenses/${pkgname}
	mv ${pkgdir}/${installdir}/gems/htmlentities-${pkgver}/COPYING.txt \
	   ${pkgdir}/usr/share/licenses/${pkgname}/
}
