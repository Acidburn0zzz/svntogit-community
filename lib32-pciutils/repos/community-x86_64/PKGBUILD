_pkgsourcename=pciutils
pkgname=lib32-pciutils
pkgver=3.1.2
pkgrel=1
pkgdesc="PCI bus configuration space access library and tools"
arch=(x86_64)
url="http://atrey.karlin.mff.cuni.cz/~mj/pciutils.html"
license=('GPL2')
groups=lib32
source=(ftp://ftp.heanet.ie/mirrors/ftp.archlinux.org//core/os/i686/${_pkgsourcename}-${pkgver}-${pkgrel}-i686.pkg.tar.gz)
md5sums=('f7f64a10bc0b5cad631722484f590d48')

build() {
        cd $startdir/src
        mkdir -p $startdir/pkg/opt/lib32/usr/lib
#        cp -dp usr/lib/*.so* $startdir/pkg/opt/lib32/usr/lib
        cp -dp usr/lib/*.a* $startdir/pkg/opt/lib32/usr/lib
}
