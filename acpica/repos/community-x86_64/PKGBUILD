pkgname=acpica
pkgver=20190108
pkgrel=1
pkgdesc="ACPI tools, including Intel ACPI Source Language compiler"
arch=('x86_64')
url="https://acpica.org"
license=('GPL2')
depends=('glibc')
makedepends=('flex' 'bison')
provides=('iasl')
conflicts=('iasl')
replaces=('iasl')
options=('!makeflags')
source=("https://acpica.org/sites/acpica/files/acpica-unix-${pkgver}.tar.gz")
sha256sums=('989822b4044d0c64caad7bf256bed7be05d41efa87843056876e43d6ecc8102f')

build() {
  cd acpica-unix-${pkgver}
  make
}

package() {
  cd acpica-unix-${pkgver}
  make DESTDIR=${pkgdir} install
}
