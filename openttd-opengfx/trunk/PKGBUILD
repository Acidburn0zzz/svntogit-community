# $Id: PKGBUILD 6111 2009-12-01 07:27:52Z vegai $
# Maintainer: Vesa Kaihlavirta <vegai@iki.fi>

pkgname=openttd-opengfx
pkgver=0.2.0
pkgrel=1
pkgdesc="Free graphics set for openttd"
arch=('any')
url="http://www.openttd.org"
license=('GPL')
#depends=(libpng sdl icu fontconfig hicolor-icon-theme desktop-file-utils)
#makedepends=()
source=(http://bundles.openttdcoop.org/opengfx/releases/opengfx-$pkgver.zip)


#install=(openttd.install)

build() {
    cd $srcdir/opengfx-$pkgver

    chmod 0644 * || return 1
    mkdir -p -m 0755 $pkgdir/usr/share/openttd/data   
    cp * $pkgdir/usr/share/openttd/data/ || return 1
}
md5sums=('dc8e72a8f6d855cdc3685b22737c6237')
