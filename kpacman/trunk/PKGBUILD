# Maintainer: Sergej Pupykin <pupykin.s+arch@gmail.com>
# Maintainer: Eric Belanger <belanger@astro.umontreal.ca>

pkgname=kpacman
pkgver=0.3.2
pkgrel=5
pkgdesc="The classic pacman arcade game for the KDE Desktop"
arch=(i686 x86_64)
url="http://kpacman.sourceforge.net/"
license=("GPL")
depends=(kdegames)
source=(http://downloads.sourceforge.net/sourceforge/kpacman/$pkgname-$pkgver.tar.gz \
	build-fix.patch)
md5sums=('4405bd9f7a78d005f8540c8d610eb188' '79d238e3e802b0f7231d9860f2c67d37')

build() {
  cd $startdir/src/$pkgname-$pkgver
  patch -p1 <../build-fix.patch || return 1
  ./configure --prefix=/opt/kde --with-qt-dir=/opt/qt
  make || return 1
  make DESTDIR=$startdir/pkg install
}
