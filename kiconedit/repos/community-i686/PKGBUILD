# $Id: PKGBUILD 52044 2009-09-14 16:18:23Z andrea $
# Maintainer: Andrea Scarpino <andrea@archlinux.org>
# Contributor: Pierre Schmitz <pierre@archlinux.de>

pkgname=kiconedit
pkgver=4.3.3
pkgrel=1
pkgdesc="Icon Editor"
arch=('i686' 'x86_64')
url='http://userbase.kde.org/KIconEdit'
license=('GPL' 'FDL')
depends=('kdebase-runtime')
makedepends=('pkgconfig' 'cmake' 'automoc4')
install=kiconedit.install
source=("http://download.kde.org/stable/${pkgver}/src/extragear/${pkgname}-${pkgver}.tar.bz2")
md5sums=('fd119e51eef972d1862466be7bc791bf')

build() {
  cd ${srcdir}
  mkdir build
  cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
  make DESTDIR=${pkgdir} install
}
