# $Id$
# Maintainer: Giovanni Scafora <giovanni@archlinux.org>
# Contributor: xduugu

pkgname=rfkill
pkgver=0.3
pkgrel=1
pkgdesc="A small tool to query the state of the rfkill switches, buttons and subsystem interfaces"
arch=('i686' 'x86_64')
url="http://linuxwireless.org/en/users/Documentation/rfkill"
license=('custom')
depends=('glibc')
source=(http://wireless.kernel.org/download/${pkgname}/${pkgname}-${pkgver}.tar.bz2)
md5sums=('f4d693c2a3e5f0503a3cde3d84be8919')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
  # License
  install -Dm644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE" || return 1
}
