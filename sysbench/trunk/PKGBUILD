pkgname=sysbench
pkgver=1.0.16
pkgrel=1
pkgdesc='Scriptable multi-threaded benchmark tool for databases and systems'
url='https://github.com/akopytov/sysbench'
arch=('x86_64')
license=('GPL2')
depends=('luajit' 'libmariadbclient' 'postgresql-libs')
makedepends=('libxslt')
source=("$pkgname-$pkgver.tar.gz::$url/archive/$pkgver.tar.gz")
sha512sums=('f86db33dcb46c9a6f696418de6463a597c6635dc66aecb2e2e53948c299dd7d1d4dfcb7c37d78cd024113ae5484dfaf48ff1cc0a4aefbc586976a665b2df1ca6')

build() {
  cd $pkgname-$pkgver

  autoreconf -vi

  ./configure \
  	--prefix=/usr \
  	--with-pgsql \
  	--with-mysql \
  	--with-system-luajit

  make
}

package() {
  cd $pkgname-$pkgver

  make DESTDIR="$pkgdir" install
}

