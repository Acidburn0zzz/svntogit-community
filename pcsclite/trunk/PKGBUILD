# Contributor: Daniel Plaza <daniel.plaza.espi@gmail.com>

pkgname=pcsclite
pkgver=1.6.7
pkgrel=1
pkgdesc="PC/SC Architecture smartcard middleware library"
arch=('i686' 'x86_64')
url="https://alioth.debian.org/projects/pcsclite/"
license=('BSD')
depends=('libusb')
makedepends=('pkgconfig')
options=('!libtool' '!docs')
source=(https://alioth.debian.org/frs/download.php/3516/pcsc-lite-${pkgver}.tar.bz2
        pcscd)
md5sums=('62115ae6dc6fc23da7ffe50986e84eb7'
         '80d90388e4d2a551cb7aefe3bd5147bd')

build() {
  cd "${srcdir}/pcsc-lite-${pkgver}"

  ./configure --prefix=/usr \
              --disable-libhal \
              --enable-libusb \
              --sysconfdir=/etc \
              --enable-usbdropdir=/usr/lib/pcsc/drivers || return 1

  make || return 1
  make DESTDIR=${pkgdir} install || return 1

  install -D ${srcdir}/pcsc-lite-${pkgver}/COPYING ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE || return 1
  install -D -m755 ${srcdir}/pcscd ${pkgdir}/etc/rc.d/pcscd || return 1
  install -d ${pkgdir}/usr/lib/pcsc/drivers
}
