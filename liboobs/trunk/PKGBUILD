# Maintainer : Biru Ionut <ionut@archlinux.ro>
# Contributor: Hugo Doria <hugodoria@gmail.com>

pkgname=liboobs
pkgver=2.30.0
pkgrel=1
pkgdesc="a wrapping library to the System Tools Backends"
url="ftp://ftp.gnome.org/pub/GNOME/sources/liboobs/"
license=('GPL')
depends=('system-tools-backends>=2.10' 'dbus-glib>=0.82' 'dbus>=1.2.24')
makedepends=('pkgconfig')
conflicts=()
arch=('i686' 'x86_64')
source=(http://ftp.gnome.org/pub/GNOME/sources/liboobs/2.30/${pkgname}-${pkgver}.tar.bz2)
sha256sums=('b0c18e038a6c1eba15c68a8e9fabfc21144c9240c17f3bd19042bae1ea04a5ce')

build() {
	cd $srcdir/$pkgname-$pkgver
    	./configure --prefix=/usr
      	make || return 1
	make DESTDIR=$pkgdir install
}
