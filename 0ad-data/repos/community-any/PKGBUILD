pkgname=0ad-data
_pkgname=0ad
pkgver=a25
_pkgver=0.0.25-alpha
__pkgver=0.0.25-rc5-25848-alpha
pkgrel=1
pkgdesc="Cross-platform, 3D and historically-based real-time strategy game (data files)"
arch=('any')
url="http://play0ad.com/"
license=('GPL2' 'CCPL')
source=("https://releases.wildfiregames.com/0ad-${_pkgver}-unix-data.tar.xz")
sha512sums=('0c08396e623b65e07e4025a70721dbbed9bc9948c31082afb99c90fc2c2473dc2196c14633a9be82aeb3d96bfa544cb242673ae17cb5b088821d877518739441')

package() {
  cd "$_pkgname-$__pkgver"

  install -d "${pkgdir}/usr/share/${_pkgname}/data"
  cp -r "binaries/data" "${pkgdir}/usr/share/${_pkgname}"
}
