pkgname=udunits
pkgver=2.1.19
pkgrel=2
pkgdesc='A tool for calculations of physical quantities'
arch=('i686' 'x86_64')
url='http://www.unidata.ucar.edu/software/udunits/'
license=('custom')
options=('!libtool')
depends=('glibc')
provides=('udunits2')

md5sums=('5d23fb8a86c8a5de695d19164aefeac4')
source=("ftp://ftp.unidata.ucar.edu/pub/$pkgname/$pkgname-$pkgver.tar.gz")

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make; make DESTDIR=$pkgdir install

  for x in a so so.0 so.0.0.0; do
    ln -s libudunits2.$x \
    $pkgdir/usr/lib/libudunits.$x
  done

  install -Dm644 LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
