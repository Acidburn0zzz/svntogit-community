# $Id: PKGBUILD 57324 2011-10-25 20:41:20Z spupykin $
# Maintainer: Sergej Pupykin <pupykin.s+arch@gmail.com>

pkgname=haskell-random
pkgver=1.0.1.1
pkgrel=1
pkgdesc="Tools to build the Gtk2Hs suite of User Interface libraries."
url="http://hackage.haskell.org/package/random"
license=('GPL2')
arch=('i686' 'x86_64')
makedepends=('ghc' 'alex' 'happy')
depends=('gmp')
options=('strip')
provides=('haskell-haskell-random')
source=(http://hackage.haskell.org/packages/archive/random/$pkgver/random-$pkgver.tar.gz)
md5sums=('9a249cfa7ff6793cbf2be06e9fcd7538')

build() {
    cd ${srcdir}/random-$pkgver
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname}
    runhaskell Setup build
}

package() {
    cd ${srcdir}/random-$pkgver
    runhaskell Setup copy --destdir=${pkgdir}
}
