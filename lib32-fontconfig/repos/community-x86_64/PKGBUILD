_pkgsourcename=fontconfig
pkgname=lib32-$_pkgsourcename
pkgver=2.6.0
pkgrel=2
pkgdesc="A library for configuring and customizing font access"
url="http://www.fontconfig.org/release/"
license=('custom')
arch=(x86_64)
groups=('lib32')
depends=('lib32-expat>=2.0' 'lib32-freetype2')
source=(ftp://ftp.archlinux.org/extra/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz)
md5sums=('af311f8b533e1c7d943789324af524d1')

build() {
	cd $startdir/src
	mkdir -p $startdir/pkg/opt/lib32/usr/lib
	cp -dp usr/lib/*.so* $startdir/pkg/opt/lib32/usr/lib
}
