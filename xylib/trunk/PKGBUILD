# Maintainer: Thomas Dziedzic < gostrc at gmail >

pkgname=xylib
pkgver=0.7
pkgrel=1
pkgdesc='xylib is a portable C++ library for reading files that contain x-y data from powder diffraction, spectroscopy or other experimental methods.'
arch=('i686' 'x86_64')
url='http://www.unipress.waw.pl/fityk/xylib/'
license=('LGPL')
makedepends=('boost')
source=("http://downloads.sourceforge.net/${pkgname}/${pkgname}-${pkgver}.tar.bz2")
md5sums=('122056b4b331107af90803aa17df8d91')

build() {
  cd ${pkgname}-${pkgver}

  ./configure \
    --prefix=/usr

  make
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
}
