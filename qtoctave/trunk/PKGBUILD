# Maintainer: Ronald van Haren <ronald.archlinux.org>

pkgname=qtoctave
pkgver=0.8.1
pkgrel=2
pkgdesc="qt frontend for octave"
url="https://forja.rediris.es/projects/csl-qtoctave/"
license=('GPL2')
depends=('qt' 'octave')
makedepends=('cmake')
source=(http://forja.rediris.es/frs/download.php/877/${pkgname}-${pkgver}.tar.gz)
install=qtoctave.install
arch=('i686' 'x86_64')
options=('!libtool' '!emptydirs')
md5sums=('b4e237b578f9c2624bb0fab2cb7ea691')
      
 build() {
cd ${srcdir}/${pkgname}-${pkgver}/${pkgname}

cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_SKIP_RPATH=ON \
	-DCMAKE_BUILD_TYPE=RELEASE .
make || return 1
make DESTDIR=${pkgdir} install || return 1
 }
