# Contributor: Giovanni Scafora <linuxmania@gmail.com>

_lang=it
pkgname=thunderbird-spell-it
pkgver=2.0.0.23
pkgrel=1
pkgdesc="Italian spellchecker files for Thunderbird"
arch=('i686' 'x86_64')
url="http://www.mozilla.com/thunderbird/dictionaries.html"
license=('GPL')
depends=('thunderbird')
makedepends=('unzip')
provides=('mozilla-thunderbird-spell-it')
conflicts=('mozilla-thunderbird-spell-it')
source=(http://downloads.mozdev.org/dictionaries/spell-it.xpi)
md5sums=('ffb0c12c0e985f178503575b78bde581')

build() {
   cd "$srcdir"
   install -D -m644 $_lang.aff "$pkgdir/opt/mozilla/lib/thunderbird/components/myspell/$_lang.aff" || return 1
   install -D -m644 $_lang.dic "$pkgdir/opt/mozilla/lib/thunderbird/components/myspell/$_lang.dic" || return 1
}
