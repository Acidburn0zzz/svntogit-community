# Maintainer: Felix Yan <felixonmars@archlinux.org>

pkgname=dtkgui
pkgver=5.2.2.17
pkgrel=1
pkgdesc='Deepin Toolkit, gui module for DDE look and feel'
arch=('x86_64')
url="https://github.com/linuxdeepin/dtkgui"
license=('LGPL3')
depends=('dtkcore' 'librsvg' 'qt5-x11extras')
makedepends=('qt5-tools')
source=("$pkgname-$pkgver.tar.gz::https://github.com/linuxdeepin/dtkgui/archive/$pkgver.tar.gz")
sha512sums=('3645d2cfd36205079645b844727fa32c67e653640c28e2780a2a9bc2df2f735f685389218ae339070e6a5c4f285018fe81bb38fe469fdcb70714245539a59705')

build() {
  cd dtkgui-$pkgver
  qmake-qt5 PREFIX=/usr DTK_VERSION=$pkgver LIB_INSTALL_DIR=/usr/lib
  make
}

package() {
  cd dtkgui-$pkgver
  make INSTALL_ROOT="$pkgdir" install
}
