# $Id$
# Maintainer: Balló György <ballogyor+arch at gmail dot com>

pkgname=uget
pkgver=2.0.10
pkgrel=1
pkgdesc="GTK+ download manager featuring download classification and HTML import"
arch=('i686' 'x86_64')
url="http://ugetdm.com/"
license=('LGPL')
depends=('libnotify' 'gtk3' 'gstreamer' 'curl')
makedepends=('intltool')
optdepends=('aria2: alternative backend')
source=(https://downloads.sourceforge.net/urlget/$pkgname-$pkgver.tar.gz)
sha256sums=('0a758be8554efbaf7d7468f897b528532198ff812906d824aab7f7817cd48dfe')

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}
