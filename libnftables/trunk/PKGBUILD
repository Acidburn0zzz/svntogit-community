pkgname=libnftables
pkgver=0
pkgrel=1
pkgdesc='Netfilter nftables library'
arch=('i686' 'x86_64')
url='http://netfilter.org/projects/nftables/'
license=('GPL2')
depends=('libmnl')
makedepends=(git)
source=("git://git.netfilter.org/libnftables")
md5sums=(SKIP)

build() {
  cd $pkgname
  ./autogen.sh
  ./configure --prefix=/usr
  make
}

check() {
  cd $pkgname
  make check
}

package() {
  cd $pkgname
  make DESTDIR="$pkgdir" install
}

# vim:set ts=2 sw=2 et:
