# Maintainer: Corrado Primier <bardo@aur.archlinux.org>
pkgname=rtkit
pkgver=0.6
pkgrel=1
pkgdesc="Realtime Policy and Watchdog Daemon"
arch=('i686' 'x86_64')
url="http://git.0pointer.de/?p=rtkit.git"
license=('GPL' 'custom:BSD')
depends=('dbus' 'polkit')
makedepends=('pkgconfig')
source=(http://0pointer.de/public/$pkgname-$pkgver.tar.gz)
md5sums=('c426f3673b6a2d4164e568db6902c698')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --libexecdir=/usr/lib --prefix=/usr --sysconfdir=/etc
  make || return 1
  make DESTDIR="$pkgdir/" install

  # Client license
  install -dm755 "$pkgdir/usr/share/licenses/rtkit/"
  head -24 "$srcdir/$pkgname-$pkgver/rtkit.c" | tail -21 \
    >"$pkgdir/usr/share/licenses/rtkit/COPYING"
}

# vim:set ts=2 sw=2 et:
