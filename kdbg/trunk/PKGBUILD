pkgname=kdbg
pkgver=2.4.95
pkgrel=1
pkgdesc="A gdb GUI for KDE."
arch=('i686' 'x86_64')
url="http://www.kdbg.org"
license=("GPL")
depends=('kdelibs' 'gdb' 'kdebase-runtime')
options=('!libtool')
source=("kdbg-$pkgver.tar.gz::http://kdbg.git.sourceforge.net/git/gitweb.cgi?p=kdbg/kdbg;a=snapshot;h=2085d0e791639cc1fe9ce2787481c26f36b9908b;sf=tgz")
md5sums=('ace213ffa1b27eb74ad1f806b5e57551')

build() {
  cd $srcdir/$pkgname-*/
  mkdir -p build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr ..
  make
  make DESTDIR=$pkgdir install
}
