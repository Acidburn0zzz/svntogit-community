# Contributor: Sergej Pupykin <pupykin.s+aur@gmail.com>

pkgname=perl-cgi
pkgver=3.52
pkgrel=1
pkgdesc="Simple Common Gateway Interface Class"
arch=('any')
url="http://search.cpan.org/dist/CGI"
license=('GPL' 'PerlArtistic')
depends=('perl-fcgi>=0.67')
options=('!emptydirs')
source=(http://search.cpan.org/CPAN/authors/id/M/MA/MARKSTOS/CGI.pm-$pkgver.tar.gz)
md5sums=('6ec43c8777713175e71ad9b19598899f')

build() {
  cd  $srcdir/CGI.pm-$pkgver
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
  make install DESTDIR=$pkgdir
  find $pkgdir -name '.packlist' -delete
  find $pkgdir -name '*.pod' -delete
}
