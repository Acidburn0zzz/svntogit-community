_pkgsourcename=libxcb
pkgname=lib32-libxcb
pkgver=1.4
pkgrel=1
pkgdesc="X11 client-side library"
arch=('x86_64')
url=(http://xcb.freedesktop.org/)
groups=lib32
license=('GPL')
source=(http://mir.archlinux.fr/extra/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz)

build() {
  mkdir -p $pkgdir/opt/lib32/usr/lib/
  cp -R $srcdir/usr/lib/*.so* $pkgdir/opt/lib32/usr/lib/
}
md5sums=('5ab28e3c4c873c83885cb8cf1b350277')
