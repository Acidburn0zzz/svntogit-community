pkgname=papyon
pkgver=0.4.1
pkgrel=1
pkgdesc="papyon is the library behind the msn connection manager : telepathy-butterfly."
arch=('i686' 'x86_64')
url="http://telepathy.freedesktop.org/wiki/Papyon"
license=("GPL")
depends=('pygobject' 'adns-python' 'pyopenssl' 'pycrypto')
provides=('pymsn')
source=(http://telepathy.freedesktop.org/releases/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('b78af3d244bf9bb6460dfec7e0f831bc')

build() {
  cd $srcdir/$pkgname-$pkgver
  python setup.py install --root=$pkgdir || return 1
}
