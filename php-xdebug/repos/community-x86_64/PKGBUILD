# Contributor: Peter Gerbrandt <pg@7pg.de>

pkgname="php-xdebug"
pkgver=2.0.4
pkgrel=1
pkgdesc="Xdebug is a PHP extension for debugging and profiling"
arch=('i686' 'x86_64')
url="http://xdebug.org/"
license=("custom")
depends=('php')
provides=('xdebug')
replaces=('xdebug')
conflicts=('xdebug')
backup=('etc/php/conf.d/xdebug.ini')
source=(http://www.xdebug.org/files/xdebug-$pkgver.tgz)
md5sums=('2fd6adb30c338d7667b464506fd58eca')

build() {
  cd $startdir/src/xdebug-$pkgver
  phpize
  ./configure --enable-xdebug --prefix=/usr
  make || return 1
  make INSTALL_ROOT=$startdir/pkg install
  echo ';extension=xdebug.so' > xdebug.ini
  install -D -m644 xdebug.ini ${startdir}/pkg/etc/php/conf.d/xdebug.ini
  install -Dm644 LICENSE $startdir/pkg/usr/share/licenses/xdebug/LICENSE
}
