pkgname=qmmp
pkgver=0.3.1
pkgrel=2
pkgdesc="Qt4 based audio-player"
arch=('i686' 'x86_64')
url="http://qmmp.ylsoftware.com/"
license=('GPL')
depends=('alsa-lib' 'bzip2' 'curl' 'gzip' 'libmad' 'libvorbis' 'libogg'  'qt>=4.3' 'taglib' 'tar' 'unzip' 'xdg-utils')
makedepends=('cmake')
optdepends=('flac: native FLAC support' 
            'jack-audio-connection-kit: JACK sound output'
            'libmpcdec: Musepack support'
            'pulseaudio: PulseAudio output'
            'ffmpeg' 'libsamplerate' 'libmodplug' 'libsndfile' 'wavpack' )
install=qmmp.install
source=(http://qmmp.ylsoftware.com/files/$pkgname-$pkgver.tar.bz2)
md5sums=('5a8b3c6eedafa02f9551ef1658590f28')

build() {
  cd ${srcdir}/$pkgname-$pkgver

  cmake . -DCMAKE_INSTALL_PREFIX=/usr || return 1
  make || return 1
  make DESTDIR=${pkgdir} install
}
