# Contributor: Juergen Hoetzel <juergen@archlinux.org>

pkgname=rep-gtk
pkgver=0.90.4
pkgrel=1
pkgdesc="Binding of the GTK and GDK libraries for the librep Lisp environment"
arch=('i686' 'x86_64')
url="http://sawfish.wikia.com/wiki/Rep-GTK"
license=('GPL')
depends=('librep' 'gtk2')
options=('libtool')
source=(http://download.tuxfamily.org/sawfish/${pkgname}/${pkgname}-${pkgver}.tar.bz2)
sha1sums=('f70546969a597b2190ecef595978c8b09e6d258c')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
