daemon_name=darkstat
daemon_chroot=/var/"$daemon_name"

post_install() {
  if [ ! -d "$daemon_chroot" ]; then
    install -d "$daemon_chroot"
  fi
  /usr/sbin/useradd \
    --system \
    --home "$daemon_chroot" \
    --shell /bin/false \
    --no-user-group \
    --gid nobody "$daemon_name"
  chown -R "$daemon_name":nobody "$daemon_chroot"
}

post_remove() {
  /usr/sbin/userdel "$daemon_name"
}
