post_install() {
  usr/bin/gtk-query-immodules-2.0-32 > etc/gtk-2.0/gtk.immodules-32
  usr/bin/gdk-pixbuf-query-loaders-32 > etc/gtk-2.0/gdk-pixbuf.loaders-32
}

post_upgrade() {
  post_install
}

pre_remove() {
  rm -f etc/gtk-2.0/gtk.immodules-32 &>/dev/null
  rm -f etc/gtk-2.0/gdk-pixbuf.loaders-32 &>/dev/null
}
