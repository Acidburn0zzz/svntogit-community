# custom variables
pkgname=haskell-tagsoup
HS_DIR=usr/share/haskell/${pkgname}

# functions
post_install() {
    ${HS_DIR}/register.sh --verbose=0
    /usr/share/doc/ghc/html/libraries/arch-gen-contents-index
}

pre_upgrade() {
    ${HS_DIR}/unregister.sh --verbose=0
}

post_upgrade() {
    ${HS_DIR}/register.sh --verbose=0
    /usr/share/doc/ghc/html/libraries/arch-gen-contents-index
}

pre_remove() {
    ${HS_DIR}/unregister.sh --verbose=0
}

post_remove() {
    /usr/share/doc/ghc/html/libraries/arch-gen-contents-index
}
