pkgname=cargo-outdated
pkgver=0.10.1
pkgrel=1
pkgdesc="A cargo subcommand for displaying when Rust dependencies are out of date"
url="https://github.com/kbknapp/cargo-outdated"
arch=('x86_64')
license=('MIT')
depends=('cargo')
source=("${pkgname}-${pkgver}.tar.gz::https://crates.io/api/v1/crates/${pkgname}/${pkgver}/download")
sha256sums=('90a43081be1328abbe31fa88e1fe00aef9360d5c1b6298b88ed1e63031f5bd9c')
b2sums=('e23201e59e748f57243bbbf314a47ee93764a8c9adcfefe86a903df68507b329368671ea22e28b19bc2bf57e8d8fb4fe5f6c985d857e11127dfe18ba8a337a8a')

prepare() {
  cd "${pkgname}-${pkgver}"
  cargo fetch --locked --target "$CARCH-unknown-linux-gnu"
}

build() {
  cd "${pkgname}-${pkgver}"
  cargo build --frozen --release
}

package() {
  cd "${pkgname}-${pkgver}"
  install -Dm755 "target/release/${pkgname}" "${pkgdir}/usr/bin/${pkgname}"
  install -Dm644 LICENSE-MIT -t "${pkgdir}/usr/share/licenses/${pkgname}"
}

