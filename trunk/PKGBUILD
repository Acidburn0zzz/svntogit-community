sha512sums=('66a89eb2864d7d1ca6c22d08729e5b853165e035ec70a0d5a906fa9e8be3c0093b624769a9aba61844cc6c684da4df36f2d1d11171f28b67af03d181cb671a4a')

package() {
  install -Dm755 geoip-$pkgver.dat "$pkgdir"/usr/lib/v2ray/geoip.dat
