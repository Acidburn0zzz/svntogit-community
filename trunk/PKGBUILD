pkgname=kdbg
pkgver=2.1.1
pkgrel=1
pkgdesc="A gdb GUI for KDE."
arch=('i686' 'x86_64')
url="http://www.kdbg.org"
license=("GPL")
depends=('kdelibs3' 'gdb')
options=('libtool')
source=(http://downloads.sourceforge.net/kdbg/$pkgname-$pkgver.tar.gz)
md5sums=('2b7998528a68d09ff871925335092a1e')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/opt/kde --with-qt-dir=/opt/qt --without-arts
  make || return 1
  make DESTDIR=$startdir/pkg install
}
