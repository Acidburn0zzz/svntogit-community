pkgname=reflector
pkgver=2012.10.27
pkgrel=1
pkgdesc='A Python 3 module and script to retrieve and filter the latest Pacman mirror list.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/reflector"
depends=(python3)
source=(
  http://xyne.archlinux.ca/projects/reflector/archives/reflector-2012.10.27.tar.xz
  http://xyne.archlinux.ca/projects/reflector/archives/reflector-2012.10.27.tar.xz.sig
)
sha512sums=(
  15403e23f0b7b2e4a98612ea6c344b36053f7b08c4c7fad0d051060e215dc4e70dbe714e39710f2aa77d5957396b320183b6679b303eee823852a4736f2f4a6e
  b1182a1462780dd986be06cc4041cfac9f6796f143f66a67ebeddef0d9e898c86c94f33f87cfde10887ebb10aa7455b25047354aaca932928a4d8c1821f99602
)
md5sums=(
  553085f186745cb50a361dbc108a37f8
  92a5b4e4f2b57423e9f26a745d4d5512
)

package()
{
  cd "$srcdir/$pkgname-$pkgver"
  python3 setup.py install --root="$pkgdir"/ --optimize=1
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname"
}


