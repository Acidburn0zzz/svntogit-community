_pkgsourcename=libdrm
pkgname=lib32-$_pkgsourcename
pkgver=2.4.18
pkgrel=2
pkgdesc="Userspace interface to kernel DRM services"
url="http://dri.freedesktop.org/"
license=('custom')
arch=('x86_64')
groups=('lib32')
depends=('lib32-glibc')
source=(http://mir.archlinux.fr/extra/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz)

build() {
	cd "$srcdir"
	mkdir -p "$pkgdir/opt/lib32/usr/lib"
	cp -dp usr/lib/*.so* "$pkgdir/opt/lib32/usr/lib"
}
md5sums=('76505f54299a9e1c5ece60bfb4dbecdb')
sha256sums=('8479db566dd286a8731c6b242a732d7d024075c3834ebecd8e80b93c040a97a2')
