_pkgsourcename=libgcrypt
pkgname=lib32-$_pkgsourcename
pkgver=1.4.5
pkgrel=1
pkgdesc="Libgcrypt is a general purpose crypto library based on the code used"
arch=(x86_64)
url="http://www.gnupg.org"
license=('LGPL')
groups=('lib32')
depends=('lib32-libgpg-error')
source=(http://mir.archlinux.fr/core/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz)

build() {
	cd "$srcdir"
	mkdir -p "$pkgdir/opt/lib32/usr/lib"
	cp -dp usr/lib/*.so* "$pkgdir/opt/lib32/usr/lib"
}
md5sums=('69abe1eb35a1f6538df96f6115488b49')
