# Maintainer: Antonio Rojas <arojas@archlinux.org>

_pyname=pysol_cards
pkgname=python-$_pyname
pkgver=0.8.4
pkgrel=1
pkgdesc='Deal PySol FC Cards'
arch=(any)
url='https://pypi.org/project/pysol-cards/'
license=(MIT)
depends=(python-pbr)
makedepends=(python-setuptools)
source=("https://pypi.io/packages/source/p/$_pyname/$_pyname-$pkgver.tar.gz")
sha256sums=('24c6d1dd8e6ee3a1d009e6b786e2973377d43e6008fc712fff5d05901936ec78')

package() {
  cd $_pyname-$pkgver
  python setup.py install --root "$pkgdir" --optimize=1
  install -D -m644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}
