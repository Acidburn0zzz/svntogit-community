# Maintainer: Sergej Pupykin <pupykin.s+arch@gmail.com>

pkgname=firefox-noscript
pkgver=2.1.0.3
_firefox_ver=4.0
pkgrel=1
pkgdesc="plugin for firefox which disables script"
arch=('any')
url="http://noscript.net/"
license=('GPL2')
depends=("firefox")
makedepends=('unzip')
source=(https://secure.informaction.com/download/releases/noscript-$pkgver.xpi)
md5sums=('3a9c8bb686b690a0effc18e042bb0e80')

build() {
    cd $srcdir
    local emid=$(sed -n -e '/<\?em:id>\?/!d; s/.*\([\"{].*[}\"]\).*/\1/; s/\"//g; p; q' install.rdf)
    local dstdir=$pkgdir/usr/lib/firefox-$_firefox_ver/extensions/${emid}
    install -d $dstdir
    sed -i 's#<em:maxVersion>.*</em:maxVersion>#<em:maxVersion>4.*</em:maxVersion>#' install.rdf
    cp -R * $dstdir
    rm $dstdir/noscript-$pkgver.xpi
}
