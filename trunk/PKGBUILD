pkgname=borgmatic
pkgver=1.5.14
pkgrel=1
pkgdesc='Simple, configuration-driven backup software for servers and workstations'
arch=('any')
url=https://torsion.org/borgmatic
license=('GPL3')
depends=('borg' 'python-colorama' 'python-pykwalify' 'python-requests'
         'python-ruamel-yaml' 'python-setuptools')
optdepends=('python-llfuse: for mount action')
source=("https://files.pythonhosted.org/packages/source/${pkgname::1}/$pkgname/$pkgname-$pkgver.tar.gz")
sha256sums=('4c574f456a16481ef4c669b46cb93178efe0afc55bd999886d6843ab868e655e')
b2sums=('8325643c79f1e2e0a6d94f1e73dbf45bef82ba3d63c48b6652ffc2fb6a7d1dd5b45fb369346292129f948ae88216e93c2b0ab88ff889ae49cfb0dd321bed4125')

prepare() {
  cd $pkgname-$pkgver
  sed -i 's,root/.local,usr,' sample/systemd/$pkgname.service
}

build() {
  cd $pkgname-$pkgver
  python setup.py build
}

package() {
  cd $pkgname-$pkgver
  export PYTHONHASHSEED=0
  python setup.py install --root="$pkgdir" --optimize=1 --skip-build
  install -Dm644 -t "$pkgdir"/usr/lib/systemd/system sample/systemd/*
}

