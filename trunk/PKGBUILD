pkgname=lib32-curl
pkgver=7.20.1
pkgrel=1
pkgdesc="An URL retrival utility and library"
arch=('x86_64')
url="http://curl.haxx.se"
depends=('lib32-openssl' 'lib32-zlib')
license=('MIT')
groups=('lib32')
source=(http://mir.archlinux.fr/extra/os/i686/${pkgname/lib32-/}-${pkgver}-${pkgrel}-i686.pkg.tar.xz)

build() {
  mkdir -p $pkgdir/opt/lib32/usr/lib
  cp -rPf $srcdir/usr/lib/*.so* $pkgdir/opt/lib32/usr/lib
}
md5sums=('a7a78c3f824822ba93cc1b77eb3368d1')
sha256sums=('456ee27fa86328dde20930e108c03d091932d833707fc458a28c5c7e1c7fe0dc')
