pkgname=python-rope
pkgver=0.9.3
pkgrel=5
pkgdesc='A Python refactoring library'
arch=('any')
url='http://rope.sourceforge.net/'
license=('GPL')
depends=('python')
source=("http://pypi.python.org/packages/source/r/rope_py3k/rope_py3k-0.9.3-1.tar.gz")
sha256sums=('ebf4ccdce026bdb970e4a61f55bc23c4baaca2016e2872250ee6f290f51cae51')

build() {
  cd "rope_py3k-$pkgver-1"

  python setup.py build
}

package() {
  cd "rope_py3k-$pkgver-1"

  python setup.py install --root="$pkgdir" --optimize=1
}

