# Maintainer: Antonio Rojas <arojas@archlinux.org>

_pyname=pysol_cards
pkgname=python-$_pyname
pkgver=0.8.5
pkgrel=1
pkgdesc='Deal PySol FC Cards'
arch=(any)
url='https://pypi.org/project/pysol-cards/'
license=(MIT)
depends=(python-pbr)
makedepends=(python-setuptools)
source=("https://pypi.io/packages/source/p/$_pyname/$_pyname-$pkgver.tar.gz")
sha256sums=('1d68b71ea57d0165dc48c7358b67dda97c47507d0e7600cf2a50050952747562')

package() {
  cd $_pyname-$pkgver
  python setup.py install --root "$pkgdir" --optimize=1
  install -D -m644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}
