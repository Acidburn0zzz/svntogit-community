# Maintainer: Mikko Seppälä <t-r-a-y@mbnet.fi>
_pkgsourcename=pixman
pkgname=lib32-$_pkgsourcename
pkgver=0.14.0
pkgrel=2
pkgdesc="Pixman library"
arch=(x86_64)
url="http://xorg.freedesktop.org"
license=('none')
groups=('lib32')
depends=('lib32-glibc')
source=(ftp://ftp.heanet.ie/mirrors/ftp.archlinux.org/extra/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz) 
md5sums=('5c4d2c629b768bdcd4fc16b8838c0cea')

build() {
        cd $startdir/src
        mkdir -p $startdir/pkg/opt/lib32/usr/lib
        cp -dp usr/lib/*.so* $startdir/pkg/opt/lib32/usr/lib
}

