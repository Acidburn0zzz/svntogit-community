_pkgsourcename=alsa-lib
pkgname=lib32-$_pkgsourcename
pkgver=1.0.22
pkgrel=1
pkgdesc="An alternative implementation of Linux sound support"
url="http://www.alsa-project.org"
license=('GPL')
arch=('x86_64')
groups=('lib32')
depends=('lib32-glibc')
source=(http://mir.archlinux.fr/extra/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz)

build() {
	cd $srcdir
	mkdir -p $pkgdir/opt/lib32/usr/lib
	cp -dp usr/lib/*.so* $pkgdir/opt/lib32/usr/lib
}
md5sums=('b23961f8f4c0d77629ab560b661c560a')
sha256sums=('f35044098727146c30e82e2c1466e18d5e4bb40c437e8e5b7b56df4896f7276a')
