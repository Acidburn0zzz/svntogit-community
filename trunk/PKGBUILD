_pkgsourcename=libpng
pkgname=lib32-$_pkgsourcename
pkgver=1.4.0
pkgrel=1
pkgdesc="A collection of routines used to create PNG format graphics files"
arch=('x86_64')
url="http://www.libpng.org/pub/png/libpng.html"
license=('custom')
groups=('lib32')
depends=('lib32-zlib')
source=(http://mir.archlinux.fr/extra/os/i685/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz)

build() {
	cd $srcdir
	mkdir -p $pkgdir/opt/lib32/usr/lib
	cp -dp usr/lib/*.so* $pkgdir/opt/lib32/usr/lib
}
md5sums=('9a149d51c1ae71645cc0045a0adea99d')
sha256sums=('f275ec8d05abf7475de5c123a96b09287f5e2fb60b1706aa4f4fbcaa3a878578')
