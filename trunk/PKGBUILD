pkgname=balsa
pkgver=2.4.1
pkgrel=1
pkgdesc="An e-mail client for GNOME"
arch=('i686' 'x86_64')
license=('GPL')
url='http://pawsa.fedorapeople.org/balsa/'
depends=('gmime>=2.4.10' 'libwebkit>=1.1.15' 'libesmtp>=1.0.4' 'libnotify' 'gpgme>=1.2.0' 
	 'libgnomeui>=2.24' 'libunique' 'gtksourceview2>=2.8.1' 'gtkspell')
makedepends=('perlxml' 'gnome-doc-utils>=0.18.0' 'intltool')
install=balsa.install
source=(http://pawsa.fedorapeople.org/$pkgname/$pkgname-$pkgver.tar.bz2)

build() {
  cd "$srcdir/$pkgname-$pkgver"

  # gpgme needs largefile support
  #export CFLAGS="$CFLAGS -D_LARGEFILE_SOURCE -D_FILE_OFFSET_BITS=64"

  ./configure --prefix=/usr \
  	--sysconfdir=/etc \
	--localstatedir=/var \
    	--with-ssl \
	--with-gpgme=gpgme-config \
	--enable-threads \
	--with-gss \
	--with-ldap \
	--with-gtksourceview \
	--with-gtkspell \
	--with-webkit \
	--with-unique \
	--with-rubrica \
	--with-sqlite
  make || return 1
  make GTK_UPDATE_ICON_CACHE=/bin/true DESTDIR="$pkgdir" install || return 1
}
md5sums=('2ad6ebb3f058e5fbe9ec5e0f0017db28')
