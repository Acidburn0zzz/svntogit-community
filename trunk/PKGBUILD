pkgname=lib32-e2fsprogs
pkgver=1.41.8
pkgrel=2.1
_pkgrel=2
pkgdesc="Ext2 filesystem utilities"
arch=(x86_64)
url="http://e2fsprogs.sourceforge.net"
license=('GPL' 'LGPL')
depends=('lib32-glibc' 'lib32-util-linux-ng>=2.16')
source=(http://mir.archlinux.fr/core/os/i686/${pkgname/lib32-/}-${pkgver}-${_pkgrel}-i686.pkg.tar.gz)

build() {
  install -d $pkgdir/opt/lib32/lib/
  cp -dp $srcdir/lib/* $pkgdir/opt/lib32/lib/
}
md5sums=('516a601f8873d5a316316c17f1d467c7')
