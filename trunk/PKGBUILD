pkgname=python-nltk
pkgver=2.0b9
pkgrel=1
pkgdesc="Software for natural language processing"
arch=('i686' 'x86_64')
url="http://www.nltk.org/"
license=('APACHE')
depends=('python' 'python-yaml')
optdepends=('nltk-data' 'python-numpy' 'python-matplotlib')
source=(http://nltk.googlecode.com/files/nltk-$pkgver.tar.gz)
md5sums=('7b9a083b3b37cff3b84ca9c231ab131b')

build() {
  cd $srcdir/nltk-$pkgver
  python setup.py install --root=$pkgdir --optimize=1 || return 1
}

