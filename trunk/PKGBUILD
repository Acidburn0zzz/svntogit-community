_pkgsourcename=libtasn1
pkgname=lib32-$_pkgsourcename
pkgver=2.4
pkgrel=1
pkgdesc="The ASN.1 library used in GNUTLS"
arch=(x86_64)
url="http://www.gnu.org/software/gnutls/"
license=('GPL' 'LGPL')
groups=('lib32')
depends=('lib32-glibc')
source=(ftp://ftp.archlinux.org/extra/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz)

build() {
	cd $srcdir
	mkdir -p $pkgdir/opt/lib32/usr/lib
	cp -dp usr/lib/*.so* $pkgdir/opt/lib32/usr/lib
}
md5sums=('abfbfeec23d9ab142e8a1c471a36ebd8')
sha256sums=('1d04f7a4ac8e90a2703bf5dd58d19e0c6cd9f06f284224168976e8fac6545d17')
