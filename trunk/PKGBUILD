# Maintainer: Bruno Pagani <archange@archlinux.org>

pkgname=fractal
pkgver=0.1.29
pkgrel=1
pkgdesc="A GTK+ client for Matrix written in Rust"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Fractal"
license=('GPL3')
depends=('gtk3')
makedepends=('meson' 'rust')
_md5=0572251be4a4de06812ac7571131ed57
source=("https://gitlab.gnome.org/danigm/fractal/uploads/${_md5}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('aa0711080254ed08b79f28c21b0e609955065094ca412ef32f92c61182d67f9b')

build() {
    cd ${pkgname}-${pkgver}
    arch-meson . _build
    ninja -C _build
}

package() {
    cd ${pkgname}-${pkgver}
    DESTDIR="${pkgdir}" ninja -C _build install
}
