pkgname=pylama
pkgver=7.6.6
pkgrel=2
pkgdesc="Code audit tool for python"
arch=('any')
url="https://github.com/klen/pylama"
license=('GPL3')
makedepends=('python-setuptools')
checkdepends=('python-pytest')
depends=('python-pycodestyle' 'python-pydocstyle' 'python-pyflakes' 'python-mccabe')
optdepends=('python-radon: radon support')
source=("https://github.com/klen/pylama/archive/$pkgver.tar.gz")
sha256sums=('e56060c68ab89cc746e10aa357168decbdb187e0d4714a9f5c670ee1e6413c4e')

build() {
  cd "$pkgname-$pkgver"
  python setup.py build
}

package() {
  cd "$pkgname-$pkgver"
  python setup.py install --root="$pkgdir/" --optimize=1 --skip-build
}
