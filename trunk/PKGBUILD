pkgname=cgmanager
pkgver=20140424
pkgrel=1
pkgdesc="Another daemon for managing control groups"
arch=(i686 x86_64)
url="https://github.com/cgmanager/cgmanager"
license=('GPL')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=("git://github.com/cgmanager/cgmanager.git")
md5sums=('SKIP')

build() {
	cd "$srcdir/$pkgname"
	./bootstrap.sh
	./configure --prefix=/usr
	make
}

package() {
	cd "$srcdir/$pkgname"
	make DESTDIR="$pkgdir/" install
}
