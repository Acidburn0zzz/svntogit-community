pkgname=python-pydoe2
pkgver=1.1.1
pkgrel=1
pkgdesc="Design of experiments for Python"
url="https://github.com/clicumu/pydoe2"
license=('BSD')
arch=('any')
depends=('python-numpy' 'python-scipy')
makedepends=('python-setuptools')
source=("https://pypi.io/packages/source/p/pyDOE2/pyDOE2-$pkgver.zip")
sha512sums=('fff076357a5b3f9bec0a490b137e5a862802f7a2d507d776116391eafa220da816ba654ec7fc458e85fcaa14ad95adf99ab7012167bd56d81a3082b00237ec11')

build() {
  cd pyDOE2-$pkgver
  python setup.py build
}

package() {
  cd pyDOE2-$pkgver
  python setup.py install --root="$pkgdir" --optimize=1
}
