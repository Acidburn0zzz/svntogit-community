pkgname=gtranslator
pkgver=1.9.6
pkgrel=1
pkgdesc="An enhanced gettext po file editor for the GNOME"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/gtranslator/"
license=('GPL')
depends=('gettext' 'libgnomeui' 'gtkspell' 'gdl' 'libglade' 'gtksourceview2')
makedepends=('intltool>=0.40' 'gnome-doc-utils')
install=gtranslator.install
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc \
  	--disable-schemas-install
  make || return 1
  make DESTDIR=${pkgdir} install

  install -m755 -d "${pkgdir}/usr/share/gconf/schemas"
  gconf-merge-schema "${pkgdir}/usr/share/gconf/schemas/${pkgname}.schemas" --domain $pkgname ${pkgdir}/etc/gconf/schemas/*.schemas || return 1
  rm -f ${pkgdir}/etc/gconf/schemas/*.schemas
}
md5sums=('ad3f4bf0c84925552f8b3e5be5b7ce0f')
