# Maintainer: Dave Reisner <d@falconindy.com>
# Contributor: Alexander Fehr <pizzapunk gmail com>

pkgname=ruby-gettext
pkgver=2.1.0
pkgrel=3
pkgdesc="Localization library and tools which are modeled after GNU gettext"
arch=('any')
url="http://www.yotabanana.com/hiki/ruby-gettext.html"
license=('RUBY')
depends=('gettext' 'ruby-locale')
source=(http://rubyforge.org/frs/download.php/67097/ruby-gettext-package-$pkgver.tar.gz
        http://i.loveruby.net/archive/setup/setup-3.4.1.tar.gz)
md5sums=('18b1c5268b6e14c2f11c1c93a5bcf11a'
         'f0759ec72473e5802d9571df4da6642c')

build() {
  cd "$srcdir"/ruby-gettext-package-$pkgver

  cp "$srcdir"/setup-3.4.1/setup.rb .

  ruby setup.rb config
  ruby setup.rb setup
}

package() {
  cd "$srcdir"/ruby-gettext-package-$pkgver

  ruby setup.rb install --prefix=$pkgdir
}
