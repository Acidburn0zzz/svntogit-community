# Maintainer: Bruno Pagani <archange@archlinux.org>

pkgname=grammalecte
pkgver=1.8.0
pkgrel=1
pkgdesc="Grammar and typographic checker dedicated to the French language â€“ standalone version"
arch=(any)
url="https://grammalecte.net/"
license=(GPL3)
depends=(python)
makedepends=(unzip python-setuptools)
options=(!emptydirs)
source=(https://grammalecte.net/grammalecte/zip/Grammalecte-fr-v${pkgver}.zip)
sha256sums=('d74f27365267c18d6c445910c8ab55935d2ebf43abe04214dd0617fd83b2e21b')

build() {
  python setup.py build
}

package() {
  python setup.py install --root="${pkgdir}" --skip-build --optimize=1
  mv "${pkgdir}"/usr/bin/grammalecte-cli{.py,}
  mv "${pkgdir}"/usr/bin/grammalecte-server{.py,}
}
