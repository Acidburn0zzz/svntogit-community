# Maintainer: Anatol Pomozov

_gemname=irb
pkgname=ruby-$_gemname
pkgver=1.1.0
pkgrel=2
pkgdesc="Interactive Ruby command-line tool for REPL (Read Eval Print Loop)."
arch=('any')
url='https://github.com/ruby/irb'
license=('BSD-2')
depends=('ruby' 'ruby-reline')
makedepends=('ruby-rdoc')
options=('!emptydirs')
source=("https://rubygems.org/downloads/$_gemname-$pkgver.gem")
noextract=("$_gemname-$pkgver.gem")
sha512sums=('84c39f34e6b364476e7b43b66fa463c184eca93082060bd3f940ed4e97a82cd7b7d1972e60cc34f83dd021a817a233ec7faa6fc08651aabe84c6415bd7f724a7')

package() {
  cd "$srcdir"

  local _gemdir="$(ruby -e'puts Gem.default_dir')"
  HOME="/tmp" GEM_HOME="$_gemdir" GEM_PATH="$_gemdir" gem install -N --no-user-install --ignore-dependencies \
     -i "$pkgdir/$_gemdir" -n "$pkgdir/usr/bin" "$_gemname-$pkgver.gem"
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/LICENSE.txt" "$pkgdir/usr/share/licenses/$pkgname/LICENSE.txt"
}
