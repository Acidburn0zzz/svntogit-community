pkgname=deepin-screenshot
pkgver=4.0.15
pkgrel=1
pkgdesc="Easy-to-use screenshot tool for linuxdeepin desktop environment"
arch=('x86_64')
url="https://github.com/linuxdeepin/deepin-screenshot"
license=('GPL3')
depends=('deepin-qt5integration' 'dtkwm')
makedepends=('qt5-tools')
groups=('deepin-extra')
source=("$pkgname-$pkgver.tar.gz::https://github.com/linuxdeepin/deepin-screenshot/archive/$pkgver.tar.gz")
sha512sums=('1bd2ec6fe09aad6b90d920b17110506655b6faf87caffafcc38a011a742814aabd501fc3027f398d1bccc33554e7ae37e707b84887ae9818620ef093a0f10ec0')

build() {
  cd deepin-screenshot-$pkgver
  qmake-qt5 PREFIX=/usr
  make
}

package() {
  cd deepin-screenshot-$pkgver
  make INSTALL_ROOT="$pkgdir" install
}
