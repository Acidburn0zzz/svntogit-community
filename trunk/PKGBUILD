pkgname=reflector
pkgver=2012.10
pkgrel=1
pkgdesc='Python 3 module and script to retrieve and filter the latest Pacman mirror list'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/reflector"
depends=(python3)
source=(
  http://xyne.archlinux.ca/projects/reflector/archives/reflector-2012.10.tar.xz
  http://xyne.archlinux.ca/projects/reflector/archives/reflector-2012.10.tar.xz.sig
)
sha512sums=(
