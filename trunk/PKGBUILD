pkgname=emacs-apel
pkgver=10.8
pkgrel=2
pkgdesc="A library for making portable Emacs Lisp programs."
arch=(any)
url="http://cvs.m17n.org/elisp/APEL/"
license=('GPL')
depends=('emacs')
source=(http://kanji.zinbun.kyoto-u.ac.jp/~tomo/lemi/dist/apel/apel-$pkgver.tar.gz)
md5sums=('20b82300094b4377e1fb74d83ebbd972')

build() {
  cd $srcdir/apel-$pkgver
  make
  make install PREFIX=$pkgdir/usr
}
