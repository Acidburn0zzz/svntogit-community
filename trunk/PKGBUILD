# $Id$
# Maintainer: Evangelos Foutras <foutrelis@gmail.com>
# Contributor: Rttommy <rttommy@gmail.com>

pkgname=xdotool
pkgver=1.20100302.2708
pkgrel=1
pkgdesc="Command-line X11 automation tool"
arch=('i686' 'x86_64')
url="http://www.semicomplete.com/projects/xdotool/"
license=('BSD')
depends=('libxtst')
options=('force')
source=(http://semicomplete.googlecode.com/files/$pkgname-$pkgver.tar.gz)
md5sums=('87ddb93ed3b24f1068afa4eed89670b6')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  # http://code.google.com/p/semicomplete/issues/detail?id=20
  sed -i '81{s|$(LIBS)||
             s|$| $(LIBS)|}' Makefile || return 1

  make || return 1
  make PREFIX="$pkgdir/usr" INSTALLMAN="$pkgdir/usr/share/man" \
       install || return 1

  # License
  install -Dm644 COPYRIGHT "$pkgdir/usr/share/licenses/xdotool/COPYRIGHT"
}

# vim:set ts=2 sw=2 et:
