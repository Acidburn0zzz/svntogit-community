pkgname=emacs-python-mode
pkgver=6.0.4
pkgrel=2
pkgdesc="Python mode for Emacs"
url="https://launchpad.net/python-mode"
license=("GPL")
arch=('any')
depends=('emacs')
install=emacs-python-mode.install
source=("http://launchpad.net/python-mode/trunk/$pkgver/+download/python-mode.el-$pkgver.tar.gz")
md5sums=('8f43910389a555bf99354e3aa657c5e2')

build() {
  cd $srcdir/python-mode.el-$pkgver
#  python2 setup.py install --root=$pkgdir
  install -Dm644 python-mode.el $pkgdir/usr/share/emacs/site-lisp/python-mode.el
  install -Dm644 highlight-indentation.el $pkgdir/usr/share/emacs/site-lisp/highlight-indentation.el
}
