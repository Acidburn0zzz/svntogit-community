_pkgsourcename=pixman
pkgname=lib32-$_pkgsourcename
pkgver=0.16.6
pkgrel=1
pkgdesc="Pixman library"
arch=('x86_64')
url="http://xorg.freedesktop.org"
license=('none')
groups=('lib32')
depends=('lib32-glibc')
source=(http://mir.archlinux.fr/extra/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz) 

build() {
        cd $srcdir
        mkdir -p $pkgdir/opt/lib32/usr/lib
        cp -dp usr/lib/*.so* $pkgdir/opt/lib32/usr/lib
}
md5sums=('cd3044136c050a5c5dd9bc73e169ea56')
sha256sums=('65a6377d42af8375b4a143b180abdbc78c6c6cc339b3d4ad76fd64a9a54e5f92')
