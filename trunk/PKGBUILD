pkgname=remind
pkgver=3.01.09
pkgrel=1
pkgdesc='A sophisticated calendar and alarm progam.'
arch=('i686' 'x86_64')
url='http://www.roaringpenguin.com/penguin/open_source_remind.php'
license=('GPL')
depends=('tk' 'tcllib')
source=("http://www.roaringpenguin.com/files/download/${pkgname}-0${pkgver}.tar.gz")
options=('!emptydirs')
md5sums=('261a5fb774a1d671cc71e36fd0ea02b3')

build() {
	cd ${pkgname}-0${pkgver}

	./configure --prefix=/usr

	make
}

package() {
	cd ${pkgname}-0${pkgver}

	make DESTDIR=${pkgdir} install
}
