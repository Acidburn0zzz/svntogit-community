  2880fd915393a66ee46024ee93821e8dc3bbfa06955b0cfa2f0140583b3a6bfe771d0724120084dae610a04ba547b1f5636c8bf6e724a1461cb10cc22ec03283
)
md5sums=(
  9b9e8052991bf195b92f56dcaf9bb240
  8e5fb57768327f762363258d2daebf08
)

package()
{
  cd "$srcdir/$pkgname-$pkgver"
  python3 setup.py install --root="$pkgdir"/ --optimize=1
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname"
}


