pkgname=fcitx5-rime
pkgver=0.0.0.20200522
_commit=1adf401cbbdecd008a84f390de9ff177d38d6d77
pkgrel=1
pkgdesc="RIME support for Fcitx5"
arch=('x86_64')
url="https://github.com/fcitx/fcitx5-rime"
license=('GPL')
depends=('fcitx5' 'librime')
makedepends=('extra-cmake-modules')
source=("https://github.com/fcitx/fcitx5-rime/archive/$_commit/fcitx5-rime-$_commit.tar.gz")
sha512sums=('89eb2afb2ee7efc2bbf690884fbe0578264fc10d5ba527017062d562c408edf26fe6e6697aea6a491dfcaea5c5500f51c30280640926cf132c0b548bbcb5230c')

build(){
  cd $pkgname-$_commit

  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR=/usr/lib .
  make
}

package() {
  cd $pkgname-$_commit
  make DESTDIR="$pkgdir" install
}
