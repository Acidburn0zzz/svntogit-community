# $Id$
# Maintainer: Sergej Pupykin <pupykin.s+arch@gmail.com>

pkgname=bsdiff
pkgver=4.3
pkgrel=7
pkgdesc='And bspatch are tools for building and applying patches to binary files'
url="http://www.daemonology.net/bsdiff/"
license=('BSD')
arch=('i686' 'x86_64')
depends=('bzip2')
source=(http://www.daemonology.net/${pkgname}/${pkgname}-${pkgver}.tar.gz
	Makefile.patch)
md5sums=('e6d812394f0e0ecc8d5df255aa1db22a'
         '87ec6120b2e2d38da5a67821af6ac356')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  patch -p0 < ../Makefile.patch
  make
  make PREFIX=${pkgdir}/usr install
  mkdir -p $pkgdir/usr/share
  mv ${pkgdir}/usr/man ${pkgdir}/usr/share/man/
}
