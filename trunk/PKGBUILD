pkgname=cloc
pkgver=1.08
pkgrel=1
pkgdesc="Count Lines of Code"
arch=('any')
url="http://cloc.sourceforge.net/"
license=('GPL')
depends=('perl')
source=(http://downloads.sourceforge.net/project/$pkgname/$pkgname/v$pkgver/$pkgname-$pkgver.pl)
md5sums=('40241c4d7687ba3a5a3c20eb75ffba3d')

build() {
  cd "$srcdir"

  install -D -m755 $pkgname-$pkgver.pl "$pkgdir/usr/bin/$pkgname"
}

