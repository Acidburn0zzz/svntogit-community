pkgname=bpython
pkgver=0.9.7.1
pkgrel=1
pkgdesc='A fancy interface to the Python interpreter'
arch=('any')
url='http://bpython-interpreter.org/'
license=('MIT')
depends=('pygments' 'setuptools')
source=("http://bpython-interpreter.org/releases/${pkgname}-${pkgver}.tar.gz")
md5sums=('f32ce6aa8ae6af8d2cf65e13f58859d4')

build() {
  cd ${pkgname}-${pkgver}

  python setup.py build
}

package() {
  cd ${pkgname}-${pkgver}

  python setup.py install --root=${pkgdir} --optimize=1

  install -Dm644 LICENSE \
    ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
