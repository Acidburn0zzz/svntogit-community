pkgname=ruby-hpricot
_pkgname=hpricot
pkgver=0.8.2
_pkgrev=4a26108
pkgrel=1
pkgdesc="A fast and liberal HTML parser for Ruby."
arch=('i686' 'x86_64')
url="http://github.com/hpricot/hpricot"
license=('GPL')
depends=('ruby')
makedepends=('rubygems')
source=($pkgname-$pkgver.tar.gz::http://github.com/${_pkgname}/${_pkgname}/tarball/$pkgver)
md5sums=('def40ba2aeb04511df9ec47d3bcecf0e')

build(){
  cd "$srcdir/$_pkgname-$_pkgname-$_pkgrev"
  gem install $_pkgname --install-dir "$pkgdir/usr/lib/ruby/gems/1.9.1" || return 1
}
