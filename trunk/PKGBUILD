# Packager: Justin Davis <jrcd83@gmail.com>
# $Id$

pkgname=perl-devel-patchperl
pkgver=0.62
pkgrel=1
pkgdesc="Patch perl source a la Devel::PPPort's buildperl.pl"
arch=(any)
license=(PerlArtistic GPL)
options=(!emptydirs)
depends=('perl>=5.6.0' 'perl-file-pushd>=1.00' 'perl-io' 'perl-ipc-cmd>=0.40'
         'perl-mime-base64')
makedepends=('perl-extutils-makemaker>=6.30')
url=https://metacpan.org/release/Devel-PatchPerl
source=("http://search.cpan.org/CPAN/authors/id/B/BI/BINGOS/Devel-PatchPerl-${pkgver}.tar.gz")
md5sums=(aa3d487f3c2c1037a244e038a8b17907)
sha512sums=(5c05bcb9192be257fdb3205e10d07f181e06167b2661624bfce3b854d9e78bc46b9f5eceff174c04e5f2163b340a6ff6a72c8a7c9f6aee44e98b3e0b3479795c)
_distdir="${srcdir}/Devel-PatchPerl-${pkgver}"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    cd "$_distdir"
    make test
  )
}

package() {
    cd "$_distdir"
    make DESTDIR="$pkgdir" install
    find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

# Local Variables:
# mode: shell-script
# sh-basic-offset: 2
# End:
# vim:set ts=2 sw=2 et:
