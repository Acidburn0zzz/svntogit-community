pkgname=dtkcore
pkgver=2.0.5.2
pkgrel=1
epoch=1
pkgdesc='DTK core modules'
arch=('x86_64')
url="https://github.com/linuxdeepin/dtkcore"
license=('GPL3')
depends=('qt5-base' 'gsettings-qt')
makedepends=('qt5-tools')
source=("$pkgname-$pkgver.tar.gz::https://github.com/linuxdeepin/dtkcore/archive/$pkgver.tar.gz")
sha512sums=('92ad6620fc5706bc7c20719d268b3d3193fef3d5de3dc8296f11c9ef44f9ad9da0fcc1344aafe090d6ca669ceda66c73877dc26ca824b4b54a93df310e6b21b0')

build() {
  cd dtkcore-$pkgver
  qmake-qt5 PREFIX=/usr
  make
}

package() {
  cd dtkcore-$pkgver
  make INSTALL_ROOT="$pkgdir" install
}
