_pkgsourcename=pixman
pkgname=lib32-$_pkgsourcename
pkgver=0.18.0
pkgrel=1
pkgdesc="Pixman library"
arch=('x86_64')
url="http://xorg.freedesktop.org"
license=('none')
groups=('lib32')
depends=('lib32-glibc')
source=(http://mir.archlinux.fr/extra/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.xz) 

build() {
        cd $srcdir
        mkdir -p $pkgdir/opt/lib32/usr/lib
        cp -dp usr/lib/*.so* $pkgdir/opt/lib32/usr/lib
}
md5sums=('d83810ccdd5c0b54eeb0f8916d7a7ec0')
sha256sums=('3287da235ba43798cb0b562a6d323de440c89b6d9f1170691d893fbe807e5d23')
