pkgname=vimpager
pkgver=0.7
pkgrel=1
pkgdesc="A vim-based script to use as a PAGER."
arch=('i686' 'x86_64')
url="http://www.vim.org/scripts/script.php?script_id=1723"
license=('custom:"Public domain"')
depends=('vim')
source=('http://www.vim.org/scripts/download_script.php?src_id=10009')
build() {
  install -Dm755 "$srcdir"/download_script.php\?src_id=10009 "$pkgdir"/usr/bin/vimpager
}
