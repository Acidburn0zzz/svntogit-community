# Maintainer: Bruno Pagani <archange@archlinux.org>
# Contributor: Jakob Gahde <j5lx@fmail.co.uk>

pkgname=dune
pkgver=1.3.0
pkgrel=1
pkgdesc="A composable build system for OCaml (formerly jbuilder)"
arch=('x86_64')
url="https://github.com/ocaml/dune"
license=('Apache')
depends=('glibc' 'ocaml' 'ocaml-findlib')
provides=('jbuilder')
conflicts=('jbuilder')
replaces=('jbuilder')
source=(${pkgname}-${pkgver}.tar.gz::"${url}/archive/${pkgver}.tar.gz")
sha256sums=('52cead509d4cdc4d02bff3dac57de49fdc7fdda02d607ba2f26af8b95ecf7a67')

build() {
    cd ${pkgname}-${pkgver}
    make release
}

# Tests requires a bunch of (currently) unpackaged dependencies
#check() {
#    cd ${pkgname}-${pkgver/b/-beta}
#    make test
#}

package() {
    cd ${pkgname}-${pkgver}

    # Work around the install command
    export OCAMLFIND_DESTDIR="${pkgdir}$(ocamlfind printconf destdir)"
    install -dm755 ${OCAMLFIND_DESTDIR}
    make INSTALL_ARGS="--prefix='${pkgdir}'/usr --libdir='${OCAMLFIND_DESTDIR}'" install

    # Fix doc and man install
    install -dm755 "${pkgdir}"/usr/share
    mv "${pkgdir}"/usr/{doc,share/}
    mv "${pkgdir}"/usr/{man,share/}
}
