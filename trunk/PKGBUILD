pkgname=fcitx5-unikey
pkgver=0.0.0.20200522
_commit=92c29967e5f54fb0a304f6b897b388f92bb0303a
pkgrel=1
pkgdesc="Unikey engine support for Fcitx5"
arch=('x86_64')
url="https://github.com/fcitx/fcitx5-unikey"
license=('GPL')
depends=('fcitx5-qt')
makedepends=('extra-cmake-modules')
source=("https://github.com/fcitx/fcitx5-unikey/archive/$_commit/fcitx5-unikey-$_commit.tar.gz")
sha512sums=('1ba1a1edee1803e2506df96e31bdcf61e200f6fe1f1594e0fdfe7f199672d27b4023d4c13f4a02805e28d2281460fc6c21d2cea4c90a59ecb73f53cc8eba412d')

build(){
  cd $pkgname-$_commit

  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR=/usr/lib .
  make
}

package() {
  cd $pkgname-$_commit
  make DESTDIR="$pkgdir" install
}
