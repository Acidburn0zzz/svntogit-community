# Contributor: Guillem Rieu <guillemr@gmx.net>

pkgname=dante
pkgver=1.1.19
pkgrel=2
pkgdesc="SOCKS v4 and v5 compatible proxy server and client"
url="http://www.inet.no/dante"
arch=(i686 x86_64)
license=('custom')
depends=()
backup=('etc/socks.conf' 'etc/sockd.conf')
source=(ftp://ftp.inet.no/pub/socks/$pkgname-$pkgver.tar.gz)
md5sums=('58b56d1e964f3f0186f3eeed3d95d9a4')
build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc
  make || return 1
  make DESTDIR=$startdir/pkg install

  # Config files
  mkdir -p $startdir/pkg/etc
  cp example/{socks,sockd}.conf $startdir/pkg/etc

  # License
  install -D -m644 LICENSE $startdir/pkg/usr/share/licenses/$pkgname/LICENSE || return 1
}
