pkgname=cloc
pkgver=1.09
pkgrel=1
pkgdesc="Count Lines of Code"
arch=('any')
url="http://cloc.sourceforge.net/"
license=('GPL')
depends=('perl')
source=(http://downloads.sourceforge.net/project/$pkgname/v$pkgver/$pkgname-$pkgver.pl)
md5sums=('05b4ac68e0ef8a846786d9129b08c379')

build() {
  cd "$srcdir"

  install -Dm755 $pkgname-$pkgver.pl "$pkgdir/usr/bin/$pkgname"
}

