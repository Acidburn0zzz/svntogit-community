pkgname=deepin-screenshot
pkgver=4.1.3
pkgrel=1
pkgdesc="Easy-to-use screenshot tool for linuxdeepin desktop environment"
arch=('x86_64')
url="https://github.com/linuxdeepin/deepin-screenshot"
license=('GPL3')
depends=('deepin-qt5integration' 'dtkwm' 'deepin-turbo')
makedepends=('cmake' 'qt5-tools')
groups=('deepin-extra')
source=("$pkgname-$pkgver.tar.gz::https://github.com/felixonmars/deepin-screenshot/archive/$pkgver.tar.gz")
sha512sums=('15234594d94e27adc05f8d026900bb2c752140bdc02acd881c9c533d1e526152a6f9647add3e62c0531464c27ea02486f8a70342fb3755bbf711fbe09b7c9896')

build() {
  cd deepin-screenshot-$pkgver
  cmake . -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd deepin-screenshot-$pkgver
  make DESTDIR="$pkgdir" install
}
