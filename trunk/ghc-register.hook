[Trigger]
Type = Path
Operation = Install
Operation = Upgrade
Target = usr/share/haskell/register/*.sh

[Action]
Description = Registering Haskell modules...
When = PostTransaction
Exec = /bin/sh -c 'while read -r f; do /usr/bin/systemd-cat -t haskell-register -p debug /$f ; done'
Depends = ghc-libs
NeedsTargets
