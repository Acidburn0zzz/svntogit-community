pkgname=visualboyadvance
pkgver=1.7.2
pkgrel=6
pkgdesc="An emulator for Gameboy and Gameboy Advance systems."
arch=('i686' 'x86_64')
url="http://vba.ngemu.com/"
license=("GPL")
depends=('libglademm' 'sdl')
makedepends=('nasm')
source=(http://downloads.sourceforge.net/sourceforge/vba/VisualBoyAdvance-src-$pkgver.tar.gz
        glibc.patch gcc41.patch $pkgname-$pkgver-deprecatedsigc++.patch)
md5sums=('cc02339e3fd8efd9f23121b0a2f81fd8'
         'e7a5188b483e2c4d2fee2a5efb088908'
         '4bc2f8eba6d677ea3d9a98ee1163e17b'
         '95596fbe499c23b8154142b5789cd630')

build() {
  cd $startdir/src/VisualBoyAdvance-$pkgver

  #fix for x86_64, thanks gentoo
  [ "$CARCH" = "x86_64" ] && patch -Np2 -i $srcdir/gcc41.patch

  patch -Np0 < $srcdir/glibc.patch || return 1
  patch -Np0 < $srcdir/$pkgname-$pkgver-deprecatedsigc++.patch || return 1
  ./configure --prefix=/usr --sysconfdir=/etc --enable-gtk=2.4 || return 1
  make || return 1
  make DESTDIR=$startdir/pkg install
}
