# Contributor: Michael S. Walker <barrucadu@localhost>

pkgname=ack
pkgver=1.96
pkgrel=1
pkgdesc='Perl-based grep replacement, aimed at programmers with large trees of heterogeneous source code'
arch=('any')
url="http://betterthangrep.com/"
license=('GPL' 'PerlArtistic')
depends=('perl-file-next')
options=('!emptydirs')
source=(http://search.cpan.org/CPAN/authors/id/P/PE/PETDANCE/$pkgname-$pkgver.tar.gz)
md5sums=('21701fb5f4670181dbf6ebe47984634b')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
