pkgname=gbrainy
pkgver=1.11
pkgrel=1
pkgdesc="A brain teaser game and trainer to have fun and to keep your brain trained"
arch=(i686 x86_64)
url="http://live.gnome.org/gbrainy"
license=('GPL2')
depends=('gnome-sharp' 'mono-addins' 'desktop-file-utils' 'hicolor-icon-theme')
makedepends=('intltool' 'gettext')
install=gbrainy.install
source=(http://www.softcatala.org/~jmas/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('8bc371035ab114945293d6eaa9af8da4')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  export MONO_SHARED_DIR="$srcdir"
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
