_pkgsourcename=libtasn1
pkgname=lib32-$_pkgsourcename
pkgver=2.5
pkgrel=1
pkgdesc="The ASN.1 library used in GNUTLS"
arch=(x86_64)
url="http://www.gnu.org/software/gnutls/"
license=('GPL' 'LGPL')
groups=('lib32')
depends=('lib32-glibc')
source=(ftp://ftp.archlinux.org/extra/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.xz)

build() {
	cd $srcdir
	mkdir -p $pkgdir/opt/lib32/usr/lib
	cp -dp usr/lib/*.so* $pkgdir/opt/lib32/usr/lib
}
md5sums=('20671f0ecadde6dbed53d5651936bfd3')
sha256sums=('74dd3844d6c3244c5a2066efaa5ba6368b0bbe07ae4653c316b99e937d9ab4ee')
