pkgname=naev-data
pkgver=0.5.0beta2
_pkgver=0.5.0-beta2
pkgrel=1
pkgdesc='2D action/rpg space game (data files)'
arch=('any')
url="http://code.google.com/p/naev/"
license=('GPL3')
source=("http://naev.googlecode.com/files/ndata-${_pkgver}")
md5sums=('6b9d0d46858bf01449a38d2258bfd8fb')

build() {
	cd "$srcdir"  
}

package() {
  mkdir -p "$pkgdir/usr/share/naev/"
  install -m644 "$srcdir/ndata-${_pkgver}" "$pkgdir/usr/share/naev/"
}
