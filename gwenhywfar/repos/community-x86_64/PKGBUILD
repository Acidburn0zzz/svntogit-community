pkgname=gwenhywfar
pkgver=5.8.1
pkgrel=1
pkgdesc="OS abstraction functions for various projects"
arch=('x86_64')
url="https://www.aquamaniac.de/"
license=('LGPL')
depends=('gnutls' 'libgcrypt' 'openssl')
makedepends=('git' 'gtk3' 'qt5-base')
optdepends=('gtk3: for the GTK3 UI'
            'qt5-base: for the Qt5 UI')
source=(https://www.aquamaniac.de/rdm/attachments/download/402/$pkgname-$pkgver.tar.gz
        https://www.aquamaniac.de/rdm/attachments/download/401/$pkgname-$pkgver.tar.gz.asc)
sha256sums=('05397618b9cae0197a181835f67e19ba09652cf30e2c9d1fbb98f3f34dbf4e1f'
            'SKIP')
validpgpkeys=(42400AF5EB2A17F0A69BB551E9899D784A977416) # AqBanking Package Key <packages@aqbanking.de>

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc --enable-system-certs --with-guis="gtk3 qt5"
  sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="${pkgdir}" install
}
