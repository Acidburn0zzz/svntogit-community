pkgname=gwenhywfar
pkgver=3.10.1
pkgrel=1
pkgdesc="OS abstraction functions for various projects"
arch=(i686 x86_64)
url="http://www.aquamaniac.de"
options=('!libtool')
license=("LGPL")
depends=('openssl')
source=("gwenhywfar-$pkgver.tar.gz::http://www2.aquamaniac.de/sites/download/download.php?package=01&release=27&file=01&dummy=gwenhywfar-$pkgver.tar.gz")
md5sums=('6d9d420b49a7c2bcd10cd1908bf827e5')

build() {
  cd $startdir/src/gwenhywfar-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc --enable-ssl
  make || return 1
  make DESTDIR=$startdir/pkg install
}

