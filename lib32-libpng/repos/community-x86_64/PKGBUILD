_pkgsourcename=libpng
pkgname=lib32-$_pkgsourcename
pkgver=1.2.37
pkgrel=1
pkgdesc="A collection of routines used to create PNG format graphics files"
arch=(x86_64)
url="http://www.libpng.org/pub/png/libpng.html"
license=('custom')
groups=('lib32')
depends=('lib32-zlib')
source=(ftp://ftp.heanet.ie/mirrors/ftp.archlinux.org/extra/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz)

build() {
	cd $startdir/src
	mkdir -p $startdir/pkg/opt/lib32/usr/lib
	cp -dp usr/lib/*.so* $startdir/pkg/opt/lib32/usr/lib
}
md5sums=('da0d25d3b512150112a09c5fa7cd8f79')
