_pkgsourcename=libpng
pkgname=lib32-$_pkgsourcename
pkgver=1.4.1
pkgrel=1
pkgdesc="A collection of routines used to create PNG format graphics files"
arch=('x86_64')
url="http://www.libpng.org/pub/png/libpng.html"
license=('custom')
groups=('lib32')
depends=('lib32-zlib')
source=(http://mir.archlinux.fr/extra/os/i685/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.xz)

build() {
	cd $srcdir
	mkdir -p $pkgdir/opt/lib32/usr/lib
	cp -dp usr/lib/*.so* $pkgdir/opt/lib32/usr/lib
}
md5sums=('140f0defce273960728c234dd755597c')
sha256sums=('f3fb71a078832acc5c3500929e8e5721bffb00bb215c48a927a2e1ff5727ae39')
