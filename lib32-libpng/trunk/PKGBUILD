_pkgsourcename=libpng
pkgname=lib32-$_pkgsourcename
pkgver=1.4.2
pkgrel=1
pkgdesc="A collection of routines used to create PNG format graphics files"
arch=('x86_64')
url="http://www.libpng.org/pub/png/libpng.html"
license=('custom')
groups=('lib32')
depends=('lib32-zlib')
source=(http://mir.archlinux.fr/extra/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.xz)

build() {
	cd $srcdir
	mkdir -p $pkgdir/opt/lib32/usr/lib
	cp -dp usr/lib/*.so* $pkgdir/opt/lib32/usr/lib
}
md5sums=('02a3af0d139b7b309fdf33782d7b096f')
sha256sums=('9ec083630e80525d121e2a8c998693c25efba25028c868ee821b73acbc683e9d')
