# Maintainer: Florian Pritz <flo@xssn.at>

_pkgbasename=libflashsupport
pkgname=lib32-$_pkgbasename
pkgver=9.0.21.78
pkgrel=8
pkgdesc="Macromedia flash plugin support lib (OSS SSL) (32-bit)"
arch=('x86_64')
url="http://www.macromedia.com/software/flashplayer/"
license=("custom")
depends=('flashplugin' 'lib32-openssl')
makedepends=(gcc-multilib)
source=(http://www.kaourantin.net/flashplayer/flashsupport.c LICENSE)
md5sums=('bb8a0de41ba18f9f1fcad7038cacb688' 'f3b8e73dc23de1e789c233e993e8978e')

build() {
	cd $srcdir

	gcc -m32 $CFLAGS -shared -Wall -Werror -lssl flashsupport.c -o libflashsupport.so
}

package() {
	cd $srcdir

	install -D -m755 libflashsupport.so $pkgdir/usr/lib32/libflashsupport.so
	install -D -m644 LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
