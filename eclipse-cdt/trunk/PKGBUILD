pkgname=eclipse-cdt
pkgver=8.0.1
pkgrel=2
pkgdesc="C/C++ Plugin for Eclipse"
arch=('any')
url="http://www.eclipse.org/cdt"
license=("EPL")
depends=('eclipse' 'libxtst')
source=("http://download.eclipse.org/tools/cdt/releases/indigo/dist/cdt-master-${pkgver}.zip")
md5sums=('449aff8b1c9a859873c21a292ccfc1a1')

package() {
  installdir=${pkgdir}/usr/share/eclipse/dropins/cdt

  cd ${srcdir}
  install -d ${installdir}/eclipse
  cp -a ${srcdir}/features ${installdir}/eclipse
  cp -a ${srcdir}/plugins ${installdir}/eclipse
}
