pkgname=wifi-select
pkgver=1.0
pkgrel=2
pkgdesc='Tool for selecting wifi networks in console.'
arch=('any')
url='https://github.com/sphynx/wifi-select'
license=('GPL2')
depends=('netcfg' 'dialog' 'wireless_tools')
source=("httpp://pkgbuild.com/~jelle/wifi-select-1.0.tar.gz")
md5sums=('14fbe3f8d702787cc7021c539236e58c')
package() {
  cd $srcdir/sphynx-wifi-select-5fb2222/

  install -D wifi-select "${pkgdir}/usr/bin/wifi-select"

  sed -i 's/network.subr/network/' "${pkgdir}/usr/bin/wifi-select"

  install -D -m 644 parse-iwlist.awk "${pkgdir}/usr/lib/network/parse-iwlist.awk"
}
