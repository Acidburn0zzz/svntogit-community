pkgname=setconf
pkgver=0.5.2
pkgrel=1
pkgdesc="Utility to easily change settings in Makefiles and configuration files"
arch=('any')
url="http://setconf.roboticoverlords.org/"
license=('GPL')
depends=('python')
#depends=('pcre' 'gc')
#makedepends=('shedskin')
source=("http://setconf.roboticoverlords.org/$pkgname-$pkgver.tbz2")
