pkgname=paman
pkgver=0.9.4
pkgrel=2
pkgdesc="A simple GTK frontend for the PulseAudio sound server"
arch=('i686' 'x86_64')
url="http://0pointer.de/lennart/projects/paman"
license=('GPL')
depends=('libglademm' 'pulseaudio' 'gnome-icon-theme' 'libxtst')
source=(http://0pointer.de/lennart/projects/paman/${pkgname}-${pkgver}.tar.gz
        paman.desktop)
md5sums=('4a77b129b0de8d261f2794ce3db518cc' 'a12318bcccbfe9ac922f9f97eb6409ac')

build() {
	cd ${srcdir}/paman-${pkgver}
	./configure --prefix=/usr --disable-lynx
	make || return 1
}

package() {
	cd ${srcdir}/paman-${pkgver}
	make DESTDIR=${pkgdir} install

	# Fix broken icons.
	#sed -i 's/audio-card/emblem-sound/' ${pkgdir}/usr/share/paman/paman.glade
	#sed -i 's/go-jump/redo/' ${pkgdir}/usr/share/paman/paman.glade
	install -Dm644 ${srcdir}/paman.desktop \
		${pkgdir}/usr/share/applications/paman.desktop
}
