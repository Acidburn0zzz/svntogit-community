pkgname=pizza_party
pkgver=0.1.b
pkgrel=2
pkgdesc="A text based program for ordering pizza, or for throwing pizza parties."
arch=('i686' 'x86_64')
url="http://www.beigerecords.com/cory/pizza_party/"
license=('GPL')
depends=('perl')
source=(http://www.beigerecords.com/cory/Things_I_Made/uploads/Main/${pkgname}-${pkgver}.tar.gz)
md5sums=('e7afd8e77fc0f088d45566da0689d80e')

build() {
  cd $startdir/src/$pkgname-$pkgver
  install -m 755 -D $pkgname $startdir/pkg/usr/bin/$pkgname
  install -m 644 -D man/$pkgname.1 $startdir/pkg/usr/man/man1/$pkgname.1
}
