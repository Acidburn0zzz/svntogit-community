# Maintainer: Dave Reisner <d@falconindy.com>
# Contributor: Bert Muennich <muennich at informatik.hu-berlin.de>

pkgname="urxvt-url-select"
pkgver=1.5
pkgrel=1
pkgdesc="Copy and open URLs in rxvt-unicode using the keyboard"
arch=("any")
depends=('rxvt-unicode')
license=("GPL")
url='http://www.github.com/muennich/urxvt-perls'
install='urxvt-url-select.install'
source=(https://github.com/downloads/muennich/urxvt-perls/url-select-$pkgver.tar.gz)
md5sums=('5428680ae1b13c2eb738837f29cb3ea0')

_extension="url-select"

build() {
  cd "${srcdir}/${_extension}-${pkgver}"

  install -D -m 644 "${_extension}" "${pkgdir}/usr/lib/urxvt/perl/${_extension}"
}
