# Maintainer: Tom Killian <tomk@runbox.com>

#phrakture: svn test

pkgname=clearlooks
pkgver=0.6.2
pkgrel=5
pkgdesc="An attractive gtk engine with a focus on usability."
arch=(i686 x86_64)
url="http://clearlooks.sourceforge.net/"
license=('GPL')
depends=('gtk-engines' 'gnome-themes')
options=('!libtool')
source=(http://downloads.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.bz2)
md5sums=('451ef33d1bffa261c5cbe01182199f97')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr --enable-animation
  make || return 1
  make DESTDIR=$startdir/pkg install
  
  # Remove conflicts with gtk-engines
  rm -rf $startdir/pkg/{usr/lib,usr/share/themes/Clearlooks/gtk-2.0}
  # Remove conflicts with gnome-themes
  rm -rf $startdir/pkg//usr/share/themes/Clearlooks/index.theme
}
