pkgname=pyspf
pkgver=1.6
pkgrel=2
pkgdesc="SPF (Sender Permitted From) Spam block implemented in Python."
arch=('i686' 'x86_64')
url='http://www.wayforward.net/spf/'
license=('python')
depends=('python' 'pydns')
source=("http://www.wayforward.net/spf/$pkgname-$pkgver.tar.gz")
md5sums=('7ff35d8f9db41f2f7e0068f78f243a3d')

build() {
	cd $startdir/src/$pkgname-$pkgver

	python setup.py install --root=$startdir/pkg
}
