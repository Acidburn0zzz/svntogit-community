pkgname=v2ray-geoip
pkgver=202002271405
pkgrel=1
pkgdesc="GeoIP List for V2Ray"
arch=('any')
url="https://github.com/v2ray/geoip"
license=('MIT')
source=("geoip-$pkgver.dat::https://github.com/v2ray/geoip/releases/download/$pkgver/geoip.dat")
sha512sums=('065e83ca291c43b13eef37827cd2d83700a187ec8cb829cae11476afe5113e05409fcbdc67196bc8411e2db3b1463fdd2a2fad45262a543f3db862bfaf9b4f4b')

package() {
  install -Dm755 geoip-$pkgver.dat "$pkgdir"/usr/lib/v2ray/geoip.dat
}
