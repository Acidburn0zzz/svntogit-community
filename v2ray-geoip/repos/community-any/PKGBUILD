pkgver=202009020005
pkgrel=2
pkgdesc="GeoIP List for V2Ray"
arch=('any')
url="https://github.com/v2ray/geoip"
license=('MIT')
source=("geoip-$pkgver.dat::https://github.com/v2ray/geoip/releases/download/$pkgver/geoip.dat")
sha512sums=('da59dfa7c5c53ceec07d0841f84c514ceed9f2fd4fce2232cb6097ac493a48ea88e16e645c068704cee47f0641d0fc04576f5dbc1d794a55894ba8287ac23f9e')

package() {
  install -Dm755 geoip-$pkgver.dat "$pkgdir"/usr/share/v2ray/geoip.dat
}
