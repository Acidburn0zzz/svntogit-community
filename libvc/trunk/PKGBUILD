#$Id$
# Maintainer: Jeff Mickey <j@codemac.net>

pkgname=libvc
pkgver=003
pkgrel=1
pkgdesc="vCard library."
arch=('i686' 'x86_64')
url="http://rolo.sourceforge.net"
license=("LGPL")
depends=('glibc')
makedepends=()
conflicts=()
replaces=()
backup=()
install=
source=(http://downloads.sourceforge.net/rolo/$pkgname-$pkgver.tar.gz
	http://patch-tracker.debian.org/patch/series/dl/libvc/003.dfsg.1-11/count-vcards-buffer-overflow.diff
	http://patch-tracker.debian.org/patch/series/dl/libvc/003.dfsg.1-11/field-names-comply-with-vCard2.1diff
	http://patch-tracker.debian.org/patch/series/dl/libvc/003.dfsg.1-11/manpage-Lb-definition.diff
	http://patch-tracker.debian.org/patch/series/dl/libvc/003.dfsg.1-11/accept-line-folding.diff)
md5sums=('3c9f0fb512d02d179f57a9eadcfa1043' 
	 '98b3c99555f1e69a0d07152cb800da4f' 
	 'd5bd5ff0720cc726998694c2e01e495e' 
	 '1366acdbc5569cd18079d823eb91782c'
	 '8cf005aac291836e574751f49b5fa32b')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  patch -p1 -i ../count-vcards-buffer-overflow.diff
  patch -p1 -i ../field-names-comply-with-vCard2.1diff
  patch -p1 -i ../manpage-Lb-definition.diff
  patch -p1 -i ../accept-line-folding.diff

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=${pkgdir} install
  find ${pkgdir} -name '*.la' -exec rm {} \;
}
