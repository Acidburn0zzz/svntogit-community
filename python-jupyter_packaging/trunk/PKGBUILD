# Maintainer: Antonio Rojas <arojas@archlinux.org>

_pipname=jupyter_packaging
pkgname=python-jupyter_packaging
pkgver=0.9.1
pkgrel=1
pkgdesc="Jupyter Packaging Utilities"
arch=(any)
url="https://jupyter.org/"
license=(custom)
depends=(python-packaging python-deprecation python-wheel python-tomlkit)
makedepends=(python-setuptools)
source=(https://pypi.io/packages/source/j/$_pipname/$_pipname-$pkgver.tar.gz)
sha256sums=('6f819759804536f9e563cc8a76a9d8588bb90cd735deaa550a6d8453012b0164')

build() {
  cd $_pipname-$pkgver
  python setup.py build 
}

package() {
  cd $_pipname-$pkgver
  python setup.py install --skip-build --root="$pkgdir" --optimize=1

  install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}
