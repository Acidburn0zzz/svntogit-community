# Provides lib32-gcc to not break too much stuff
_pkgsourcename=gcc-libs
pkgname=lib32-$_pkgsourcename
pkgver=4.5.0
pkgrel=1
pkgdesc="The GNU Compiler Collection"
arch=('x86_64')
url="http://gcc.gnu.org"
license=('GPL' 'LGPL')
groups=('lib32')
depends=('lib32-glibc')
replaces=('lib32-gcc')
provides=('lib32-gcc')
source=(http://mir.archlinux.fr/core/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.xz)

build() {
	cd $srcdir
	mkdir -p $pkgdir/opt/lib32/usr/lib
	cp -dp usr/lib/*.so* $pkgdir/opt/lib32/usr/lib
#	cp -dp usr/lib/*.a* $pkgdir/opt/lib32/usr/lib
}
md5sums=('5d85de4312cc9d624f4621e7f2849f97')
sha256sums=('3a944ba8615b953806a659924b778dee7d85e4f9dffcdc2afa20f97da6525aaa')
md5sums=('fd27a6a4ddf8c445e73d6802d7da61cd')
sha256sums=('dc881b501fe96bd7dc4dbd0b8a4109817ca9debd4344b6d571028e1b6e38f429')
