# Maintainer: Mikko Seppälä <t-r-a-y@mbnet.fi>
# Provides lib32-gcc to not break too much stuff
_pkgsourcename=gcc-libs
pkgname=lib32-$_pkgsourcename
pkgver=4.4.0
pkgrel=3
pkgdesc="The GNU Compiler Collection"
arch=(x86_64)
url="http://gcc.gnu.org"
license=('GPL' 'LGPL')
groups=('lib32')
depends=('lib32-glibc')
replaces=('lib32-gcc')
provides=('lib32-gcc')
source=(ftp://ftp.archlinux.org/core/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz)

build() {
	cd $startdir/src
	mkdir -p $startdir/pkg/opt/lib32/usr/lib
	cp -dp usr/lib/*.so* $startdir/pkg/opt/lib32/usr/lib
	cp -dp usr/lib/*.a* $startdir/pkg/opt/lib32/usr/lib
}
md5sums=('95d24e29ab272051405a57e481786ddb')
