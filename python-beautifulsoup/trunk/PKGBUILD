pkgname=python-beautifulsoup
pkgver=4.1.0
pkgrel=1
pkgdesc="A Python HTML/XML parser designed for quick turnaround projects like screen-scraping"
arch=('any')
url="http://www.crummy.com/software/BeautifulSoup/index.html"
license=('PSF')
depends=('python')
makedepends=('python-distribute')
provides=('beautiful-soup')
conflicts=('beautiful-soup')
replaces=('beautiful-soup')
source=(http://www.crummy.com/software/BeautifulSoup/bs4/download/4.0/${pkgname#*\-}4-$pkgver.tar.gz)
sha1sums=('b49de1ab63065ac2c57956d2f99efdf9811e8427')
build() {
    cd "$srcdir/${pkgname#*\-}4-$pkgver"
    python setup.py install --root="$pkgdir" -O1
}
