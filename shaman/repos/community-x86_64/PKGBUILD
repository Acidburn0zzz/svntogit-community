pkgname=shaman
pkgver=1.0.9
pkgrel=1
pkgdesc="Complete frontend to libalpm/pacman and ABS written in Qt4"
arch=('i686' 'x86_64')
url="http://shaman.iskrembilen.com/"
license=('GPL')
depends=('pacman>=3.2.0' 'pacman<3.3' 'qt>=4.4.0' 'dbus')
makedepends=('cmake')
source=(http://downloads.sourceforge.net/sourceforge/shaman-arch/$pkgname-$pkgver.tar.gz)
md5sums=('522727f5e270bb5aa37f9fe728aa60f6')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  cmake -DCMAKE_INSTALL_PREFIX=/usr -DNO_PLASMA=TRUE . || return 1
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
  chmod u+s ${pkgdir}/usr/bin/shaman
}
