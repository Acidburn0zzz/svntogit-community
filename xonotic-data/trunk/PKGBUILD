pkgname=xonotic-data
pkgver=0.1.0
pkgrel=1
pkgdesc="A free, fast-paced crossplatform first-person shooter (data files)"
arch=('any')
url="http://xonotic.org"
license=('GPL')
depends=()
makedepends=('unzip')
source=('http://dl.xonotic.org/xonotic-0.1.0preview.zip')
md5sums=('aafb43893aa66e01488c817e3a60d96d')

build() {
  cd $srcdir/Xonotic/source/darkplaces
}

package() {
  cd $srcdir/Xonotic
  
  # data
  mkdir -p $pkgdir/opt/xonotic/
  mv $srcdir/Xonotic/data $pkgdir/opt/xonotic/
}
