pkgname=zshdb
pkgver=0.07
pkgrel=2
pkgdesc='A debugger for zsh scripts.'
arch=('any')
url='http://bashdb.sourceforge.net/'
license=('GPL')
depends=('zsh' 'python2-pygments')
source=("http://downloads.sourceforge.net/sourceforge/bashdb/${pkgname}-${pkgver}.tar.gz" "python2.patch")

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
md5sums=('939d3d8a5da429563c29ef41e4c3b6a4'
         'd37159e38bf7219e2fb98d0aee24762f')
