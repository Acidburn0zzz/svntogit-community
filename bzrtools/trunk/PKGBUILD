pkgname=bzrtools
pkgver=1.17.0
pkgrel=1
pkgdesc="Useful collection of utilities (all plugins, right now) for bzr."
arch=('i686' 'x86_64')
url="http://bazaar-vcs.org/BzrTools"
license=('GPL')
depends=('bzr' 'python>=2.6')
source=(http://launchpad.net/$pkgname/stable/1.17/+download/$pkgname-$pkgver.tar.gz)

build() {
  cd "$srcdir/$pkgname"
  python setup.py install --root=$pkgdir || return 1
}

md5sums=('e03c8528ca5f455968957c44d72a6f61')
