# Contributor: Mark Rosenstand <mark@borkware.net>

pkgname=bzrtools
pkgver=2.2.0
pkgrel=2
pkgdesc="Useful collection of utilities (all plugins, right now) for bzr."
arch=('any')
url="http://bazaar-vcs.org/BzrTools"
license=('GPL')
depends=('bzr' 'python2')
source=(http://launchpad.net/$pkgname/stable/$pkgver/+download/$pkgname-$pkgver.tar.gz)
md5sums=('8a05bb1d7d2a53bbcecf1b486fa06f76')

build() {
  cd "$srcdir/$pkgname"

  # python 2 fix
  for file in release.py test.py; do
    sed -i 's_#!/usr/bin/env python_#!/usr/bin/env python2_' $file
  done

  python2 setup.py install --root=$pkgdir
}

