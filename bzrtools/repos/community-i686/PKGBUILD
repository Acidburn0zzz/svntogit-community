pkgname=bzrtools
pkgver=1.14.0
pkgrel=1
pkgdesc="Useful collection of utilities (all plugins, right now) for bzr."
arch=('i686' 'x86_64')
url="http://bazaar-vcs.org/BzrTools"
license=('GPL')
depends=('bzr' 'python>=2.6')
source=(http://launchpad.net/$pkgname/stable/1.14/+download/$pkgname-$pkgver.tar.gz)

build() {
  cd "$srcdir/$pkgname"
  python setup.py install --root=$pkgdir || return 1
}

md5sums=('f5b46f1c18301ce9264112375175e51f')
