# Maintainer: Angel 'angvp' Velasquez <angvp[at]archlinux.com.ve>
# Maintainer: Douglas Soares de Andrade <dsa@aur.archlinux.org>

pkgname=python-psycopg2
pkgver=2.3.1
pkgrel=1
pkgdesc="A PostgreSQL database adapter for the Python programming language."
arch=('i686' 'x86_64')
url="http://initd.org/projects/psycopg2"
license=('LGPL3')
depends=('python2' 'postgresql-libs>=8.4.1')
source=(http://initd.org/psycopg/tarballs/psycopg2-$pkgver.tar.gz)
md5sums=('dbc71c385b08523e035d4e11cec6a413')

build() {
  cd "$srcdir/psycopg2-$pkgver"
  # Thanks for the tip, Xentac.
  sed -i 's/,PSYCOPG_DEBUG$//' setup.cfg
  python2 setup.py install --root="$pkgdir"
}
