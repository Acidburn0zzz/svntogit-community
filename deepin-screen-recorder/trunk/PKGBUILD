pkgname=deepin-screen-recorder
pkgver=2.7
pkgrel=1
pkgdesc='Deepin Screen Recorder'
arch=('x86_64')
url="https://github.com/linuxdeepin/deepin-screen-recorder"
license=('GPL3')
depends=('deepin-qt5integration' 'dtkwm' 'byzanz' 'ffmpeg')
makedepends=('qt5-tools')
groups=('deepin-extra')
source=("$pkgname-$pkgver.tar.gz::https://github.com/linuxdeepin/deepin-screen-recorder/archive/$pkgver.tar.gz")
sha512sums=('d784921ad90cc5b112745db49b3119630780d39bf5ea15b0da922ab4616c3b353320bddf947e19a4a6c751dd8dba71cb53add8339ae70310480720cee9d7c891')

build(){
  cd deepin-screen-recorder-$pkgver
  qmake-qt5 PREFIX=/usr
  make
}

package() {
  cd deepin-screen-recorder-$pkgver
  make INSTALL_ROOT="$pkgdir" install
}
