# $Id: PKGBUILD,v 1.29 2009/07/15 18:10:34 dgriffiths Exp $
# Maintainer: Giovanni Scafora <giovanni@archlinux.org>
# Contributor: Jeff Mickey <j@codemac.net>

pkgname=amsn
pkgver=0.97.2
pkgrel=13
pkgdesc="MSN client written in Tcl/Tk"
arch=('i686' 'x86_64')
url="http://amsn.sourceforge.net"
license=('GPL2')
depends=('libx11' 'libsm' 'tk>=8.5.7' 'libjpeg' 'libtiff' 'libpng' 'perl' 'python' 'imlib' 'tls')
makedepends=('pkgconfig')
source=(http://downloads.sourceforge.net/sourceforge/${pkgname}/${pkgname}-${pkgver}.tar.bz2)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=${pkgdir} install

  # fix links
  cd ${pkgdir}/usr/bin
  rm *
  ln -sf /usr/share/amsn/amsn amsn
  ln -sf /usr/share/amsn/amsn-remote amsn-remote
  ln -sf /usr/share/amsn/amsn-remote-CLI amsn-remote-CLI
}
md5sums=('6c494d97b5ab810f1b265ef19bf652b0')

