pkgname=lib32-util-linux-ng
pkgver=2.17
pkgrel=1
pkgdesc="Miscellaneous system utilities for Linux"
arch=('x86_64')
url="http://userweb.kernel.org/~kzak/util-linux-ng/"
license=('GPL2')
depends=('lib32-glibc')
source=(http://mir.archlinux.fr/core/os/i686/${pkgname/lib32-/}-${pkgver}-${pkgrel}-i686.pkg.tar.gz)

build() {
  install -d $pkgdir/opt/lib32/lib/
  cp -dp $srcdir/lib/* $pkgdir/opt/lib32/lib/
  install -d $pkgdir/opt/lib32/usr/lib
  cp -dp $srcdir/usr/lib/*.so $pkgdir/opt/lib32/usr/lib

}
md5sums=('8a013bed4b4aa4e9b7ee9d3d0e376528')
sha256sums=('97fec43904ae35ca937aa4374417a2d3339e63c572589d5977c733707738980e')
