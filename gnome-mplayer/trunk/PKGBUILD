pkgname=gnome-mplayer
pkgver=0.9.99.rc3
pkgrel=1
pkgdesc="A simple MPlayer GUI"
arch=('i686' 'x86_64')
url="http://gnome-mplayer.googlecode.com/"
license=('GPL')
depends=('mplayer' 'dbus-glib' 'libnotify')
makedepends=('gnome-power-manager' 'nautilus')
install=${pkgname}.install
source=(http://gnome-mplayer.googlecode.com/files/${pkgname}-${pkgver}.tar.gz)
md5sums=('39b44abe76fb8e8496f1179b9137d2c6')

build() {
    cd ${srcdir}/${pkgname}-${pkgver}

    ./configure --prefix=/usr --sysconfdir=/etc \
        --disable-schemas-install --without-gconf
    make
}

package() {
    cd ${srcdir}/${pkgname}-${pkgver}

    make DESTDIR=${pkgdir} install
    sed -i 's@Exec=gnome-mplayer %U@Exec=gnome-mplayer %F@' ${pkgdir}/usr/share/applications/${pkgname}.desktop
}
