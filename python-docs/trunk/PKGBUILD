# Maintainer: Sergej Pupykin <pupykin.s+arch@gmail.com>
# Contributor : Rohan Dhruva (rohandhruva at gmail dot com)

pkgname=python-docs
pkgver=2.6.1
pkgrel=1
pkgdesc="Set of HTML documentation for python."
arch=('i686' 'x86_64')
url="http://docs.python.org/download.html"
license=('GPL')
depends=('python')
install=python-docs.install
options=('docs')
source=(http://docs.python.org/ftp/python/doc/current/python-$pkgver-docs-html.tar.bz2)
md5sums=('7713164a98eebe6a65325c84dc7afced')

build() 
{
  cd $startdir
  mkdir -p pkg/usr/share/doc/python/html
  cp -rf src/python-docs-html/* pkg/usr/share/doc/python/html/
}
