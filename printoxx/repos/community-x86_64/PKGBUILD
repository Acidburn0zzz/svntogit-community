pkgname=printoxx  
pkgver=2.5
pkgrel=2
pkgdesc="Adjusting images on a sheet of paper for printing"
url="http://kornelix.squarespace.com/printoxx"
arch=('i686' 'x86_64')
license=('GPL3')
depends=('gtk2')
source=("http://kornelix.squarespace.com/storage/downloads/$pkgname-$pkgver.tar.gz")
md5sums=('c50fac8458be511e254de79935be3788')

build() {
  cd $srcdir/$pkgname-$pkgver
  export PREFIX=/usr 
  CXXFLAGS+="-c $(pkg-config --cflags gtk+-2.0)" make || return 1 
  sed -i 's#/local##' desktop || return 1
}

package() {
  cd $srcdir/$pkgname-$pkgver
  install -Dm644 desktop \
    $pkgdir/usr/share/applications/$pkgname.desktop || return 1
  make DESTDIR=$pkgdir PREFIX=/usr install || return 1
}
