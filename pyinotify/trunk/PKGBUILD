# Contributor: Evangelos Foutras <foutrelis@gmail.com>

pkgname=pyinotify
pkgver=0.9.0
pkgrel=1
pkgdesc="Python module used for monitoring filesystems events on Linux platforms with inotify"
arch=('any')
url="http://github.com/seb-m/pyinotify"
license=('MIT')
depends=('python2')
options=('force')
source=(http://seb.dbzteam.org/pub/pyinotify/releases/$pkgname-$pkgver.tar.gz)
md5sums=('9822b3cfe1494e1a9e8bce70b1214db7')

build() {
  cd "$srcdir/$pkgname"

  python2 setup.py install --root="$pkgdir" -O1
}

