# Contributor: Tiago Pierezan Camargo <tcamargo@gmail.com>

pkgname=pyflakes
pkgver=0.4.0
pkgrel=2
pkgdesc='A lint-like tool for Python to identify common errors quickly without executing code'
arch=('i686' 'x86_64')
url='http://www.divmod.org/trac/wiki/DivmodPyflakes/'
license=('MIT')
depends=('python2')
source=("http://divmod.org/trac/attachment/wiki/SoftwareReleases/${pkgname}-${pkgver}.tar.gz?format=raw"
        'LICENSE')
md5sums=('630a72510aae8758f48cf60e4fa17176'
         '6d06e545ade16a66470d1907cd28d441')

build() {
  cd ${pkgname}-${pkgver}

  python2 setup.py build
}

package() {
  cd ${pkgname}-${pkgver}

  python2 setup.py install --prefix=/usr --root=${pkgdir} --optimize=1

  install -D -m644 ../LICENSE \
    ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
