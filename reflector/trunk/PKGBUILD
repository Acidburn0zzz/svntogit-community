pkgname=reflector
pkgver=2012.3
pkgrel=1
pkgdesc='A Python 3 module and script to retrieve and filter the latest Pacman mirror list.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/reflector"
depends=(python3)
source=(
  http://xyne.archlinux.ca/projects/reflector/archives/reflector-2012.3.tar.xz
  http://xyne.archlinux.ca/projects/reflector/archives/reflector-2012.3.tar.xz.sig
)
sha512sums=(
  60f99d16c63b402cd49f27fab37a4cb4434ab495d3457ba733b62f8971b756e1ebb37dbf1b97b34790c93d2955ecd9f898ec51eb87676a8288f5491bc845f742
  33490ffc0d9bfe5500cc4c939be0168ff2c1fc75e74f03f6aca916ff606a7dd2f62412c05a005b8e6a12a837d053f560600c5f217f58a48d818d9c80441237b8
)
md5sums=(
  4c73bf1a3092a7fefc515bcf86b036f3
  3d64b55fe3c60b89aeb7b28237f49d82
)

build () 
{ 
  cd "$srcdir/$pkgname-$pkgver";
  python3 setup.py install --root="$pkgdir"/ --optimize=1;
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname"
}


