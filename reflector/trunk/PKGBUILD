#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=reflector
pkgver=2010.08.24.1
pkgrel=1
pkgdesc="A script to retrieve and filter the latest mirrorlist from the MirrorStatus page."
depends=('perl' 'perl-xyne-arch' 'perl-crypt-ssleay')
optdepends=('python: for rankmirrors support')
arch=('any')
license=('GPL')
url="http://xyne.archlinux.ca/projects/${pkgname}"
source=(http://xyne.archlinux.ca/src/${pkgname}-${pkgver}.tar.gz)
md5sums=('cbfcedcc8e60df405336284281b531c7')

build() {
  install -D -m755 $srcdir/$pkgname/$pkgname $pkgdir/usr/bin/${pkgname}
  install -D -m644 $srcdir/$pkgname/man/$pkgname.1.gz $pkgdir/usr/share/man/man1/$pkgname.1.gz
}
# vim: set ts=2 sw=2 et:
