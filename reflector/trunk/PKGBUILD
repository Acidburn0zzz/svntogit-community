pkgname=reflector
pkgver=2012.7.1
pkgrel=1
pkgdesc='A Python 3 module and script to retrieve and filter the latest Pacman mirror list.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/reflector"
depends=(python3)
source=(
  http://xyne.archlinux.ca/projects/reflector/archives/reflector-2012.7.1.tar.xz
  http://xyne.archlinux.ca/projects/reflector/archives/reflector-2012.7.1.tar.xz.sig
)
sha512sums=(
  194fc7c83bc4ead35631076cc8bb9595ff650319c6c0ec864dff4bc729c869dc9e43679f8256d2c04614c410ac90259811350488f38e58a6561614bf740795c9
  fb581a1dbeae83b508865e4c9bd6f876ea21c96fda84349d723350a2e75ce0043297c9820d9ad7715363c372b9ade01735fe6c9ed750048f91d5e58a27bb98a7
)
md5sums=(
  f1fdf03b0a918b47a015b9260f4c7161
  0717b289dc1384cd6bad5a9dffda39b5
)

build () 
{ 
  cd "$srcdir/$pkgname-$pkgver";
  python3 setup.py install --root="$pkgdir"/ --optimize=1;
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname"
}


