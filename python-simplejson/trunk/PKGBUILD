pkgname=python-simplejson
pkgver=2.5.2
pkgrel=1
pkgdesc="Simple, fast, extensible JSON encoder/decoder for Python"
license=('MIT')
arch=('any')
url="http://undefined.org/python/#simplejson"
depends=('python2')
makedepends=('python2-distribute')
changelog=$pkgname.changelog
source=($pkgname-$pkgver.tar.gz::https://github.com/simplejson/simplejson/tarball/v${pkgver})
sha256sums=('ad0bb2a161e17c518304fcde8258be120eb8f66b4f49b9f0d50643706e135eff')

build() {
  cd ${srcdir}/simplejson-simplejson-*

  python2 setup.py install --root=${pkgdir}

# License
  install -Dm644 ${srcdir}/simplejson-simplejson-*/LICENSE.txt \
    ${pkgdir}/usr/share/licenses/python-simplejson/LICENSE
}
