pkgname=python-simplejson
pkgver=2.2.1
pkgrel=1
pkgdesc="Simple, fast, extensible JSON encoder/decoder for Python"
license=('MIT')
arch=('any')
url="http://undefined.org/python/#simplejson"
depends=('python2')
makedepends=('python2-distribute')
changelog=$pkgname.changelog
source=(http://pypi.python.org/packages/source/s/simplejson/simplejson-${pkgver}.tar.gz)
sha256sums=('5689044e96478b42b4c1e34057f248ca22263de767430e934c6f430f005d7027')

build() {
  cd ${srcdir}/simplejson-${pkgver}

  python2 setup.py install --root=${pkgdir}

# License
  install -Dm644 ${srcdir}/simplejson-${pkgver}/LICENSE.txt \
    ${pkgdir}/usr/share/licenses/python-simplejson/LICENSE
}
sha256sums=('e85c5ae24dd9827113893c1dd2c799528195057388096f0fc45ad4b32b378c26')
