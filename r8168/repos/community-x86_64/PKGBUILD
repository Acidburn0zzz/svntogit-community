pkgname=r8168
pkgver=8.029.00
pkgrel=1
pkgdesc="A kernel module for Realtek 8168 network cards"
url="http://www.realtek.com.tw"
license=("GPL")
arch=('i686' 'x86_64')
depends=('glibc' 'linux>=3.3' 'linux<3.4')
makedepends=('linux-headers')
source=(http://r8168.googlecode.com/files/$pkgname-$pkgver.tar.bz2 linux-3.3-fix.patch)
install=$pkgname.install

_extramodules=extramodules-3.3-ARCH
_kernver="$(cat /lib/modules/$_extramodules/version || true)"

build() {
	cd "$srcdir/$pkgname-$pkgver"
	patch -p0 -i "$srcdir/linux-3.3-fix.patch"
	make clean SYSSRC=/usr/src/linux-$_kernver modules
}

package() {
	cd "$srcdir/$pkgname-$pkgver/src"
	install -D -m644 $pkgname.ko "$pkgdir/lib/modules/$_extramodules/$pkgname.ko"
	find "$pkgdir" -name '*.ko' -exec gzip -9 {} \;
}

md5sums=('5dc15a976950250b7b543876cc3350a8'
         'ee7e3ef155f0c88ae2dbb137d2e03b25')
sha256sums=('211a2994c9caf57321dafdb3acdfaa877f0b3f447798dc2abd2e417db3b0e515'
            'f93dd283d4dfbeda43a32fb3a84016b680eca79f0f4e5df00d84e9989edff69a')
