# $Id$
# Maintainer: Balló György <ballogyor+arch at gmail dot com>

_pkgname=dirspec
pkgname=python2-dirspec
pkgver=3.0.2
pkgrel=1
pkgdesc="Python library which provides support for handling directories as described in the XDG Base Directory and User Folders specifications"
arch=('any')
url="https://launchpad.net/dirspec"
license=('LGPL')
depends=('python2')
source=(https://launchpad.net/$_pkgname/stable-3-0/$pkgver/+download/$_pkgname-$pkgver.tar.gz)
md5sums=('34c57bf0e74397b0049ff3da88f83800')

build() {
  cd "$srcdir/$_pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$srcdir/$_pkgname-$pkgver"

  python2 setup.py install --root=$pkgdir/ --optimize=1
}
