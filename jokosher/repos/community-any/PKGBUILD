# Contributor: William Rea <sillywilly@gmail.com>
pkgname=jokosher
pkgver=0.11.5
pkgrel=1
pkgdesc="A simple and easy-to-use Open Source multi-track editor"
arch=('any')
url="http://jokosher.org"
license=('GPL')
install=jokosher.install
depends=('gstreamer0.10-python' 'gnonlin' 'pygtk' 'dbus-python' 'librsvg' 'setuptools' 'gstreamer0.10-base-plugins' 'gstreamer0.10-base>=0.10.12' 
'gstreamer0.10-good' 'libcanberra' 'pyxdg' 'shared-mime-info')
source=(http://launchpad.net/$pkgname/trunk/$pkgver/+download/$pkgname-$pkgver.tar.gz)
md5sums=('941b1fac0a93e2963afc192545caf320')
build() {
  cd $srcdir/$pkgname-$pkgver

  # python2 fix
  for file in $(find . -name '*.py' -print); do
    sed -i 's_#!.*/usr/bin/python_#!/usr/bin/python2_' $file
    sed -i 's_#!.*/usr/bin/env.*python_#!/usr/bin/env python2_' $file
  done

  python2 setup.py build
  python2 setup.py install --skip-build --root=$pkgdir
}
