# Contributor: damir <damir@archlinux.org>
# Maintainer: Thomas Dziedzic < gostrc at gmail >

pkgname=biopython
pkgver=1.55
pkgrel=1
pkgdesc='Freely available Python tools for computational molecular biology.'
arch=('i686' 'x86_64')
url='http://www.biopython.org'
license=('custom')
depends=('glibc' 'python2' 'python-numpy')
source=("http://www.biopython.org/DIST/${pkgname}-${pkgver}.tar.gz")
md5sums=('608f5d33a6f8967ba52c954e567ee6d6')

build() {
  cd ${pkgname}-${pkgver}

  yes | python2 setup.py build
}

package() {
  cd ${pkgname}-${pkgver}

  yes | python2 setup.py install --root=${pkgdir} --optimize=1

  install -D -m644 LICENSE \
    ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
