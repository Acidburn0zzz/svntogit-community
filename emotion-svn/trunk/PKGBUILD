# Contributor: Fabio Falcinelli <fabio.falcinelli@gmail.com>

pkgname=emotion-svn
pkgver=40500
pkgrel=1
pkgdesc="Enlightenment's audio and video integration"
arch=('i686' 'x86_64')
license=('BSD')
url="http://www.enlightenment.org"
makedepends=('subversion')
conflicts=('emotion')
provides=('emotion')
depends=('xine-lib' 'eina-svn' 'ecore-svn' 'evas-svn')
source=()
md5sums=()

_svntrunk="http://svn.enlightenment.org/svn/e/trunk/emotion"
_svnmod="emotion"

build() {
  cd $srcdir

  msg "Connecting to $_svntrunk SVN server...."
  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  cp -r $_svnmod $_svnmod-build
  cd $_svnmod-build

  ./autogen.sh --prefix=/usr --disable-emotion-test
  make
}

package() {
  cd $_svnmod-build
  make DESTDIR=$startdir/pkg install

  # install license files
  install -D -m644 $startdir/src/$_svnmod-build/COPYING $startdir/pkg/usr/share/licenses/$pkgname/COPYING
  install -D -m644 $startdir/src/$_svnmod-build/COPYING-PLAIN $startdir/pkg/usr/share/licenses/$pkgname/COPYING-PLAIN

  rm -r $srcdir/$_svnmod-build
}

