pkgname=texvc
pkgver=1.16.0
pkgrel=1
pkgdesc="tex to HTML/MathML/png converter used by mediawiki"
arch=(i686 x86_64)
url="http://www.mediawiki.org/"
license=("GPL")
depends=(imagemagick ghostscript texlive-core)
makedepends=('ocaml')
options=(force)
source=(http://noc.wikimedia.org/mediawiki-$pkgver.tar.gz)
md5sums=('0a2177b5eb4be2b5a585ab28070fec13')

build() {
  cd $srcdir
  tar xzf 1.16/mediawiki-$pkgver.tar.gz
  cd $srcdir/mediawiki-$pkgver/math
  make
  install -d -m 0755 $pkgdir/usr/bin
  install -m 0755 texvc $pkgdir/usr/bin
}
