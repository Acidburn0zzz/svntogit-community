# Id: $
# Maintainer: Andrea Scarpino <andrea@archlinux.org>
# Contributor: Lex Rivera <x-demon@x-demon.org>

pkgname=blogilo
pkgver=1.0
pkgrel=4
pkgdesc="A free software blogging client for KDE focused on simplicity and usability"
arch=('i686' 'x86_64')
url="http://blogilo.gnufolks.org/"
license=('GPL3')
depends=('kdebase-workspace')
makedepends=('cmake' 'automoc4')
install=${pkgname}.install
source=("http://bilbo.gnufolks.org/packages/bilbo-${pkgver}-src.tar.gz")
md5sums=('dcbb7e8392d13bebe94cd6405b2c86a9')

build() {
  cd $srcdir
  mkdir build
  cd build
  cmake ../bilbo -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr || return 1
  make || return 1
  make DESTDIR=$pkgdir install || return 1

  ln -sf /usr/bin/bilbo ${pkgdir}/usr/bin/blogilo
}
