pkgname=firefox-noscript
pkgver=11.0
pkgrel=1
pkgdesc="Extension for firefox which disables javascript"
arch=('any')
url="https://noscript.net/"
license=('GPL2')
groups=('firefox-addons')
makedepends=('unzip')
source=(https://secure.informaction.com/download/releases/noscript-${pkgver}.xpi)
noextract=("noscript-${pkgver}.xpi")
sha256sums=('d07ae7d37fdcc671f1538780e6e47bdcade09e9d556643c452b2637dedecf59e')
b2sums=('42feb3c0b35a5af6d2badc5a4ca46a2da0bf14d4051813c6baabb0e1900f85184db5efaf3d6f27ac78305a7903a344ac5b43136b41cfbb9eeb1595c764d70704')

package() {
  depends=('firefox')

  _extension_id="{73a6fe31-595d-460b-a920-fcc0f8843232}"
  _extension_dest="${pkgdir}/usr/lib/firefox/browser/extensions/${_extension_id}"
  install -Dm644 "${srcdir}"/noscript-${pkgver}.xpi "${_extension_dest}.xpi"
}
