# $Id: PKGBUILD,v 1.16 2009/07/09 06:33:04 ebelanger Exp $
# Maintainer: Eric Belanger <eric@archlinux.org>
# Contributor: pukyxd 

pkgname=wormux
pkgver=0.8.4
pkgrel=1
pkgdesc="Wormux is a clone of the worms game"
arch=('i686' 'x86_64')
url="http://www.wormux.org/"
license=('GPL')
depends=('libxml++' 'sdl_image' 'sdl_gfx>=2.0.19' 'sdl_ttf' 'sdl_mixer' 'sdl_net' 'curl>=7.16.2' 'gcc-libs' 'libxml2')
makedepends=('pkgconfig')
source=(http://download.gna.org/${pkgname}/${pkgname}-${pkgver}.tar.bz2)
md5sums=('0aed316799723173f2d6e242af312382')
sha1sums=('69572a74ea905d65e66380cfaa5ecdd80d056691')

build() { 
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
