pkgname=ksplash-engine-moodin
pkgver=0.4.2
pkgrel=2
pkgdesc="Splash Screen Engine for KDE"
arch=('i686' 'x86_64')
url="http://www.kde-look.org/content/show.php?content=25705"
depends=('qt' 'kdelibs>=3.3.0')
license=('GPL')
source=(http://mirrors.ludost.net/gentoo/distfiles/${pkgname}_${pkgver}.tar.gz)
md5sums=('322404928ed7e17a1c8708d4dc13b960')
options=('libtool')

build() {
  cd $startdir/src/moodin
  ./configure
  make || return 1
  make prefix=$startdir/pkg/opt/kde install
}
