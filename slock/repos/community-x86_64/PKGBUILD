# Contributor: Sebastian A. Liem <sebastian at liem dot se>

pkgname=slock
pkgver=0.9
pkgrel=5
pkgdesc="A simple screen locker for X"
arch=('i686' 'x86_64')
url="http://tools.suckless.org/slock"
license=('MIT')
depends=('libxext')
#http://dl.suckless.org/tools/$pkgname-$pkgver.tar.gz
source=("slock-$pkgver.tar.bz2::http://hg.suckless.org/slock/archive/$pkgver.tar.bz2")
md5sums=('f62e86fcb645da648068987aeb3303ac')

build() {
  cd `find $srcdir -type d -name slock-\*`
  make X11INC=/usr/include/X11 X11LIB=/usr/lib/X11
}

package() {
  cd `find $srcdir -type d -name slock-\*`

  make PREFIX=/usr DESTDIR=$pkgdir install
  install -m644 -D LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
