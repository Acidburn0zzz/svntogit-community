# Maintainer: Mikko Seppälä <t-r-a-y@mbnet.fi>
_pkgsourcename=qt3
pkgname=lib32-$_pkgsourcename
pkgver=3.3.8
pkgrel=11
pkgdesc="The QT gui toolkit."
arch=(x86_64)
url="http://www.trolltech.com/products/qt/index.html"
license=('GPL')
groups=('lib32')
depends=('lib32-libxmu' 'lib32-libxcursor' 'lib32-libxinerama' 'lib32-mesa' 'lib32-libxft' 'lib32-libxrandr')
install=$pkgname.install
source=(ftp://ftp.heanet.ie/mirrors/ftp.archlinux.org/extra/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz)
md5sums=('0d82f90302034b4ed98831efc3a6b882')

build() {
	cd $startdir/src
	mkdir -p $startdir/pkg/opt/lib32/opt/qt/lib
	cp -dp opt/qt/lib/*.so* $startdir/pkg/opt/lib32/opt/qt/lib
}
