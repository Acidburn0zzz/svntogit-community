# Contributor: Sven Salzwedel <sven_salzwedel@web.de>

pkgname=gtk2-docs
pkgver=2.24.10
pkgrel=1
pkgdesc="Documentation for gtk2 to be used in devhelp"
arch=("any")
license=('GPL')
url="http://library.gnome.org/devel/gtk/stable/"
source=(ftp://ftp.gnome.org/pub/gnome/sources/gtk+/2.24/gtk+-${pkgver}.tar.xz)
sha256sums=('ea56e31bb9d6e19ed2e8911f4c7ac493cb804431caa21cdcadae625d375a0e89')

build () {
  # Create destination dirs
  install -d ${pkgdir}/usr/share/devhelp/books/gtk
  install -d ${pkgdir}/usr/share/devhelp/books/gdk
  install -d ${pkgdir}/usr/share/devhelp/books/libgail-util

	# Install documentation to destination
  install -D -m 644 \
    ${srcdir}/gtk+-${pkgver}/docs/reference/gtk/html/* \
    ${pkgdir}/usr/share/devhelp/books/gtk

  install -D -m 644 \
    ${srcdir}/gtk+-${pkgver}/docs/reference/gdk/html/* \
    ${pkgdir}/usr/share/devhelp/books/gdk

  install -D -m 644 \
    ${srcdir}/gtk+-${pkgver}/docs/reference/libgail-util/html/* \
    ${pkgdir}/usr/share/devhelp/books/libgail-util
}

# vim:set ts=2 sw=2 et:
