# File bugs @ http://github.com/xenoterracide/AURpan/issues

pkgname=perl-config-general
pkgver=2.50
pkgrel=1
pkgdesc="Generic config file parser"
arch=('any')
url='http://search.cpan.org/dist/Config-General'
license=('PerlArtistic' 'GPL')
depends=('perl')
options=('!emptydirs')

source=(http://search.cpan.org/CPAN/authors/id/T/TL/TLINDEN/Config-General-${pkgver}.tar.gz)
md5sums=('18d9b00582e8943956b32f8a9ba23380')

build() {
 	export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    	PERL_AUTOINSTALL=--skipdeps                            \
    	PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    	PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
	
	cd "${srcdir}/Config-General-${pkgver}"
    	perl Makefile.PL INSTALLDIRS=vendor
    	make
}

package() {
	cd "${srcdir}/Config-General-${pkgver}"
	make DESTDIR="$pkgdir" install

        find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
