pkgname=deepin-polkit-agent
pkgver=0.0.9
pkgrel=1
pkgdesc='Deepin Polkit Agent'
arch=('i686' 'x86_64')
url="https://github.com/linuxdeepin/dde-polkit-agent"
license=('GPL3')
depends=('deepin-tool-kit' 'polkit-qt5')
makedepends=('qt5-tools')
source=("$pkgname-$pkgver.tar.gz::https://github.com/linuxdeepin/dde-polkit-agent/archive/$pkgver.tar.gz")
sha512sums=('939d5e6ec5398cd1ee81f08e25b28932419eb5d9a0deece0c45136d1e75d372e35b56b084d5faf43483c1b51debe66186ec6b5f60d9e5a5ebcd3ba0428e4ad80')

build() {
  cd dde-polkit-agent-$pkgver
  qmake-qt5 PREFIX=/usr
  make
}

package() {
  cd dde-polkit-agent-$pkgver
  make INSTALL_ROOT="$pkgdir" install
}
