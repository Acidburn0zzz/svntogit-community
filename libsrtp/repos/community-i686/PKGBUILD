# Contributor: Michal Krenek <mikos@sg1.cz>

pkgname=libsrtp
pkgver=1.4.4
pkgrel=1
pkgdesc="Open-source implementation of the Secure Real-time Transport Protocol (SRTP)"
url="http://srtp.sourceforge.net/srtp.html"
arch=('i686' 'x86_64')
license=('BSD')
options=()
source=(http://downloads.sourceforge.net/project/srtp/srtp/$pkgver/srtp-$pkgver.tgz)
md5sums=('9b449edb011c934ca97009e7e0566d22')

build() {
  cd $srcdir/srtp
  ./configure --prefix=/usr
  make CFLAGS="${CFLAGS} -fPIC"
  make DESTDIR=$pkgdir install
  install -Dm0644 LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
