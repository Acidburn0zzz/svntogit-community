_pkgsourcename=libxft
pkgname=lib32-$_pkgsourcename
pkgver=2.1.13
pkgrel=1
pkgdesc="FreeType-based font drawing library for X"
url="http://xorg.freedesktop.org/"
license=(custom)
arch=(x86_64)
groups=('lib32')
depends=('lib32-fontconfig' 'lib32-libxrender')
source=(ftp://ftp.archlinux.org/extra/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz)
md5sums=('eca6d53f45c6f784629fde8bd120db76')

build() {
	cd $startdir/src
	mkdir -p $startdir/pkg/opt/lib32/usr/lib
	cp -dp usr/lib/*.so* $startdir/pkg/opt/lib32/usr/lib
}
