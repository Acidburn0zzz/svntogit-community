pkgname=wordpress
pkgver=3.1.1
pkgrel=1
pkgdesc='Blog Tool and Publishing Platform'
arch=('any')
url='http://wordpress.org/'
license=('GPL')
depends=('php' 'mysql')
optdepends=('apache: Web server to run wordpress'
            'cherokee: Lightweight Web server to run wordpress')
install='wordpress.install'
source=("http://wordpress.org/${pkgname}-${pkgver}.tar.gz")
md5sums=('2ba255692cb76e2f7295be1cf3405270')

package() {
  install -d ${pkgdir}/srv/http

  cp -r ${srcdir}/wordpress ${pkgdir}/srv/http

  # make uploads work
  install -d -m775 ${pkgdir}/srv/http/wordpress/wp-content/uploads
  chown http:http ${pkgdir}/srv/http/wordpress/wp-content/uploads
}
