pkgname=wordpress
pkgver=3.3.1
pkgrel=1
pkgdesc='Blog tool and publishing platform'
arch=('any')
url='http://wordpress.org/'
license=('GPL')
depends=('php')
optdepends=('apache: Web server to run wordpress'
            'cherokee: Lightweight Web server to run wordpress'
            'mysql: Database server')
options=(emptydirs)
install=$pkgname.install
source=("http://wordpress.org/$pkgname-$pkgver.tar.gz")
sha256sums=('e884db6e551c155f022533b6653867b048088cd3cbcbfe546b404696dd960dc2')

package() {
  cd "$srcdir"

  install -d "$pkgdir/srv/http"
  cp -r wordpress "$pkgdir/srv/http"
}

