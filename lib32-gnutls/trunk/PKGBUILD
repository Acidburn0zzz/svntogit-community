_pkgsourcename=gnutls
pkgname=lib32-$_pkgsourcename
pkgver=2.8.3
pkgrel=1
pkgdesc="A library which provides a secure layer over a reliable transport layer"
url="http://www.gnu.org/software/gnutls/"
license=('GPL' 'LGPL')
arch=('x86_64')
groups=('lib32')
depends=('lib32-gcc' 'lib32-opencdk' 'lib32-libtasn1' 'lib32-lzo2' 'lib32-readline')
source=(http://mir.archlinux.fr/extra/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz)

build() {
	cd "$srcdir"
	mkdir -p "$pkgdir/opt/lib32/usr/lib"
	cp -dp usr/lib/*.so* "$pkgdir/opt/lib32/usr/lib"
}
md5sums=('a7250ddbd9ca46307392f672207c93e8')
