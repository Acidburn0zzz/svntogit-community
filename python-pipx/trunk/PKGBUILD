_pkgname=pipx
pkgname=python-$_pkgname
pkgver=0.15.5.0
pkgrel=1
pkgdesc='Install and Run Python Applications in Isolated Environments'
arch=('any')
url='https://github.com/pipxproject/pipx'
license=('MIT' 'BSD')
depends=('python' 'python-userpath' 'python-argcomplete')
makedepends=('python-setuptools')
checkdepends=('python-tox' 'python-pytest')
source=("$pkgname-$pkgver.tar.gz::$url/archive/$pkgver.tar.gz")
sha512sums=('ce6626d0550636743dca843104f12b628c6174cc4b804a10584c06cd9b9ceb792ee7ae5744d4495054d2a571bfb94260aa9e1736abc19463223716b0b488b4b3')

build() {
  cd $_pkgname-$pkgver

  python setup.py build
}

#check() {
#  cd $_pkgname-$pkgver
#
#  nox
#}

package() {
  cd $_pkgname-$pkgver

  python setup.py install --root="$pkgdir" --optimize=1 --skip-build

  install -Dm 644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}

