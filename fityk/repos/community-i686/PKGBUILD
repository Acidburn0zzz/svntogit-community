pkgname=fityk
pkgver=0.9.7
pkgrel=1
pkgdesc='A program for nonlinear fitting of analytical functions to data.'
arch=('i686' 'x86_64')
url='http://www.unipress.waw.pl/fityk/'
license=('GPL')
depends=('boost-libs' 'xylib' 'wxgtk' 'shared-mime-info')
makedepends=('boost')
options=('!libtool')
install=${pkgname}.install
source=("https://github.com/downloads/wojdyr/fityk/fityk-${pkgver}.tar.bz2")
md5sums=('89c98eda65a0852e5db344ed20a50a7b')

build() {
  cd ${pkgname}-${pkgver}

  # disable xyconvert because wxwidgets>=2.9 is needed (dev version) and it isn't standard with arch yet
  ./configure \
    --prefix=/usr \
    --disable-xyconvert

  make
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
}
