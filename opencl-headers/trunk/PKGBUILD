pkgname=opencl-headers
pkgver=1.1.20100715
_clbasever=1.1
pkgrel=3
pkgdesc='OpenCL (Open Computing Language) header files'
arch=('any')
url='http://www.khronos.org/registry/cl/'
license=('custom')
optdepends=('libcl: OpenCL library')
source=("http://www.khronos.org/registry/cl/api/${_clbasever}/cl_ext.h"
        "http://www.khronos.org/registry/cl/api/${_clbasever}/cl_gl_ext.h"
        "http://www.khronos.org/registry/cl/api/${_clbasever}/cl_gl.h"
        "http://www.khronos.org/registry/cl/api/${_clbasever}/cl.h"
        "http://www.khronos.org/registry/cl/api/${_clbasever}/cl.hpp"
        "http://www.khronos.org/registry/cl/api/${_clbasever}/cl_platform.h"
        "http://www.khronos.org/registry/cl/api/${_clbasever}/opencl.h"
        'LICENSE.txt')
sha1sums=('b1dd69faa731290b6770d15676b22d1c43ce187b'
          '1cab14eebd71aa90823dbc0d1346fc736cc696df'
          '87d43a39a196e43896e50532772c1c513a3a48e4'
          'a33a55a0187f3f7543e41f944ba38198c45b6886'
          '175a4f93aaff3b547310c90d26b134adb1502ebd'
          'c97a6e08aca4837daf3073d7a3938457a990b251'
          'd3cc5d61d2ad077085d1c60b4bdf8c03b093f159'
          '98abb35b2eca82d0fc19db6d28fcc7bd20be0655')

package() {
   cd "${srcdir}"
   install -dm755 "${pkgdir}/usr/include/CL"

   for h in $(ls -1 *.h *.hpp); do
      install -m 644 "${srcdir}/${h}" "${pkgdir}/usr/include/CL/"
   done

   install -D -m644 LICENSE.txt "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
