pkgname=lib32-libxss
pkgver=1.1.3
pkgrel=1
pkgdesc="X11 Screen Saver extension library"
arch=('x86_64')
url="http://xorg.freedesktop.org/"
license=('GPL')
depends=('lib32-libxext' 'scrnsaverproto')
groups=('lib32')
source=(ftp://ftp.ibiblio.org/pub/linux/distributions/archlinux/extra/os/i686/${pkgname/lib32-/}-${pkgver}-${pkgrel}-i686.pkg.tar.gz)
md5sums=('8459fdfbdec2fc68723212b0778cbd2f')

build() {
  mkdir -p $startdir/pkg/opt/lib32/usr/lib
  cp -rPf $startdir/src/usr/lib/*.so* $startdir/pkg/opt/lib32/usr/lib/
}
