#!/bin/bash

. /etc/conf.d/ipset

case $1 in
  start)
    ipset restore < "$CONFIG_FILE"
  ;;
  stop)
    [[ $SAVE_ON_STOP =~ [yY][eE][sS] ]] && $0 save
    ipset destroy
  ;;
  save)
    ipset save > "$CONFIG_FILE"
  ;;
  *)
    echo "usage: ${0##*/} {start|stop|save}" >&2
    exit 1
  ;;
esac

